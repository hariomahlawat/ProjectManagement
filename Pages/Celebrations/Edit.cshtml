@page "{id?}"
@model ProjectManagement.Pages.Celebrations.EditModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles="Admin,TA")]
@{
    ViewData["Title"] = Model.Input.Id == null ? "Add Celebration" : "Edit Celebration";
}

<h2 class="h5 fw-semibold mb-3">@ViewData["Title"]</h2>
<form method="post" class="card card-body">
    @Html.AntiForgeryToken()
    <div class="mb-2">
        <label asp-for="Input.EventType" class="form-label"></label>
        <select asp-for="Input.EventType" class="form-select">
            <option value="Birthday">Birthday</option>
            <option value="Anniversary">Anniversary</option>
        </select>
    </div>
    <div class="mb-2">
        <label asp-for="Input.Name" class="form-label"></label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-validation-for="Input.Name" class="text-danger small"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Input.SpouseName" class="form-label"></label>
        <input asp-for="Input.SpouseName" class="form-control" />
    </div>
    <div class="row mb-2">
        <div class="col">
            <label asp-for="Input.Day" class="form-label"></label>
            <input asp-for="Input.Day" class="form-control" type="number" />
        </div>
        <div class="col">
            <label asp-for="Input.Month" class="form-label"></label>
            <input asp-for="Input.Month" class="form-control" type="number" />
        </div>
        <div class="col">
            <label asp-for="Input.Year" class="form-label"></label>
            <input asp-for="Input.Year" class="form-control" type="number" />
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
