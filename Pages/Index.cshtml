@page
@model ProjectManagement.Pages.IndexModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ProjectManagement.Models.ApplicationUser> SignInManager

@{
    ViewData["Title"] = "PRISM ERP";
    var signedIn = SignInManager.IsSignedIn(User);
}

<!-- ===========================
     HERO
     =========================== -->
<section class="pm-hero pm-hero--prism py-2">
    <div class="container-xxl">
        <div class="row align-items-center g-4 g-lg-5">
            <!-- LEFT: Copy -->
            <div class="col-12 col-lg-6">

                <!-- Brand line -->
                <div class="d-flex align-items-center mb-3 pm-hero__brandline" aria-label="Branding">
                    <img src="~/img/logos/artrac.png"
                         class="pm-hero__brandlogo pm-hero__brandlogo--parent me-2"
                         alt="ARTRAC crest" />
                    <img src="~/img/logos/sdd.png"
                         class="pm-hero__brandlogo pm-hero__brandlogo--company me-2"
                         alt="Simulator Development Division logo" />
                    <span class="pm-hero__brandtext">Simulator Development Division</span>
                </div>

                @* <!-- Product name and taglines -->*@
                <h1 class="pm-hero__headline fw-semibold mb-2">PRISM ERP</h1>
                <p class="pm-hero__tagline fw-semibold mb-3">Plan. Track. Deliver.</p>

                <!-- Acronym expansion -->
                <p class="pm-hero__acronym text-uppercase mb-3">
                    PRISM  <strong>Project Reporting, Intelligence and Systems Management</strong>
                </p>

                <!-- Secondary tagline -->
                <p class="pm-hero__summary lead mb-4">
                    Project analytics, AI powered search and office automation in a single PRISM
                </p>

                <!-- Key bullets -->
                <ul class="pm-hero__highlights mb-4 ps-0">
                    <li class="d-flex align-items-start gap-2">
                        <i class="bi bi-check-circle-fill text-primary small"></i>
                        <span>End to end visibility from concept note to fielded simulator.</span>
                    </li>
                    <li class="d-flex align-items-start gap-2">
                        <i class="bi bi-check-circle-fill text-primary small"></i>
                        <span>ML based OCR and full text search across projects, reports and files.</span>
                    </li>
                    <li class="d-flex align-items-start gap-2">
                        <i class="bi bi-check-circle-fill text-primary small"></i>
                        <span>Structured approvals and digitised office workflows with audit ready trails.</span>
                    </li>
                </ul>

                <!-- CTAs -->
                <div class="d-flex flex-wrap gap-2 pm-hero__cta">
                    @if (signedIn)
                    {
                        <a class="btn btn-primary btn-lg" asp-page="/Dashboard/Index">
                            Go to your dashboard
                        </a>
                        <a class="btn btn-outline-secondary btn-lg"
                           asp-area="Common" asp-page="/Search/Index">
                            Open global search
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login">
                            Sign in
                        </a>
                        <a class="btn btn-outline-secondary btn-lg" href="#pillars">
                            Explore PRISM ERP
                        </a>
                    }
                </div>

            </div>

            <!-- RIGHT: Image, fills its column -->
            <div class="col-12 col-lg-6 d-flex justify-content-center justify-content-lg-end">
                <figure class="mb-0 w-100 d-flex justify-content-center justify-content-lg-end pm-hero__art-card">
                    <img src="~/img/prism.png"
                         class="img-fluid pm-hero__image--prism"
                         alt="PRISM ERP illustration showing project management, office automation and AI search" />
                </figure>
            </div>
        </div>
    </div>
</section>

<!-- ===========================
     THREE PILLARS
     =========================== -->
<section id="pillars" class="container-xxl pm-section pb-5">
    <div class="pm-section__header mb-4 text-center">
        <span class="pm-section__eyebrow">Platform pillars</span>
        <h2 class="pm-section__title h4 mb-2">Three pillars of PRISM ERP</h2>
        <p class="pm-section__subtitle text-muted mb-0">
            Project management, office automation and AI powered information retrieval on a single,
            secure platform.
        </p>
    </div>

    <div class="row g-3 g-lg-4 pm-pillars-grid">
        <!-- Pillar 1 -->
        <div class="col-12 col-md-4">
            <article class="pm-pillar-card pm-card pm-shadow h-100 p-3 p-lg-4 bg-white rounded-4">
                <div class="pm-pillar-card__icon mb-3 text-primary">
                    <span class="pm-pillar-card__icon-wrap"><i class="bi bi-kanban"></i></span>
                </div>
                <h3 class="pm-pillar-card__title h6 mb-2">Project management &amp; analytics</h3>
                <p class="pm-pillar-card__text text-muted mb-0 small">
                    Stage timelines, PDC tracking, lifecycle actions and role aware dashboards that
                    surface slippages, bottlenecks and completion signals at a glance.
                </p>
            </article>
        </div>

        <!-- Pillar 2 -->
        <div class="col-12 col-md-4">
            <article class="pm-pillar-card pm-card pm-shadow h-100 p-3 p-lg-4 bg-white rounded-4">
                <div class="pm-pillar-card__icon mb-3 text-primary">
                    <span class="pm-pillar-card__icon-wrap"><i class="bi bi-diagram-3"></i></span>
                </div>
                <h3 class="pm-pillar-card__title h6 mb-2">Office automation</h3>
                <p class="pm-pillar-card__text text-muted mb-0 small">
                    Digitised office procedures for FFC, ToT, IPR, training and other reports.
                    Structured workflows replace paper work and spreadsheets with auditable,
                    repeatable processes.
                </p>
            </article>
        </div>

        <!-- Pillar 3 -->
        <div class="col-12 col-md-4">
            <article class="pm-pillar-card pm-card pm-shadow h-100 p-3 p-lg-4 bg-white rounded-4">
                <div class="pm-pillar-card__icon mb-3 text-primary">
                    <span class="pm-pillar-card__icon-wrap"><i class="bi bi-search"></i></span>
                </div>
                <h3 class="pm-pillar-card__title h6 mb-2">Document repository &amp; AI search</h3>
                <p class="pm-pillar-card__text text-muted mb-0 small">
                    ML based OCR plus full text, metadata and tag search for a Google like experience
                    across scanned files, reports and project artefacts with ranked, relevance
                    aware results.
                </p>
            </article>
        </div>
    </div>
</section>

@section Scripts {
    <script type="module" src="~/js/utils/password-toggle.js"></script>
    <script type="module" src="~/js/utils/login-card.js"></script>
}
