@page "{id?}"
@model ProjectManagement.Pages.Activities.EditModel
@using ProjectManagement.Services.Activities
@{
    var isEdit = Model.IsEdit;
    ViewData["Title"] = isEdit ? "Edit Activity" : "Add Activity";
    var remainingSlots = Model.RemainingAttachmentSlots;
    var canUpload = remainingSlots > 0;
    var attachmentSummary = Model.AllowedAttachmentSummary;
    var maxSizeMb = Model.MaxAttachmentSizeMegabytes;
}

<div class="container-xxl">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Activities/Index">Activities</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(isEdit ? "Edit" : "Add")</li>
        </ol>
    </nav>

    <h1 class="h3 mb-3">@(isEdit ? "Edit activity" : "Add activity")</h1>

    <form method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="card mb-3">
            <div class="card-header">Activity details</div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="Input.Title" class="form-label"></label>
                    <input asp-for="Input.Title" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Input.ActivityTypeId" class="form-label"></label>
                        <select asp-for="Input.ActivityTypeId" class="form-select" asp-items="Model.ActivityTypeOptions"></select>
                        <span asp-validation-for="Input.ActivityTypeId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Input.Location" class="form-label"></label>
                        <input asp-for="Input.Location" class="form-control" />
                        <span asp-validation-for="Input.Location" class="text-danger"></span>
                    </div>
                </div>
                <div class="row g-3 mt-0">
                    <div class="col-md-6">
                        <label asp-for="Input.ScheduledStart" class="form-label"></label>
                        <input asp-for="Input.ScheduledStart" type="date" class="form-control" />
                        <span asp-validation-for="Input.ScheduledStart" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Input.ScheduledEnd" class="form-label"></label>
                        <input asp-for="Input.ScheduledEnd" type="date" class="form-control" />
                        <span asp-validation-for="Input.ScheduledEnd" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-3">
                    <label asp-for="Input.Description" class="form-label"></label>
                    <textarea asp-for="Input.Description" class="form-control" rows="4" maxlength="2000"></textarea>
                    <div class="form-text" data-char-count-for="Input_Description">0/2000</div>
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">Attachments</div>
            <div class="card-body">
                @if (canUpload)
                {
                    <div class="mb-3" data-doc-dropzone>
                        <label class="form-label" asp-for="Input.Files">Upload supporting files</label>
                        <div class="doc-request-drop border border-2 border-secondary-subtle rounded-3 p-4 text-center" data-doc-drop-target tabindex="0" role="button" aria-describedby="activity-upload-help">
                            <div class="fw-semibold" data-doc-drop-label>Drag &amp; drop files or browse</div>
                            <div class="text-muted small" data-doc-drop-filename></div>
                        </div>
                        <input asp-for="Input.Files"
                               class="form-control visually-hidden"
                               type="file"
                               multiple
                               accept="@Model.AttachmentAcceptAttribute"
                               data-doc-file
                               data-max-size="@Model.MaxAttachmentSizeBytes"
                               data-max-files="@remainingSlots"
                               data-allowed="@string.Join(',', Model.AllowedAttachmentContentTypes)"
                               data-extensions="@string.Join(',', Model.AllowedAttachmentExtensions)" />
                        <span asp-validation-for="Input.Files" class="text-danger"></span>
                        <div id="activity-upload-help" class="form-text">
                            You can upload up to @remainingSlots attachment@(remainingSlots == 1 ? string.Empty : "s") this session. Allowed types: @attachmentSummary. Maximum size: @maxSizeMb MB each.
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        This activity already has the maximum number of attachments. Remove existing files to add new ones.
                    </div>
                }
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-page="/Activities/Index" class="btn btn-outline-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">@(isEdit ? "Save changes" : "Create activity")</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/widgets/char-count.js" asp-append-version="true" defer></script>
    <script src="~/js/projects/document-requests.js" asp-append-version="true" defer></script>
}
