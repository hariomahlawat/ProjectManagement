@page
@model ProjectManagement.Pages.Projects.CompletedSummary.IndexModel
@using ProjectManagement.Models
@{
    ViewData["Title"] = "Completed projects - cost and proliferation";
    ViewData["UseFullWidth"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/components/pm-table.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/projects-completed-summary.css" asp-append-version="true" />
}

<div class="pm-page cs-page">
    @* SECTION: Page header *@
    <div class="cs-header">
        <h1 class="cs-title">Completed projects</h1>
        <div class="cs-subtitle">Cost and proliferation</div>
    </div>

    @* SECTION: Filters *@
    <div class="pm-card cs-card cs-filters">
        <div class="pm-card-header cs-card-header">
            <div>
                <div class="pm-card-title">
                    Filters
                    @if (Model.HasActiveFilters)
                    {
                        <span class="cs-filter-count">@Model.ActiveFilterCount</span>
                    }
                </div>
                <div class="pm-card-subtitle">Refine the list using category, status, year, and search.</div>
            </div>
        </div>

        <div class="pm-card-body cs-card-body">
            @* SECTION: Filter toolbar *@
            <div class="cs-filter-toolbar">
                <div class="cs-filter-summary">
                    @if (Model.HasActiveFilters)
                    {
                        <span class="cs-muted">Active filters: <strong>@Model.ActiveFilterCount</strong></span>
                    }
                    else
                    {
                        <span class="cs-muted">No filters applied.</span>
                    }
                </div>

                <div class="cs-filter-actions">
                    <button type="submit" form="csFiltersForm" class="btn btn-primary cs-btn">Filter</button>
                    @if (Model.HasActiveFilters)
                    {
                        <a asp-page="./Index"
                           asp-route-TechnicalCategoryId=""
                           asp-route-TechStatus=""
                           asp-route-Build=""
                           asp-route-AvailableForProliferation=""
                           asp-route-TotCompleted=""
                           asp-route-CompletedYear=""
                           asp-route-Search=""
                           asp-route-Sort="@Model.Sort"
                           asp-route-Dir="@Model.Dir"
                           class="btn btn-outline-secondary cs-btn cs-btn-clear">
                            Clear
                        </a>
                    }
                    <a asp-page="./Index"
                       asp-page-handler="Export"
                       asp-route-TechnicalCategoryId="@Model.TechnicalCategoryId"
                       asp-route-TechStatus="@Model.TechStatus"
                       asp-route-AvailableForProliferation="@Model.AvailableForProliferation"
                       asp-route-TotCompleted="@Model.TotCompleted"
                       asp-route-CompletedYear="@Model.CompletedYear"
                       asp-route-Search="@Model.Search"
                       asp-route-Build="@Model.Build"
                       asp-route-Sort="@Model.Sort"
                       asp-route-Dir="@Model.Dir"
                       class="btn btn-outline-secondary cs-btn">
                        Export
                    </a>
                </div>
            </div>

            <form method="get" id="csFiltersForm" class="cs-filter-form" novalidate>
                <div class="cs-grid">
                    <div class="cs-field cs-field--full">
                        <label asp-for="Search">Search by project name</label>
                        <input asp-for="Search"
                               class="form-control" />
                    </div>
                    <div class="cs-field">
                        <label asp-for="TechnicalCategoryId">Technical category</label>
                        <select asp-for="TechnicalCategoryId"
                                asp-items="Model.TechnicalCategoryOptions"
                                class="form-select"
                                data-auto-submit="change">
                        </select>
                    </div>
                    <div class="cs-field">
                        <label asp-for="TechStatus">Technology status</label>
                        <select asp-for="TechStatus"
                                asp-items="Model.TechStatusOptions"
                                class="form-select"
                                data-auto-submit="change">
                        </select>
                    </div>
                    <div class="cs-field">
                        <label class="form-label">Build type</label>
                        <div class="btn-group cs-switch" role="group" aria-label="Build type">
                            <input type="radio"
                                   class="btn-check"
                                   name="Build"
                                   id="build_all"
                                   value=""
                                   data-auto-submit="change"
                                   @(string.IsNullOrWhiteSpace(Model.Build) ? "checked" : null) />
                            <label class="btn btn-outline-secondary" for="build_all">All</label>

                            <input type="radio"
                                   class="btn-check"
                                   name="Build"
                                   id="build_new"
                                   value="New"
                                   data-auto-submit="change"
                                   @(string.Equals(Model.Build, "New", StringComparison.OrdinalIgnoreCase) ? "checked" : null) />
                            <label class="btn btn-outline-secondary" for="build_new">New</label>

                            <input type="radio"
                                   class="btn-check"
                                   name="Build"
                                   id="build_rebuild"
                                   value="Rebuild"
                                   data-auto-submit="change"
                                   @(string.Equals(Model.Build, "Rebuild", StringComparison.OrdinalIgnoreCase) ? "checked" : null) />
                            <label class="btn btn-outline-secondary" for="build_rebuild">Rebuild</label>
                        </div>
                    </div>
                    <div class="cs-field">
                        <label asp-for="AvailableForProliferation">Available for proliferation</label>
                        <select asp-for="AvailableForProliferation"
                                asp-items="Model.AvailabilityOptions"
                                class="form-select"
                                data-auto-submit="change">
                        </select>
                    </div>
                    <div class="cs-field">
                        <label asp-for="TotCompleted">ToT status</label>
                        <select asp-for="TotCompleted"
                                asp-items="Model.TotStatusOptions"
                                class="form-select"
                                data-auto-submit="change">
                        </select>
                    </div>
                    <div class="cs-field">
                        <label asp-for="CompletedYear">Completion year</label>
                        <input asp-for="CompletedYear"
                               class="form-control"
                               inputmode="numeric" />
                    </div>
                </div>

                @* SECTION: Persist sorting while applying filters *@
                <input type="hidden" asp-for="Sort" />
                <input type="hidden" asp-for="Dir" />
            </form>
        </div>
    </div>

    @* SECTION: Results *@
    <div class="pm-card cs-card cs-results">
        <div class="pm-card-header cs-card-header">
            <div>
                <div class="pm-card-title">Results <span class="cs-results-count">(@Model.Items.Count)</span></div>
                <div class="pm-card-subtitle">Completed projects matching the applied filters.</div>
            </div>
        </div>

        <div class="pm-card-body cs-card-body cs-card-body--flush">
            @if (Model.Items.Count == 0)
            {
                <div class="cs-empty">No completed projects matched the selected filters.</div>
            }
            else
            {
                <div class="cs-table-wrap">
                    <table class="pm-table pm-table-sm cs-table cs-table--fixed">
                        @* SECTION: Column sizing *@
                        <colgroup>
                            <col class="cs-col-project" />
                            <col class="cs-col-year" />
                            <col class="cs-col-rd" />
                            <col class="cs-col-prod" />
                            <col class="cs-col-lpp" />
                            <col class="cs-col-tech" />
                            <col class="cs-col-avail" />
                            <col class="cs-col-tot" />
                            <col class="cs-col-remarks" />
                            @if (Model.CanEdit)
                            {
                                <col class="cs-col-actions" />
                            }
                        </colgroup>
                        <thead>
                            <tr>
                                <th scope="col">
                                    <a asp-page="./Index"
                                       asp-route-TechnicalCategoryId="@Model.TechnicalCategoryId"
                                       asp-route-TechStatus="@Model.TechStatus"
                                       asp-route-AvailableForProliferation="@Model.AvailableForProliferation"
                                       asp-route-TotCompleted="@Model.TotCompleted"
                                       asp-route-CompletedYear="@Model.CompletedYear"
                                       asp-route-Search="@Model.Search"
                                       asp-route-Build="@Model.Build"
                                       asp-route-Sort="name"
                                       asp-route-Dir="@(Model.NextSortDirection("name"))">
                                        Project @Model.GetSortIndicator("name")
                                    </a>
                                </th>
                                <th scope="col" class="cs-num text-end">
                                    <a asp-page="./Index"
                                       asp-route-TechnicalCategoryId="@Model.TechnicalCategoryId"
                                       asp-route-TechStatus="@Model.TechStatus"
                                       asp-route-AvailableForProliferation="@Model.AvailableForProliferation"
                                       asp-route-TotCompleted="@Model.TotCompleted"
                                       asp-route-CompletedYear="@Model.CompletedYear"
                                       asp-route-Search="@Model.Search"
                                       asp-route-Build="@Model.Build"
                                       asp-route-Sort="year"
                                       asp-route-Dir="@(Model.NextSortDirection("year"))">
                                        Completion year @Model.GetSortIndicator("year")
                                    </a>
                                </th>
                                <th scope="col" class="cs-num text-end">
                                    <a asp-page="./Index"
                                       asp-route-TechnicalCategoryId="@Model.TechnicalCategoryId"
                                       asp-route-TechStatus="@Model.TechStatus"
                                       asp-route-AvailableForProliferation="@Model.AvailableForProliferation"
                                       asp-route-TotCompleted="@Model.TotCompleted"
                                       asp-route-CompletedYear="@Model.CompletedYear"
                                       asp-route-Search="@Model.Search"
                                       asp-route-Build="@Model.Build"
                                       asp-route-Sort="rd"
                                       asp-route-Dir="@(Model.NextSortDirection("rd"))">
                                        R&amp;D / L1 cost @Model.GetSortIndicator("rd")
                                        <span class="cs-th-sub">(lakh)</span>
                                    </a>
                                </th>
                                <th scope="col" class="cs-num text-end">
                                    <a asp-page="./Index"
                                       asp-route-TechnicalCategoryId="@Model.TechnicalCategoryId"
                                       asp-route-TechStatus="@Model.TechStatus"
                                       asp-route-AvailableForProliferation="@Model.AvailableForProliferation"
                                       asp-route-TotCompleted="@Model.TotCompleted"
                                       asp-route-CompletedYear="@Model.CompletedYear"
                                       asp-route-Search="@Model.Search"
                                       asp-route-Build="@Model.Build"
                                       asp-route-Sort="prod"
                                       asp-route-Dir="@(Model.NextSortDirection("prod"))">
                                        Approx Prod cost @Model.GetSortIndicator("prod")
                                        <span class="cs-th-sub">(lakh)</span>
                                    </a>
                                </th>
                                <th scope="col" class="cs-th-lpp">
                                    <a asp-page="./Index"
                                       asp-route-TechnicalCategoryId="@Model.TechnicalCategoryId"
                                       asp-route-TechStatus="@Model.TechStatus"
                                       asp-route-AvailableForProliferation="@Model.AvailableForProliferation"
                                       asp-route-TotCompleted="@Model.TotCompleted"
                                       asp-route-CompletedYear="@Model.CompletedYear"
                                       asp-route-Search="@Model.Search"
                                       asp-route-Build="@Model.Build"
                                       asp-route-Sort="lpp"
                                       asp-route-Dir="@(Model.NextSortDirection("lpp"))">
                                        Latest LPP @Model.GetSortIndicator("lpp")
                                    </a>
                                </th>
                                <th scope="col">
                                    <a asp-page="./Index"
                                       asp-route-TechnicalCategoryId="@Model.TechnicalCategoryId"
                                       asp-route-TechStatus="@Model.TechStatus"
                                       asp-route-AvailableForProliferation="@Model.AvailableForProliferation"
                                       asp-route-TotCompleted="@Model.TotCompleted"
                                       asp-route-CompletedYear="@Model.CompletedYear"
                                       asp-route-Search="@Model.Search"
                                       asp-route-Build="@Model.Build"
                                       asp-route-Sort="tech"
                                       asp-route-Dir="@(Model.NextSortDirection("tech"))">
                                        Tech status @Model.GetSortIndicator("tech")
                                    </a>
                                </th>
                                <th scope="col">
                                    <a asp-page="./Index"
                                       asp-route-TechnicalCategoryId="@Model.TechnicalCategoryId"
                                       asp-route-TechStatus="@Model.TechStatus"
                                       asp-route-AvailableForProliferation="@Model.AvailableForProliferation"
                                       asp-route-TotCompleted="@Model.TotCompleted"
                                       asp-route-CompletedYear="@Model.CompletedYear"
                                       asp-route-Search="@Model.Search"
                                       asp-route-Build="@Model.Build"
                                       asp-route-Sort="avail"
                                       asp-route-Dir="@(Model.NextSortDirection("avail"))">
                                        Available @Model.GetSortIndicator("avail")
                                    </a>
                                </th>
                                <th scope="col">
                                    <a asp-page="./Index"
                                       asp-route-TechnicalCategoryId="@Model.TechnicalCategoryId"
                                       asp-route-TechStatus="@Model.TechStatus"
                                       asp-route-AvailableForProliferation="@Model.AvailableForProliferation"
                                       asp-route-TotCompleted="@Model.TotCompleted"
                                       asp-route-CompletedYear="@Model.CompletedYear"
                                       asp-route-Search="@Model.Search"
                                       asp-route-Build="@Model.Build"
                                       asp-route-Sort="tot"
                                       asp-route-Dir="@(Model.NextSortDirection("tot"))">
                                        ToT status @Model.GetSortIndicator("tot")
                                    </a>
                                </th>
                                <th scope="col" class="cs-th-remarks">Remarks</th>
                                @if (Model.CanEdit)
                                {
                                    <th scope="col" class="cs-actions-col">Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="cs-project-cell">
                                        <a asp-page="/Projects/Overview"
                                           asp-route-id="@item.ProjectId"
                                           class="cs-link pm-cell-clamp-2 cs-project-cell"
                                           title="@(string.IsNullOrWhiteSpace(item.Remarks) ? item.Name : $"{item.Name} | {item.Remarks}")">
                                            @item.Name
                                        </a>
                                    </td>
                                    <td class="cs-num">@(item.CompletedYear?.ToString() ?? "â€”")</td>
                                    <td class="cs-num text-end">@(item.RdCostLakhs?.ToString("0.##"))</td>
                                    <td class="cs-num text-end">@(item.ApproxProductionCost?.ToString("0.##"))</td>
                                    <td class="cs-muted cs-td-lpp">
                                        @if (item.LatestLpp is { } latest)
                                        {
                                            var label = latest.Amount.ToString("0.##") + " lakh";
                                            if (latest.Date.HasValue)
                                            {
                                                label += " (" + latest.Date.Value.ToString("MMM yyyy") + ")";
                                            }
                                            @label
                                        }
                                        else
                                        {
                                            <span>No LPP recorded</span>
                                        }
                                    </td>
                                    <td>@item.TechStatus</td>
                                    <td>
                                        @if (item.AvailableForProliferation == true)
                                        {
                                            <span class="cs-pill cs-pill--yes">Yes</span>
                                        }
                                        else if (item.AvailableForProliferation == false)
                                        {
                                            <span class="cs-pill cs-pill--no">No</span>
                                        }
                                        else
                                        {
                                            <span class="cs-pill cs-pill--muted">Not recorded</span>
                                        }
                                    </td>
                                    <td class="cs-td-tot">
                                        @if (item.TotStatus == ProjectTotStatus.Completed)
                                        {
                                            <span class="cs-pill cs-pill--yes">Completed</span>
                                        }
                                        else if (item.TotStatus.HasValue)
                                        {
                                            <span class="cs-pill cs-pill--no">Not completed</span>
                                        }
                                        else
                                        {
                                            <span class="cs-pill cs-pill--muted">Not recorded</span>
                                        }
                                    </td>
                                    <td class="cs-remarks cs-td-remarks">@item.Remarks</td>
                                    @if (Model.CanEdit)
                                    {
                                        <td class="cs-actions-col">
                                            <a asp-page="./Edit"
                                               asp-route-id="@item.ProjectId"
                                               class="btn btn-outline-primary btn-sm cs-btn-sm">
                                                Edit
                                            </a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/projects-completed-summary.js" asp-append-version="true"></script>
}
