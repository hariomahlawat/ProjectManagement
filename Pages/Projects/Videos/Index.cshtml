@page "/Projects/{id:int}/Videos"
@model ProjectManagement.Pages.Projects.Videos.IndexModel
@using System

@functions {
    static string FormatSize(long bytes)
    {
        if (bytes <= 0)
        {
            return "0 B";
        }

        string[] units = { "B", "KB", "MB", "GB", "TB" };
        var order = (int)Math.Min(units.Length - 1, Math.Log(bytes, 1024));
        var value = bytes / Math.Pow(1024, order);
        return $"{value:0.##} {units[order]}";
    }
}
@{
    ViewData["Title"] = $"Manage videos · {Model.Project.Name}";
}

<div class="container py-4">
    <nav aria-label="Breadcrumb" class="mb-3">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-page="/Projects/Index">Projects</a></li>
            <li class="breadcrumb-item"><a asp-page="/Projects/Overview" asp-route-id="@Model.Project.Id">@Model.Project.Name</a></li>
            <li class="breadcrumb-item active" aria-current="page">Videos</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Manage videos</h1>
            <p class="text-muted mb-0">Upload and curate videos that appear on the project overview page.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-page="/Projects/Overview" asp-route-id="@Model.Project.Id">Back to overview</a>
            <a class="btn btn-primary" asp-page="/Projects/Videos/Upload" asp-route-id="@Model.Project.Id">Upload video</a>
        </div>
    </div>

    @if (TempData.ContainsKey("Flash"))
    {
        <div class="alert alert-success" role="status">@TempData["Flash"]</div>
    }
    else if (TempData.ContainsKey("Error"))
    {
        <div class="alert alert-danger" role="status">@TempData["Error"]</div>
    }

    @if (Model.Videos.Count == 0)
    {
        <div class="alert alert-info" role="status">
            <p class="mb-1 fw-semibold">No videos yet</p>
            <p class="mb-0">Upload your first project video to spotlight progress or share demonstrations.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <colgroup>
                    <col style="width: 50%;" />
                    <col style="width: 15%;" />
                    <col style="width: 20%;" />
                    <col style="width: 15%;" />
                </colgroup>
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col" class="text-nowrap">Size</th>
                        <th scope="col" class="text-nowrap">Uploaded</th>
                        <th scope="col" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var video in Model.Videos)
                {
                    var isFeatured = Model.Project.FeaturedVideoId == video.Id;
                    <tr>
                        <th scope="row">
                            <div class="d-flex flex-column">
                                <span class="fw-semibold">@(!string.IsNullOrWhiteSpace(video.Title) ? video.Title : System.IO.Path.GetFileNameWithoutExtension(video.OriginalFileName))</span>
                                <span class="text-muted small">@video.OriginalFileName</span>
                                @if (isFeatured)
                                {
                                    <span class="badge text-bg-success mt-1">Featured</span>
                                }
                            </div>
                        </th>
                        <td class="text-nowrap">@(video.FileSize > 0 ? FormatSize(video.FileSize) : "–")</td>
                        <td class="text-nowrap">@video.CreatedUtc.ToString("g")</td>
                        <td class="text-end">
                            <div class="d-flex justify-content-end gap-2">
                                <form method="post" asp-page-handler="SetFeatured" asp-route-id="@Model.Project.Id" class="d-inline">
                                    <input type="hidden" name="videoId" value="@video.Id" />
                                    <input type="hidden" name="rowVersion" value="@Model.ProjectRowVersion" />
                                    <input type="hidden" name="featured" value="@(!isFeatured)" />
                                    <button type="submit" class="btn btn-sm @(isFeatured ? "btn-outline-secondary" : "btn-outline-primary")">
                                        @(isFeatured ? "Unfeature" : "Set as featured")
                                    </button>
                                </form>
                                <form method="post" asp-page-handler="Remove" asp-route-id="@Model.Project.Id" class="d-inline" onsubmit="return confirm('Remove this video?');">
                                    <input type="hidden" name="videoId" value="@video.Id" />
                                    <input type="hidden" name="rowVersion" value="@Model.ProjectRowVersion" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>
