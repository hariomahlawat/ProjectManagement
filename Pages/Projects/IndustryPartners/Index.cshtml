@page "/projects/industry-partners"
@model ProjectManagement.Pages.Projects.IndustryPartners.IndexModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "Industry Partners";

    var directoryModel = new ProjectManagement.ViewModels.Projects.IndustryPartners.DirectoryListViewModel
    {
        Partners = Model.Partners,
        SelectedPartnerId = Model.PartnerId,
        TotalCount = Model.TotalCount
    };
}

@section Styles {
    <link rel="stylesheet" href="~/css/industry-partners.css" asp-append-version="true" />
}

@* Section: Global header *@
<header class="industry-partners-header" aria-label="Industry Partners header">
    <div class="container-xxl">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h3 mb-1">Industry Partners</h1>
                <p class="text-muted mb-0">Institutional partner records and project associations.</p>
            </div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPartnerModal">
                + Add Industry Partner
            </button>
        </div>
    </div>
</header>

@* Section: Page layout *@
<div class="container-xxl industry-partners-layout">
    <div class="industry-partners-grid">
        @* Section: Directory panel *@
        <aside class="industry-partners-directory" aria-label="Industry partner directory">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="get" class="mb-0">
                        @* Section: Search *@
                        <div class="mb-3">
                            <label class="form-label small text-muted" for="partnerSearch">Search</label>
                            <input id="partnerSearch" name="q" class="form-control" type="search" value="@Model.Q" placeholder="Search partner name" aria-label="Search partner name" />
                        </div>

                        @* Section: Filters *@
                        <div class="industry-partners-filters mb-3">
                            <div>
                                <label class="form-label small text-muted" for="partnerTypeFilter">Partner Type</label>
                                <select id="partnerTypeFilter" name="type" class="form-select">
                                    <option value="" selected="@(string.IsNullOrWhiteSpace(Model.Type) ? "selected" : null)">All</option>
                                    <option value="DPSU" selected="@(Model.Type == "DPSU" ? "selected" : null)">DPSU</option>
                                    <option value="Private" selected="@(Model.Type == "Private" ? "selected" : null)">Private</option>
                                    <option value="Startup" selected="@(Model.Type == "Startup" ? "selected" : null)">Startup</option>
                                    <option value="Academic" selected="@(Model.Type == "Academic" ? "selected" : null)">Academic</option>
                                    <option value="Foreign OEM" selected="@(Model.Type == "Foreign OEM" ? "selected" : null)">Foreign OEM</option>
                                    <option value="Other" selected="@(Model.Type == "Other" ? "selected" : null)">Other</option>
                                </select>
                            </div>
                            <div>
                                <label class="form-label small text-muted" for="partnerStatusFilter">Status</label>
                                <select id="partnerStatusFilter" name="status" class="form-select">
                                    <option value="" selected="@(string.IsNullOrWhiteSpace(Model.Status) ? "selected" : null)">All</option>
                                    <option value="Active" selected="@(Model.Status == "Active" ? "selected" : null)">Active</option>
                                    <option value="Inactive" selected="@(Model.Status == "Inactive" ? "selected" : null)">Inactive</option>
                                </select>
                            </div>
                        </div>

                        @* Section: Sort *@
                        <div class="mb-3">
                            <label class="form-label small text-muted" for="partnerSort">Sort by</label>
                            <select id="partnerSort" name="sort" class="form-select">
                                <option value="name" selected="@(string.IsNullOrWhiteSpace(Model.Sort) || Model.Sort == "name" ? "selected" : null)">Name (Aâ€“Z)</option>
                                <option value="updated" selected="@(Model.Sort == "updated" ? "selected" : null)">Recently Updated</option>
                                <option value="projects" selected="@(Model.Sort == "projects" ? "selected" : null)">Most Associated Projects</option>
                            </select>
                        </div>

                        @* Section: Directory actions *@
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <span class="text-muted small">@Model.TotalCount partners</span>
                            <a class="text-decoration-none small" href="/projects/industry-partners">Clear filters</a>
                        </div>

                        @* Section: Apply button *@
                        <div>
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Apply Filters</button>
                        </div>
                    </form>
                </div>

                @* Section: Directory list *@
                <div id="industryPartnerDirectoryList">
                    @await Html.PartialAsync("Projects/IndustryPartners/_Partials/_DirectoryList", directoryModel)
                </div>
            </div>
        </aside>

        @* Section: Detail panel *@
        <section class="industry-partners-detail" aria-live="polite">
            <div id="industryPartnerDetail">
                @await Html.PartialAsync("Projects/IndustryPartners/_Partials/_PartnerDetail", Model.SelectedPartner)
            </div>
        </section>
    </div>
</div>

@* Section: Modals and drawers *@
@await Html.PartialAsync("Projects/IndustryPartners/_Modals/_CreatePartnerModal")
@await Html.PartialAsync("Projects/IndustryPartners/_Modals/_ArchivePartnerModal")
@await Html.PartialAsync("Projects/IndustryPartners/_Modals/_AddContactModal")
@await Html.PartialAsync("Projects/IndustryPartners/_Modals/_DeleteContactModal")
@await Html.PartialAsync("Projects/IndustryPartners/_Modals/_AddDocumentModal")
@await Html.PartialAsync("Projects/IndustryPartners/_Modals/_RemoveDocumentModal")
@await Html.PartialAsync("Projects/IndustryPartners/_Modals/_AddNoteModal")
@await Html.PartialAsync("Projects/IndustryPartners/_Modals/_LinkProjectDrawer", Model.LinkProjectDrawer)
