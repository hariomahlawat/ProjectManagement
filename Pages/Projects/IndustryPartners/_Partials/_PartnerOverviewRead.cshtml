@model ProjectManagement.ViewModels.Projects.IndustryPartners.PartnerDetailViewModel

@* Section: Overview card *@
<div class="card shadow-sm mb-3">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div>
            <h3 class="h6 mb-0">Overview</h3>
            <div class="text-muted small">Read-only profile summary</div>
        </div>
        <button type="button"
                class="btn btn-sm btn-outline-primary"
                hx-get="/projects/industry-partners?handler=OverviewEditPartial&partnerId=@Model.Id"
                hx-target="#partnerOverviewCardBody"
                hx-swap="innerHTML">
            Edit
        </button>
    </div>
    <div id="partnerOverviewCardBody" class="card-body">
        @await Html.PartialAsync("Projects/IndustryPartners/_Partials/_PartnerOverviewReadBody", Model)
    </div>
</div>
