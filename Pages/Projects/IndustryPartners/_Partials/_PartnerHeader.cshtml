@model ProjectManagement.ViewModels.Projects.IndustryPartners.PartnerDetailViewModel

@* Section: Partner header card *@
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
            <div>
                <h2 class="h4 mb-1">@Model.DisplayName</h2>
                <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge bg-light text-dark border">@Model.PartnerType</span>
                    <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">@Model.Status</span>
                </div>
                <div class="text-muted">@Model.LocationSummary</div>
            </div>
            @if (Model.CanManage)
            {
                <div class="d-flex flex-wrap gap-2">
                    @if (Model.Status == "Active")
                    {
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#archivePartnerModal">Archive</button>
                    }
                    else
                    {
                        <form method="post"
                              class="d-inline"
                              hx-post="/projects/industry-partners?handler=ReactivatePartner"
                              hx-target="#industryPartnerDetail"
                              hx-swap="innerHTML"
                              hx-include="#industryPartnerId">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-secondary">Reactivate</button>
                        </form>
                    }
                </div>
            }
        </div>
    </div>
</div>
