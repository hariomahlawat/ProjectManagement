@using ProjectManagement.ViewModels.Projects.IndustryPartners
@model ProjectManagement.ViewModels.Projects.IndustryPartners.PartnerDetailViewModel

@* Section: Associations table *@
<div class="table-responsive">
    <table class="table table-sm mb-0">
        <thead class="table-light">
            <tr>
                <th scope="col">Project Name</th>
                <th scope="col">Role</th>
                <th scope="col">Association Status</th>
                <th scope="col">Notes</th>
                @if (Model.CanManage)
                {
                    <th scope="col" class="text-end">Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @if (Model.ProjectAssociations.Count == 0)
            {
                <tr>
                    <td colspan="@(Model.CanManage ? 5 : 4)" class="text-center text-muted py-4">No project associations recorded.</td>
                </tr>
            }
            else
            {
                foreach (var association in Model.ProjectAssociations)
                {
                    var unlinkModalId = $"unlinkAssociationModal-{association.AssociationId}";
                    <tr>
                        <td><a href="@association.ProjectLink">@association.ProjectName</a></td>
                        <td>@IndustryPartnerAssociationRoles.GetLabel(association.Role)</td>
                        <td>@association.AssociationStatus</td>
                        <td>@(string.IsNullOrWhiteSpace(association.Notes) ? "â€”" : association.Notes)</td>
                        @if (Model.CanManage)
                        {
                            <td class="text-end">
                                @if (association.IsActive)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#@unlinkModalId">Unlink</button>
                                }
                                else
                                {
                                    <span class="text-muted small">Inactive</span>
                                }
                            </td>
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@* Section: Unlink association modals *@
@if (Model.CanManage)
{
    foreach (var association in Model.ProjectAssociations)
    {
        if (!association.IsActive)
        {
            continue;
        }

        var unlinkModalId = $"unlinkAssociationModal-{association.AssociationId}";
        <div class="modal fade" id="@unlinkModalId" tabindex="-1" aria-labelledby="@($"{unlinkModalId}Label")" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post"
                          hx-post="/projects/industry-partners?handler=DeactivateAssociation"
                          hx-target="#industryPartnerDetail"
                          hx-swap="innerHTML">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="associationId" value="@association.AssociationId" />
                        <input type="hidden" name="partnerId" value="@Model.Id" />
                        <div class="modal-header">
                            <h5 class="modal-title" id="@($"{unlinkModalId}Label")">Unlink Association</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            This will deactivate the association for audit history. Confirm to proceed.
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger" data-bs-dismiss="modal">Deactivate</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
