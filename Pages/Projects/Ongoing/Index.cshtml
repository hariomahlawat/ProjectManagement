@page
@using ProjectManagement.Models.Execution
@using ProjectManagement.Models.Stages
@model ProjectManagement.Pages.Projects.Ongoing.IndexModel
@{
    ViewData["Title"] = "Ongoing projects – progress & timelines";
}

<h1 class="mb-3">Ongoing projects – progress & timelines</h1>

<form method="get" class="row g-3 align-items-end mb-4" novalidate>
    <div class="col-12 col-md-3">
        <label asp-for="ProjectCategoryId" class="form-label">Project category</label>
        <select asp-for="ProjectCategoryId"
                asp-items="Model.ProjectCategoryOptions"
                class="form-select form-select-sm"></select>
    </div>
    <div class="col-12 col-md-3">
        <label asp-for="ProjectOfficerId" class="form-label">Project officer</label>
        <select asp-for="ProjectOfficerId"
                asp-items="Model.ProjectOfficerOptions"
                class="form-select form-select-sm"></select>
    </div>
    <div class="col-12 col-md-3">
        <label asp-for="Search" class="form-label">Search by project name</label>
        <input asp-for="Search" class="form-control form-control-sm" />
    </div>
    <div class="col-12 col-md-3 d-flex gap-2 justify-content-md-end">
        <button type="submit" class="btn btn-sm btn-primary">Filter</button>
        <a asp-page="./Index"
           asp-page-handler="Export"
           asp-route-ProjectCategoryId="@Model.ProjectCategoryId"
           asp-route-ProjectOfficerId="@Model.ProjectOfficerId"
           asp-route-Search="@Model.Search"
           class="btn btn-sm btn-outline-secondary">Export</a>
    </div>
</form>

@if (Model.Items.Count == 0)
{
    <p class="text-muted">No ongoing projects matched the selected filters.</p>
}
else
{
    <div class="row g-3">
        @foreach (var item in Model.Items)
        {
            // locate current stage
            var currentIdx = -1;
            for (var i = 0; i < item.Stages.Count; i++)
            {
                if (item.Stages[i].IsCurrent)
                {
                    currentIdx = i;
                    break;
                }
            }
            if (currentIdx == -1)
            {
                currentIdx = 0;
            }

            <div class="col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h2 class="h6 mb-1">
                                    <a asp-page="/Projects/Overview" asp-route-id="@item.ProjectId">
                                        @item.ProjectName
                                    </a>
                                </h2>
                                <p class="text-muted mb-0">
                                    @item.ProjectCategoryName
                                    @if (!string.IsNullOrWhiteSpace(item.LeadPoName))
                                    {
                                        @: • Officer: @item.LeadPoName
                                    }
                                </p>
                            </div>
                        </div>

                        <!-- Current stage -->
                        <p class="mb-1">
                            <strong>Current stage:</strong>
                            @{
                                var cur = item.Stages[currentIdx];
                                if (cur.Status == StageStatus.Completed)
                                {
                                    @cur.Name
                                    if (cur.ActualCompletedOn.HasValue)
                                    {
                                        @: (@cur.ActualCompletedOn.Value.ToString("dd-MMM-yyyy"))
                                    }
                                    else
                                    {
                                        <span class="text-muted">date not available</span>
                                    }
                                }
                                else
                                {
                                    @cur.Name
                                    if (cur.PlannedDue.HasValue)
                                    {
                                        @: (PDC: @cur.PlannedDue.Value.ToString("dd-MMM-yyyy"))
                                    }
                                    else
                                    {
                                        <span class="text-muted">PDC: N/A</span>
                                    }
                                }
                            }
                        </p>

                        <!-- Last completed -->
                        <p class="mb-3">
                            <strong>Last completed:</strong>
                            @if (!string.IsNullOrEmpty(item.LastCompletedStageName))
                            {
                                @item.LastCompletedStageName
                                if (item.LastCompletedStageDate.HasValue)
                                {
                                    @: (@item.LastCompletedStageDate.Value.ToString("dd-MMM-yyyy"))
                                }
                                else
                                {
                                    <span class="text-muted">date not available</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </p>

                        <!-- Timeline -->
                        <div class="d-flex align-items-center flex-wrap gap-2 mb-3">
                            @{
                                for (var i = 0; i <= currentIdx; i++)
                                {
                                    var stage = item.Stages[i];
                                    var isCompleted = stage.Status == StageStatus.Completed;
                                    var isCurrent = i == currentIdx;

                                    if (isCompleted)
                                    {
                                        <div class="d-flex align-items-center gap-1">
                                            <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center"
                                                 style="width:42px;height:42px;font-size:.7rem;">
                                                @stage.Code
                                            </div>
                                            <div class="small">
                                                @if (stage.ActualCompletedOn.HasValue)
                                                {
                                                    @stage.ActualCompletedOn.Value.ToString("dd-MMM-yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">date NA</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else if (isCurrent)
                                    {
                                        <div class="d-flex align-items-center gap-1">
                                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                                                 style="width:42px;height:42px;font-size:.7rem;">
                                                @stage.Code
                                            </div>
                                            <div class="small">
                                                @if (stage.PlannedDue.HasValue)
                                                {
                                                    <span>PDC: @stage.PlannedDue.Value.ToString("dd-MMM-yyyy")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">PDC: N/A</span>
                                                }
                                            </div>
                                        </div>
                                    }

                                    if (i < currentIdx)
                                    {
                                        var next = item.Stages[i + 1];
                                        int? days = null;

                                        if (stage.ActualCompletedOn.HasValue && next.ActualCompletedOn.HasValue)
                                        {
                                            days = (
                                            next.ActualCompletedOn.Value.ToDateTime(TimeOnly.MinValue)
                                            - stage.ActualCompletedOn.Value.ToDateTime(TimeOnly.MinValue)
                                            ).Days;
                                        }

                                        <div class="d-flex align-items-center gap-1">
                                            <div style="width:50px;height:2px;background:rgba(0,0,0,.15);"></div>
                                            <div class="badge bg-light text-muted border small">
                                                @(days.HasValue ? $"{days.Value} days" : "—")
                                            </div>
                                            <div style="width:4px;height:2px;"></div>
                                        </div>
                                    }
                                }

                                if (currentIdx < item.Stages.Count - 1)
                                {
                                    <span class="text-muted small ms-1">… more stages</span>
                                }
                            }
                        </div>

                        <!-- Recent internal remarks -->
                        <div class="border rounded bg-light-subtle p-2">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span class="small text-uppercase text-muted">Recent internal remarks (last 10 days)</span>
                                @if (!string.IsNullOrWhiteSpace(item.LatestExternalRemark))
                                {
                                    <span class="badge bg-secondary-subtle text-muted border-0 small">has external note</span>
                                }
                            </div>
                            @if (item.RecentInternalRemarks.Count == 0)
                            {
                                <p class="small text-muted mb-0">No internal remarks in the last 10 days.</p>
                            }
                            else
                            {
                                <ul class="list-unstyled mb-0 small">
                                    @foreach (var r in item.RecentInternalRemarks)
                                    {
                                        <li class="mb-1">
                                            <span class="text-muted">@r.CreatedAtUtc.ToLocalTime().ToString("dd-MMM-yyyy HH:mm")</span>
                                            @if (r.ActorRole != ProjectManagement.Models.Remarks.RemarkActorRole.Unknown)
                                            {
                                                <span class="text-muted">• @r.ActorRole</span>
                                            }
                                            <div>@r.Text</div>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
