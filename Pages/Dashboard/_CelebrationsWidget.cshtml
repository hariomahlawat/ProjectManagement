@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Anti

<div class="card celebrations-widget mt-3">
  <div class="card-header d-flex justify-content-between align-items-center">
        <span class="small fw-semibold">Celebrations</span>
    <a asp-page="/Celebrations/Index" class="small">View all</a>
  </div>
  <div class="card-body small">
    <div id="cele-today" class="mb-2">
      <div class="fw-semibold mb-1">Today</div>
      <ul class="list-unstyled mb-0" data-section="today"></ul>
    </div>
    <div id="cele-next7" class="mb-2">
      <div class="fw-semibold mb-1">Next 7 days</div>
      <ul class="list-unstyled mb-0" data-section="next7"></ul>
    </div>
    <div id="cele-month">
      <div class="fw-semibold mb-1">This month</div>
      <ul class="list-unstyled mb-0" data-section="month"></ul>
    </div>
  </div>
</div>
<form id="celebrate-token" method="post" class="d-none">
  <input type="hidden" name="__RequestVerificationToken" value="@Anti.GetAndStoreTokens(Context).RequestToken" />
</form>
