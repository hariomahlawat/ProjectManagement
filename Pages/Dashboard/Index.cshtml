@page
@model ProjectManagement.Pages.Dashboard.IndexModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@using ProjectManagement.Services
@using ProjectManagement.Models
@{
    ViewData["Title"] = "Dashboard";
    ViewData["UseFullWidth"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/widgets/project-pulse.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/widgets/ops-signals.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/leaflet/1.9.4/leaflet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/widgets/ffc-simulator-map.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/todo-widget.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard/search-health-widget.css" asp-append-version="true" />
}

@if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-warning py-2">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@err
    </div>
}

<div class="row g-3 dashboard">
    @* SECTION: Primary dashboard content (Project pulse + sidebar) *@
    <div class="col-12 col-lg-9">
        <div class="dashboard-main-content h-100">

            @* SECTION: Project Pulse widget *@
            <section class="dashboard-section" aria-label="Project pulse">
                @if (Model.ProjectPulse is not null)
                {
                    @await Html.PartialAsync(
                    "~/Areas/Dashboard/Components/ProjectPulse/_Widget.cshtml",
                                Model.ProjectPulse
                                )
                                }
                else
                {
                    <p class="text-secondary mb-0">Project pulse data is not available right now.</p>
                }
            </section>
            @* END SECTION *@

            @* SECTION: OpsSignals widget *@
            <section class="dashboard-section" aria-label="Operational signals">
                @await Html.PartialAsync(
                "~/Areas/Dashboard/Components/OpsSignals/_Widget.cshtml",
                                Model.OpsSignals
                                )
            </section>
            @* END SECTION *@

            @* SECTION: FFC simulator map widget *@
            <section class="dashboard-section" aria-label="FFC simulators footprint">
                @await Html.PartialAsync(
                                "~/Areas/Dashboard/Components/FfcSimulatorMap/_Widget.cshtml",
                                Model.FfcSimulatorMap
                                )
            </section>
            @* END SECTION *@

        </div>
    </div>

    <div class="col-12 col-lg-3">
        <div class="dashboard-sidebar dashboard-right-column">
            <div class="d-flex flex-column gap-3">
                <partial name="_TodoWidget" model="Model.TodoWidget" />
                <partial name="~/Pages/Dashboard/Partials/_SearchHealthWidget.cshtml" model="Model.SearchHealth" />
            </div>

            <div class="dashboard-floating-actions mt-3 mt-lg-0">
                <button type="button"
                        class="dashboard-events-card pm-shadow"
                        data-drawer-toggle
                        data-drawer-target="dashboard-events"
                        aria-controls="dashboard-events"
                        aria-haspopup="dialog"
                        aria-label="View upcoming events">
                    <span class="visually-hidden">View upcoming events</span>
                    <span class="dashboard-events-card__icon" aria-hidden="true">
                        <i class="bi bi-calendar-event"></i>
                    </span>
                </button>
                <a asp-area="Common"
                   asp-page="/Search/Index"
                   class="dashboard-events-card pm-shadow"
                   aria-label="Open global search">
                    <span class="visually-hidden">Open global search</span>
                    <span class="dashboard-events-card__icon" aria-hidden="true">
                        <i class="bi bi-search"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>

    @* SECTION: My Projects widget (full-width row) *@
    @if (Model.ShowMyProjectsWidget)
    {
        <div class="col-12">
            <section class="dashboard-card myproj-stage-widget dashboard-my-projects"
                     aria-labelledby="dashboard-my-projects-title">
                @* SECTION: My Projects + Stage PDC header *@
                <header class="myproj-stage-widget__header">
                    <div class="myproj-stage-widget__heading">
                        <span class="myproj-stage-widget__icon" aria-hidden="true">
                            <i class="bi bi-kanban"></i>
                        </span>
                        <h2 id="dashboard-my-projects-title" class="myproj-stage-widget__title mb-0">
                            My projects
                        </h2>
                    </div>
                    <span class="myproj-stage-widget__badge">
                        <i class="bi bi-diagram-3" aria-hidden="true"></i>
                        Stage &amp; PDC
                    </span>
                </header>
                @* END SECTION *@

                @* SECTION: My Projects summary and Stage PDC widget *@
                <div class="myproj-stage-widget__body">
                    <div class="row g-3 dashboard-my-projects__layout">
                        @* SECTION: My Projects grid *@
                        <div class="col-12 col-lg-8">
                            <section class="dashboard-my-projects__projects h-100" aria-label="My projects list">
                                <header class="d-flex align-items-start justify-content-between mb-3">
                                    <div>
                                        <p class="text-uppercase text-secondary fw-semibold small mb-1">Projects overview</p>
                                        <p class="text-muted small mb-0">Browse your ongoing projects with consistent styling.</p>
                                    </div>
                                    @if (Model.HasMyProjects)
                                    {
                                        var totalProjects = Model.MyProjectSections.Sum(section => section.Items.Count);
                                        <span class="badge rounded-pill text-bg-primary">
                                            @totalProjects project@(totalProjects == 1 ? string.Empty : "s")
                                        </span>
                                    }
                                </header>

                                @if (Model.HasMyProjects)
                                {
                                    <div class="dashboard-my-projects__sections pm-scroll" role="list">
                                        @foreach (var section in Model.MyProjectSections.Where(section => section.Items.Count > 0))
                                        {
                                            <section class="dashboard-my-projects__section" aria-label="@section.Title projects" role="listitem">
                                                <div class="d-flex align-items-center justify-content-between mb-2">
                                                    <h3 class="dashboard-my-projects__section-title h6 mb-0">@section.Title</h3>
                                                    <span class="badge rounded-pill text-bg-light text-secondary">@section.Items.Count</span>
                                                </div>

                                                <div class="dashboard-my-projects__list" role="list">
                                                    @foreach (var project in section.Items)
                                                    {
                                                        var stage = project.StageSummary;
                                                        <a asp-page="/Projects/Overview"
                                                           asp-route-id="@project.ProjectId"
                                                           class="dashboard-project-card pm-shadow"
                                                           data-project-id="@project.ProjectId"
                                                           role="listitem">
                                                            <div class="dashboard-project-card__cover">
                                                                @if (!string.IsNullOrWhiteSpace(project.CoverImageUrl))
                                                                {
                                                                    <img src="@project.CoverImageUrl" alt="Cover for @project.Name" loading="lazy" />
                                                                }
                                                                else
                                                                {
                                                                    <div class="dashboard-project-card__cover-placeholder">No cover</div>
                                                                }
                                                            </div>
                                                            <div class="dashboard-project-card__content">
                                                                <div class="dashboard-project-card__title" title="@project.Name">@project.Name</div>
                                                                <div class="dashboard-project-card__meta">
                                                                    <span class="badge bg-light text-secondary border">@project.Category ?? "Uncategorized"</span>
                                                                    @if (stage is not null)
                                                                    {
                                                                        <div class="text-muted small">
                                                                            @stage.StageName (@stage.StageCode)
                                                                            @if (stage.PlannedDue is { } dueDate)
                                                                            {
                                                                                <span class="ms-1">Â· PDC @dueDate.ToString("dd MMM yyyy")</span>
                                                                            }
                                                                        </div>
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="text-muted small">Stage data unavailable</div>
                                                                    }
                                                                </div>
                                                            </div>
                                                            <span class="dashboard-project-card__chevron" aria-hidden="true">
                                                                <i class="bi bi-chevron-right"></i>
                                                            </span>
                                                        </a>
                                                    }
                                                </div>
                                            </section>
                                        }
                                    </div>
                                }
                                else if (Model.ShowEmptyMyProjectsMessage)
                                {
                                    <div class="dashboard-my-projects__empty text-center text-secondary small py-4 border border-secondary-subtle rounded-3">
                                        Add yourself to an ongoing project to see it here.
                                    </div>
                                }
                                else
                                {
                                    <div class="dashboard-my-projects__empty text-center text-secondary small py-4 border border-secondary-subtle rounded-3">
                                        No projects to show yet.
                                    </div>
                                }
                            </section>
                        </div>
                        @* END SECTION *@

                        @* SECTION: My Projects summary and critical PDC alerts *@
                        <aside class="col-12 col-lg-4">
                            <div class="dashboard-my-projects__pdc-card myproj-stage-widget__pdc"
                                 data-role="myproj-pdc-pane"
                                 aria-label="My projects summary and ongoing PDC alerts">
                                <div class="dashboard-my-projects__pdc-header d-flex flex-column gap-1">
                                    <p class="text-uppercase text-secondary fw-semibold small mb-0">My projects</p>
                                    <p class="text-muted small mb-0">
                                        Category wise summary and critical PDC alerts for your projects.
                                    </p>
                                </div>

                                @* SECTION: Category summary strip *@
                                @if (Model.HasMyProjects)
                                {
                                    var categorySummary = Model.MyProjectSections
                                        .Select(section => new
                                        {
                                            section.Title,
                                            Count = section.Items.Count
                                        })
                                        .Where(x => x.Count > 0)
                                        .OrderByDescending(x => x.Count)
                                        .ToList();

                                    var totalCount = categorySummary.Sum(x => x.Count);

                                    <div class="myproj-summary pm-scroll-x">
                                        <div class="myproj-summary__chips">
                                            @foreach (var cat in categorySummary)
                                            {
                                                <div class="myproj-summary__chip">
                                                    <span class="myproj-summary__chip-label">@cat.Title</span>
                                                    <span class="myproj-summary__chip-count">@cat.Count</span>
                                                </div>
                                            }

                                            @if (totalCount > 0)
                                            {
                                                <div class="myproj-summary__chip myproj-summary__chip--total">
                                                    <span class="myproj-summary__chip-label">Total</span>
                                                    <span class="myproj-summary__chip-count">@totalCount</span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                @* SECTION: Critical PDC alerts *@
                                @if (Model.HasMyProjects)
                                {
                                    var pdcProjects = Model.MyProjectSections.SelectMany(section => section.Items).ToList();
                                    var overdueProjects = pdcProjects
                                        .Where(project => project.StageSummary?.IsOverdue == true)
                                        .ToList();
                                    var dueSoonProjects = pdcProjects
                                        .Where(project => project.StageSummary is { IsOverdue: false, DaysToPdc: <= 30, PlannedDue: not null })
                                        .ToList();
                                    var notSetProjects = pdcProjects
                                        .Where(project => project.StageSummary is null || project.StageSummary.PlannedDue is null)
                                        .ToList();

                                    if (overdueProjects.Any() || dueSoonProjects.Any() || notSetProjects.Any())
                                    {
                                        <div class="dashboard-my-projects__pdc-groups pm-scroll" role="list">
                                            @if (overdueProjects.Any())
                                            {
                                                <div class="dashboard-my-projects__pdc-group">
                                                    <p class="dashboard-my-projects__pdc-group-title text-uppercase text-secondary fw-semibold small mb-2">PDC overdue</p>
                                                    <div class="dashboard-my-projects__pdc-list" role="list">
                                                        @foreach (var project in overdueProjects)
                                                        {
                                                            var stage = project.StageSummary;
                                                            <div class="myproj-stage-widget__pdc-row" data-project-id="@project.ProjectId" role="listitem">
                                                                <a asp-page="/Projects/Overview"
                                                                   asp-route-id="@project.ProjectId"
                                                                   class="dashboard-my-projects__pdc-link">
                                                                    <div class="dashboard-my-projects__pdc-text">
                                                                        <div class="dashboard-my-projects__pdc-name" title="@project.Name">@project.Name</div>
                                                                        <div class="dashboard-my-projects__pdc-stage small text-muted">
                                                                            @if (stage is not null)
                                                                            {
                                                                                @:Stage: @stage.StageName (@stage.StageCode)
                                                                            }
                                                                            else
                                                                            {
                                                                                <span>Stage data unavailable</span>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                    <div class="dashboard-my-projects__pdc-meta text-end">
                                                                        <span class="badge rounded-pill text-bg-danger">PDC overdue</span>
                                                                        @if (stage?.DaysToPdc is { } daysLate)
                                                                        {
                                                                            <div class="small text-danger">Overdue by @daysLate day@(daysLate == 1 ? string.Empty : "s")</div>
                                                                        }
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }

                                            @if (dueSoonProjects.Any())
                                            {
                                                <div class="dashboard-my-projects__pdc-group">
                                                    <p class="dashboard-my-projects__pdc-group-title text-uppercase text-secondary fw-semibold small mb-2">PDC in next 30 days</p>
                                                    <div class="dashboard-my-projects__pdc-list" role="list">
                                                        @foreach (var project in dueSoonProjects)
                                                        {
                                                            var stage = project.StageSummary;
                                                            <div class="myproj-stage-widget__pdc-row" data-project-id="@project.ProjectId" role="listitem">
                                                                <a asp-page="/Projects/Overview"
                                                                   asp-route-id="@project.ProjectId"
                                                                   class="dashboard-my-projects__pdc-link">
                                                                    <div class="dashboard-my-projects__pdc-text">
                                                                        <div class="dashboard-my-projects__pdc-name" title="@project.Name">@project.Name</div>
                                                                        <div class="dashboard-my-projects__pdc-stage small text-muted">
                                                                            @if (stage is not null)
                                                                            {
                                                                                @:Stage: @stage.StageName (@stage.StageCode)
                                                                            }
                                                                            else
                                                                            {
                                                                                <span>Stage data unavailable</span>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                    <div class="dashboard-my-projects__pdc-meta text-end">
                                                                        <span class="badge rounded-pill text-bg-success">PDC in next 30 days</span>
                                                                        @if (stage?.DaysToPdc is { } daysToGo)
                                                                        {
                                                                            <div class="small text-success">@daysToGo day@(daysToGo == 1 ? string.Empty : "s") to PDC</div>
                                                                        }
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }

                                            @if (notSetProjects.Any())
                                            {
                                                <div class="dashboard-my-projects__pdc-group">
                                                    <p class="dashboard-my-projects__pdc-group-title text-uppercase text-secondary fw-semibold small mb-2">PDC not set</p>
                                                    <div class="dashboard-my-projects__pdc-list" role="list">
                                                        @foreach (var project in notSetProjects)
                                                        {
                                                            var stage = project.StageSummary;
                                                            <div class="myproj-stage-widget__pdc-row" data-project-id="@project.ProjectId" role="listitem">
                                                                <a asp-page="/Projects/Overview"
                                                                   asp-route-id="@project.ProjectId"
                                                                   class="dashboard-my-projects__pdc-link">
                                                                    <div class="dashboard-my-projects__pdc-text">
                                                                        <div class="dashboard-my-projects__pdc-name" title="@project.Name">@project.Name</div>
                                                                        <div class="dashboard-my-projects__pdc-stage small text-muted">
                                                                            @if (stage is not null)
                                                                            {
                                                                                @:Stage: @stage.StageName (@stage.StageCode)
                                                                            }
                                                                            else
                                                                            {
                                                                                <span>Stage data unavailable</span>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                    <div class="dashboard-my-projects__pdc-meta text-end">
                                                                        <span class="badge rounded-pill text-bg-secondary">PDC not set</span>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-secondary small mb-0">No critical PDC alerts right now.</p>
                                    }
                                }
                                else
                                {
                                    <p class="text-secondary small mb-0">Add yourself to a project to see its PDC.</p>
                                }
                            </div>
                        </aside>
                        @* END SECTION *@
                    </div>
                </div>
                @* END SECTION *@
            </section>
        </div>
    }
    @* END SECTION *@
</div>

<div class="pm-drawer pm-drawer--end"
     data-drawer="dashboard-events"
     id="dashboard-events"
     aria-labelledby="dashboard-events-title">
    <div class="pm-drawer__overlay" data-drawer-overlay></div>
    <div class="pm-drawer__panel"
         data-drawer-panel
         role="dialog"
         aria-modal="true"
         aria-labelledby="dashboard-events-title">
        <div class="pm-drawer__header justify-content-end">
            <button type="button"
                    class="btn-close"
                    data-drawer-close
                    aria-label="Close upcoming events"></button>
        </div>
        <div class="pm-drawer__body">
            <partial name="_UpcomingEventsWidget" model="Model.UpcomingEvents" />
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/chart.js/chart.umd.js" asp-append-version="true" defer></script>
    <script type="module" src="~/js/widgets/project-pulse.js" asp-append-version="true"></script>
    <script type="module" src="~/js/widgets/ops-signals.js" asp-append-version="true"></script>
    <script src="~/lib/leaflet/1.9.4/leaflet.js" asp-append-version="true" defer></script>
    <script src="~/js/widgets/ffc-simulator-map.js" asp-append-version="true" defer></script>
    <script src="~/js/todo-widget.js" asp-append-version="true" defer></script>
    <script src="~/js/dashboard/search-health-widget.js" asp-append-version="true" defer></script>
    <script type="module" src="~/js/dashboard/myproj-stage-widget.js" asp-append-version="true"></script>
}
