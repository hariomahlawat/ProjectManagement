@model IEnumerable<ProjectManagement.Pages.Dashboard.IndexModel.UpcomingEventVM>
@using System.Linq

@{
    var events = (Model ?? Enumerable.Empty<ProjectManagement.Pages.Dashboard.IndexModel.UpcomingEventVM>()).ToList();
}

<div class="d-flex justify-content-between align-items-start gap-3 mb-3">
  <h2 class="h5 fw-semibold mb-0" id="dashboard-events-title">Upcoming events</h2>
  <a asp-page="/Calendar/Index" class="small">View full calendar</a>
</div>

<ul class="list-unstyled mb-0">
@foreach (var ev in events)
{
  <li class="small mb-3">
    <div class="fw-semibold@(ev.IsHoliday ? " text-danger" : string.Empty)">@ev.Title</div>
    <div class="text-secondary">@ev.When</div>
  </li>
}
@if (!events.Any())
{
  <li class="small text-secondary">No upcoming events</li>
}
</ul>

