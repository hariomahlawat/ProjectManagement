@model IEnumerable<ProjectManagement.Pages.Dashboard.IndexModel.UpcomingEventVM>

<div class="card mb-3 mt-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span class="small fw-semibold">Upcoming events</span>
    <a asp-page="/Calendar/Index" class="small">View full calendar</a>
  </div>
  <ul class="list-group list-group-flush">
  @foreach (var ev in Model)
  {
    <li class="list-group-item small">
      <div class="fw-semibold">@ev.Title</div>
      <div class="text-secondary">@ev.When</div>
    </li>
  }
  @if (!Model.Any())
  {
    <li class="list-group-item small text-secondary">No upcoming events</li>
  }
  </ul>
</div>

