@* Pages/Shared/_FeatureGrid.cshtml *@
<div class="pm-feature-grid">

    <a class="pm-feature-card" asp-page="/Dashboard/Index">
        <div class="pm-feature-card__icon">
            <i class="bi bi-speedometer2"></i>
        </div>
        <div class="pm-feature-card__body">
            <div class="pm-feature-card__title">Role based dashboards</div>
            <div class="pm-feature-card__text">
                Custom views for HoD, Project Officers, Project Office, and Admin.
                Track what matters to your role without noise.
            </div>
        </div>
    </a>

    <a class="pm-feature-card" asp-page="/Projects/Index">
        <div class="pm-feature-card__icon">
            <i class="bi bi-diagram-3"></i>
        </div>
        <div class="pm-feature-card__body">
            <div class="pm-feature-card__title">Stage timelines and approvals</div>
            <div class="pm-feature-card__text">
                Plan stages, approve edits, monitor cycle times, and keep PDCs aligned.
            </div>
        </div>
    </a>

    <a class="pm-feature-card" asp-area="ProjectOfficeReports" asp-page="/Index">
        <div class="pm-feature-card__icon">
            <i class="bi bi-clipboard-data"></i>
        </div>
        <div class="pm-feature-card__body">
            <div class="pm-feature-card__title">Project Office Reports</div>
            <div class="pm-feature-card__text">
                FFC, IPR, Proliferation, ToT, Training, and other trackers in one place.
            </div>
        </div>
    </a>

    <a class="pm-feature-card" asp-area="DocumentRepository" asp-page="/Documents/Index">
        <div class="pm-feature-card__icon">
            <i class="bi bi-archive"></i>
        </div>
        <div class="pm-feature-card__body">
            <div class="pm-feature-card__title">Document Repository</div>
            <div class="pm-feature-card__text">
                Upload and manage project artefacts with tags, categories, and history.
            </div>
        </div>
    </a>

    <a class="pm-feature-card" asp-area="Common" asp-page="/Search/Index">
        <div class="pm-feature-card__icon">
            <i class="bi bi-search"></i>
        </div>
        <div class="pm-feature-card__body">
            <div class="pm-feature-card__title">Global Search with ranking</div>
            <div class="pm-feature-card__text">
                Full-text search across Projects, Reports, ToT, Proliferation,
                and OCR-processed PDFs with weighted relevance.
            </div>
        </div>
    </a>

    <a class="pm-feature-card" asp-page="/Dashboard/Analytics">
        <div class="pm-feature-card__icon">
            <i class="bi bi-bar-chart"></i>
        </div>
        <div class="pm-feature-card__body">
            <div class="pm-feature-card__title">Analytics and insights</div>
            <div class="pm-feature-card__text">
                Stage delay hotspots, throughput trends, and operational KPIs.
            </div>
        </div>
    </a>

    <div class="pm-feature-card pm-feature-card--static">
        <div class="pm-feature-card__icon">
            <i class="bi bi-shield-lock"></i>
        </div>
        <div class="pm-feature-card__body">
            <div class="pm-feature-card__title">Offline secure deployment</div>
            <div class="pm-feature-card__text">
                Designed for air-gapped environments with granular permissions
                and auditability.
            </div>
        </div>
    </div>

    <div class="pm-feature-card pm-feature-card--static">
        <div class="pm-feature-card__icon">
            <i class="bi bi-people"></i>
        </div>
        <div class="pm-feature-card__body">
            <div class="pm-feature-card__title">Tasks and collaboration</div>
            <div class="pm-feature-card__text">
                Assign tasks, pin priorities, add notes, and attach files against work.
            </div>
        </div>
    </div>

</div>
