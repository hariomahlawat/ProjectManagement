@using Microsoft.AspNetCore.Identity
@using ProjectManagement.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
</head>
<body>
    <header class="pm-header border-bottom">
        <nav class="navbar navbar-expand-sm navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-area="" asp-page="/Index">ProjectManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#pmNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="pmNavbar" class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item"><a class="nav-link" asp-page="/Index#features">Features</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Index#security">Security</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Privacy">Contact</a></li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Dashboard/Index">Dashboard</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="pm-footer border-top py-3">
        <div class="container small text-muted d-flex justify-content-between">
            <span>© @DateTime.UtcNow.Year — ProjectManagement</span>
            <a class="text-muted" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
