@using Microsoft.AspNetCore.Identity
@using ProjectManagement.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/social-media.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="pm-app">
    @{
        var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
        var useFullWidth = (ViewData["UseFullWidth"] as bool?) == true;
        var mainContainerClass = useFullWidth
            ? "container-fluid analytics-shell px-3 px-lg-4 px-xxl-5"
            : "container";
    }
    <div class="pm-app-shell">
        <header class="pm-app-header">
            <div class="pm-app-topbar">
                <div class="pm-app-topbar-inner container-fluid">
                    <div class="d-flex align-items-center gap-3">
                        @await Component.InvokeAsync("NavigationDrawer")
                        <a class="pm-app-brand" asp-area="" asp-page="/Index">
                            <span class="pm-app-logo" aria-hidden="true">PM</span>
                            <span class="pm-app-brand-text">
                                ProjectManagement
                                <span class="pm-app-brand-sub">Operations Control Room</span>
                            </span>
                        </a>
                    </div>
                    <nav class="pm-app-nav" aria-label="Primary">
                        <a class="pm-app-nav-link@(string.Equals(currentPage, "/Dashboard/Index", StringComparison.OrdinalIgnoreCase) ? " is-active" : string.Empty)" asp-page="/Dashboard/Index">Dashboard</a>
                        <a class="pm-app-nav-link@(string.Equals(currentPage, "/Analytics/Index", StringComparison.OrdinalIgnoreCase) ? " is-active" : string.Empty)" asp-page="/Analytics/Index">Analytics</a>
                        <a class="pm-app-nav-link" asp-area="ProjectOfficeReports" asp-page="/FFC/Index">FFC Simulators</a>
                    </nav>
                    <div class="pm-app-actions">
                        @await Component.InvokeAsync("NotificationBell")
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
            <div class="pm-app-subnav">
                <div class="pm-app-subnav-inner container-fluid">
                    <div class="pm-app-subnav-copy">
                        <span class="pm-app-eyebrow">Mission readiness</span>
                        <span>Track simulator deployment progress and unblock delivery teams faster.</span>
                    </div>
                    <div class="pm-app-subnav-actions" role="group" aria-label="Quick links">
                        <a class="pm-chip-link" asp-area="ProjectOfficeReports" asp-page="/FFC/Records/Manage">
                            <i class="bi bi-kanban" aria-hidden="true"></i>
                            <span>Records workspace</span>
                        </a>
                        <a class="pm-chip-link" asp-area="ProjectOfficeReports" asp-page="/FFC/Countries/Manage">
                            <i class="bi bi-geo-alt" aria-hidden="true"></i>
                            <span>Country catalogue</span>
                        </a>
                        <a class="pm-chip-link" asp-page="/Dashboard/Index">
                            <i class="bi bi-graph-up" aria-hidden="true"></i>
                            <span>Portfolio insight</span>
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <main role="main" class="pm-app-main@(useFullWidth ? " analytics-main" : string.Empty)">
            <div class="@mainContainerClass">
                @await Html.PartialAsync("_Toasts")
                @RenderBody()
            </div>
        </main>

        <footer class="pm-app-footer">
            <div class="pm-app-footer-inner container">
                <div class="pm-app-footer-brand">
                    <span class="pm-app-logo" aria-hidden="true">PM</span>
                    <span>Â© @DateTime.UtcNow.Year ProjectManagement</span>
                </div>
                <div class="pm-app-footer-links">
                    <a asp-page="/Privacy">Privacy</a>
                    <a href="mailto:support@projectmanagement.local">Support</a>
                </div>
            </div>
        </footer>
    </div>

    <!-- Shared small confirm modal (reused for complete/delete/etc.) -->
    <div class="modal fade" id="appConfirmModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
          <div class="modal-body" id="appConfirmText">Are you sure?</div>
          <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal">No</button>
            <button type="button" class="btn btn-sm btn-primary" id="appConfirmYes">Yes</button>
          </div>
        </div>
      </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/signalr/signalr.min.js" asp-append-version="true"></script>
    <script type="module" src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/comments.js" asp-append-version="true" defer></script>
    <script src="~/js/notifications.js" asp-append-version="true" defer></script>
    <script src="~/js/project-media-tabs.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/init.js" data-todo-src="@Url.Content("~/js/todo.js")" asp-append-version="true" defer></script>
</body>
</html>
