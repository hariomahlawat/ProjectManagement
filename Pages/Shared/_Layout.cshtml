@using Microsoft.AspNetCore.Identity
@using ProjectManagement.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/social-media.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @{
        var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
        var useFullWidth = (ViewData["UseFullWidth"] as bool?) == true;
        var mainContainerClass = useFullWidth
        ? "container-fluid analytics-shell px-3 px-lg-4 px-xxl-5"
        : "container";
    }
    <header class="pm-header border-bottom">
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid px-3 px-md-4 px-lg-5 d-flex align-items-center gap-3">
                @await Component.InvokeAsync("NavigationDrawer")
                <a class="navbar-brand fw-semibold" asp-area="" asp-page="/Index">ProjectManagement</a>
                <ul class="navbar-nav flex-row align-items-center gap-2 ms-4">
                    <li class="nav-item">
                        <a class="nav-link@(string.Equals(currentPage, "/Dashboard/Index", StringComparison.OrdinalIgnoreCase) ? " active" : string.Empty)" asp-page="/Dashboard/Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link@(string.Equals(currentPage, "/Analytics/Index", StringComparison.OrdinalIgnoreCase) ? " active" : string.Empty)" asp-page="/Analytics/Index">Analytics</a>
                    </li>
                </ul>
                <div class="ms-auto d-flex align-items-center gap-3">
                    <form method="get"
                          asp-area="Common"
                          asp-page="/Search/Index"
                          class="pm-top-search d-none d-md-block">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text"
                                   name="q"
                                   class="form-control border-start-0"
                                   placeholder="Search..."
                                   aria-label="Search" />
                        </div>
                    </form>
                    <a asp-area="Common"
                       asp-page="/Search/Index"
                       class="d-inline-flex d-md-none text-muted align-items-center justify-content-center"
                       title="Search">
                        <i class="bi bi-search" style="font-size:1.1rem;"></i>
                    </a>
                    @await Component.InvokeAsync("NotificationBell")
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>
    </header>

    <main role="main" class="pb-5@(useFullWidth ? " analytics-main" : string.Empty)">
        <div class="@mainContainerClass">
            @await Html.PartialAsync("_Toasts")
            @RenderBody()
        </div>
    </main>

    <footer class="pm-footer border-top py-3">
        <div class="container small text-muted d-flex justify-content-between">
            <span>© @DateTime.UtcNow.Year — ProjectManagement</span>
            <a class="text-muted" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Shared small confirm modal (reused for complete/delete/etc.) -->
    <div class="modal fade" id="appConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-body" id="appConfirmText">Are you sure?</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-sm btn-primary" id="appConfirmYes">Yes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/signalr/signalr.min.js" asp-append-version="true"></script>
    <script type="module" src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/comments.js" asp-append-version="true" defer></script>
    <script src="~/js/notifications.js" asp-append-version="true" defer></script>
    <script src="~/js/project-media-tabs.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/init.js" data-todo-src="@Url.Content("~/js/todo.js")" asp-append-version="true" defer></script>
</body>
</html>
