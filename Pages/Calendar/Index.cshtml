@page
@model ProjectManagement.Pages.Calendar.IndexModel
@{
    ViewData["Title"] = "Calendar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <button class="btn btn-sm btn-outline-primary me-1" data-view="dayGridMonth">Month</button>
        <button class="btn btn-sm btn-outline-primary me-1" data-view="timeGridWeek">Week</button>
        <button class="btn btn-sm btn-outline-primary" data-view="listMonth">List</button>
        <button class="btn btn-sm btn-secondary ms-2" id="todayBtn">Today</button>
    </div>
    @if (Model.CanEdit)
    {
        <button class="btn btn-sm btn-success" id="newEventBtn">New Event</button>
    }
</div>

<div id="calendar" data-can-edit="@Model.CanEdit"></div>

<div class="offcanvas offcanvas-end" tabindex="-1" id="eventDetails">
    <div class="offcanvas-header">
        <h5 id="detailTitle"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div id="detailTime" class="mb-2"></div>
        <div id="detailLocation" class="mb-2"></div>
        <div id="detailDescription" class="mb-2"></div>
        <div class="mt-3">
            <button class="btn btn-sm btn-primary" id="addTaskBtn">Add to My Tasks</button>
            @if (Model.CanEdit)
            {
                <button class="btn btn-sm btn-secondary" id="editBtn">Edit</button>
                <button class="btn btn-sm btn-danger" id="deleteBtn">Delete</button>
            }
        </div>
    </div>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" id="eventForm">
    <div class="offcanvas-header">
        <h5 id="formHeading">New Event</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form id="eventFormElement">
            <div class="mb-2">
                <label class="form-label">Title</label>
                <input class="form-control" name="title" required maxlength="160" />
            </div>
            <div class="mb-2">
                <label class="form-label">Category</label>
                <select class="form-select" name="category">
                    <option value="Training">Training</option>
                    <option value="Holiday">Holiday</option>
                    <option value="TownHall">TownHall</option>
                    <option value="Hiring">Hiring</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="mb-2">
                <label class="form-label">Location</label>
                <input class="form-control" name="location" maxlength="160" />
            </div>
            <div class="form-check form-switch mb-2">
                <input class="form-check-input" type="checkbox" id="allDaySwitch" name="isAllDay">
                <label class="form-check-label" for="allDaySwitch">All day</label>
            </div>
            <div class="mb-2">
                <label class="form-label">Start</label>
                <input class="form-control" type="datetime-local" name="start" required />
            </div>
            <div class="mb-2">
                <label class="form-label">End</label>
                <input class="form-control" type="datetime-local" name="end" required />
            </div>
            <div class="mb-2">
                <label class="form-label">Description (Markdown)</label>
                <textarea class="form-control" name="description" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Styles {
  <link rel="stylesheet" href="~/lib/fullcalendar/daygrid/index.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/lib/fullcalendar/timegrid/index.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/lib/fullcalendar/list/index.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/calendar.css" asp-append-version="true" />
}

@section Scripts {
    <script type="module" src="~/js/calendar.js"></script>
}
