@model ProjectManagement.Areas.Dashboard.Components.ProjectPulse.ProjectPulseVm
@using System.Collections.Generic
@using System.Linq
@using System.Text.Json
@using ProjectManagement.Areas.Dashboard.Components.ProjectPulse

@* SECTION: Serialization helpers *@
@{
    var jsonOptions = new JsonSerializerOptions(JsonSerializerDefaults.Web);
    string Serialize<T>(IReadOnlyList<T> source) => JsonSerializer.Serialize(source, jsonOptions);

    string DescribeCategories(string heading, IReadOnlyList<CategorySlice> slices)
    {
        if (slices.Count == 0)
        {
            return $"{heading} data is not available";
        }

        var details = string.Join(", ", slices.Select(slice => $"{slice.Label} {slice.Count}"));
        return $"{heading}: {details}";
    }

    IReadOnlyList<CategorySlice> AsSlices(IEnumerable<TreemapNode> nodes)
    {
        return nodes.Select(node => new CategorySlice(node.Label, node.Count)).ToList();
    }
}
@* END SECTION *@

<section class="ppulse dashboard-project-pulse-card" data-project-pulse>
  @* SECTION: Header *@
  <div class="ppulse__head">
    <div class="ppulse__title">
            <img src="~/img/logos/sdd.png" class="pm-powered-by__logo" alt="SDD logo" />
      <span class="ppulse__pulse" aria-hidden="true">
        <i class="bi bi-activity" aria-hidden="true"></i>
      </span>
      <h2 class="ppulse__h">Project pulse</h2>
    </div>
    <div class="ppulse__actions" role="group" aria-label="Project pulse actions">
      <span
        class="ppulse__pill"
        role="button"
        tabindex="0"
        title="Projects eligible for proliferation"
        aria-label="Projects available for proliferation"
      >
        Available for proliferation <strong>@Model.ProliferationEligible</strong>
      </span>
      <a
        class="btn btn-primary btn-sm ppulse__analytics"
        href="@Model.AnalyticsUrl"
        aria-label="Open analytics dashboard"
        title="Open analytics dashboard"
      >
        Open analytics
      </a>
    </div>
  </div>
  @* END SECTION *@

  @* SECTION: Content cards *@
  <div class="ppulse__grid">
    <article class="ppulse__card pulse-item-card ppulse__card--completed">
      <div class="ppulse__link">
        @* SECTION: Completed header *@
        <header class="ppulse__card-head">
          <div class="ppulse__card-title">
            <h3>Completed <small>@Model.CompletedCount</small></h3>
            <span class="ppulse__subtle">Excludes archived and deleted</span>
          </div>
        </header>
        @* END SECTION *@

        @* SECTION: Completed KPIs *@
        <div class="ppulse__kpis" role="group" aria-label="Completed projects breakdown">
          <div class="ppulse__kpi">
            <div class="ppulse__kpi-label">Unique</div>
            <div class="ppulse__kpi-value">@Model.CompletedUniqueCount</div>
          </div>
          <div class="ppulse__kpi">
            <div class="ppulse__kpi-label">Rebuild</div>
            <div class="ppulse__kpi-value">@Model.CompletedRebuildCount</div>
          </div>
        </div>
        @* END SECTION *@

        @* SECTION: Completed treemap - technical *@
        <div class="ppulse__treemap-block">
          <div class="ppulse__treemap-title">Unique by technical category</div>
          @if (Model.UniqueCompletedByTechnicalCategory.Count > 0)
          {
            <div
              class="ppulse__chart ppulse__treemap"
              data-chart="treemap"
              data-series='@Html.Raw(Serialize(Model.UniqueCompletedByTechnicalCategory))'
              role="img"
              aria-label='@DescribeCategories("Unique completed by technical category", AsSlices(Model.UniqueCompletedByTechnicalCategory))'
            >
            </div>
          }
          else
          {
            <div class="ppulse__treemap-empty">No data available</div>
          }
        </div>
        @* END SECTION *@

        @* SECTION: Completed treemap - project type *@
        <div class="ppulse__treemap-block">
          <div class="ppulse__treemap-title">Unique by project type</div>
          @if (Model.UniqueCompletedByProjectType.Count > 0)
          {
            <div
              class="ppulse__chart ppulse__treemap"
              data-chart="treemap"
              data-series='@Html.Raw(Serialize(Model.UniqueCompletedByProjectType))'
              role="img"
              aria-label='@DescribeCategories("Unique completed by project type", AsSlices(Model.UniqueCompletedByProjectType))'
            >
            </div>
          }
          else
          {
            <div class="ppulse__treemap-empty">No data available</div>
          }
        </div>
        @* END SECTION *@

        @* SECTION: Completed footer *@
        <footer class="ppulse__foot">
          <a class="ppulse__inline-link" href="@Model.CompletedUrl">View completed →</a>
        </footer>
        @* END SECTION *@
      </div>
    </article>

    <article class="ppulse__card pulse-item-card">
      <a class="ppulse__link" href="@Model.OngoingUrl" title="View ongoing projects">
        <header class="ppulse__card-head">
          <h3>Ongoing <small>@Model.OngoingCount</small></h3>
        </header>
        <div
          class="ppulse__chart pulse-chart-container"
          data-chart="donut"
          data-series='@Html.Raw(Serialize(Model.OngoingByProjectCategory))'
          role="img"
          aria-label='@DescribeCategories("Ongoing projects by category", Model.OngoingByProjectCategory)'
        >
          <canvas aria-hidden="true"></canvas>
        </div>
        <footer class="ppulse__foot">View ongoing →</footer>
      </a>
    </article>

    <article class="ppulse__card pulse-item-card">
      <a class="ppulse__link" href="@Model.RepositoryUrl" title="Explore project repository">
        <header class="ppulse__card-head">
          <h3>All projects <small>@Model.TotalProjects</small></h3>
        </header>
        <div
          class="ppulse__chart pulse-chart-container"
          data-chart="bar"
          data-x-label="Technical category"
          data-y-label="Projects"
          data-series='@Html.Raw(Serialize(Model.AllByTechnicalCategoryTop))'
          role="img"
          aria-label='@DescribeCategories("Top technical categories", Model.AllByTechnicalCategoryTop)'
        >
          <canvas aria-hidden="true"></canvas>
        </div>
        @if (Model.RemainingTechCategories > 0)
        {
          <div class="ppulse__hint">+@Model.RemainingTechCategories more categories</div>
        }
        <footer class="ppulse__foot">Explore repository →</footer>
      </a>
    </article>
  </div>
  @* END SECTION *@
</section>
