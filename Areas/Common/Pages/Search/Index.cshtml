@page
@model ProjectManagement.Areas.Common.Pages.Search.IndexModel
@{
    ViewData["Title"] = "Global Search";
    var hasQuery = !string.IsNullOrWhiteSpace(Model.Q);
}

@if (!hasQuery)
{
    <!-- Hero / empty state -->
    <div class="d-flex flex-column align-items-center justify-content-center py-5 my-4">
        <h1 class="fw-semibold mb-3">Search everything</h1>
        <p class="text-muted mb-4">Documents, attachments, FFC/IPR records — all in one place.</p>

        <form method="get" class="w-100" style="max-width: 540px;">
            <div class="input-group input-group-lg shadow-sm rounded-pill overflow-hidden">
                <span class="input-group-text bg-white border-0 ps-4">
                    <i class="bi bi-search text-muted"></i>
                </span>
                <input asp-for="Q"
                       class="form-control border-0"
                       placeholder="Search documents, records, attachments..." autocomplete="off" />
                <button class="btn btn-success px-4 d-none d-md-inline" type="submit">Search</button>
            </div>
        </form>

        @* optional filters when empty *@
        @if (Model.AvailableSources.Count > 0)
        {
            <div class="mt-4 d-flex gap-2 flex-wrap justify-content-center">
                @foreach (var source in Model.AvailableSources)
                {
                    <span class="badge bg-light text-dark border">@source</span>
                }
            </div>
        }
    </div>
}
else
{
    <!-- Search bar pinned on top when we have results -->
    <div class="bg-white border rounded-3 p-3 mb-3 d-flex justify-content-between align-items-center gap-3 shadow-sm">
        <form method="get" class="flex-grow-1">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0">
                    <i class="bi bi-search text-muted"></i>
                </span>
                <input asp-for="Q"
                       class="form-control border-start-0"
                       placeholder="Search documents, records, attachments..." />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>

            @* filters under the bar *@
            @if (Model.AvailableSources.Count > 0)
            {
                <div class="mt-2 d-flex flex-wrap gap-3">
                    @foreach (var source in Model.AvailableSources)
                    {
                        var isChecked = Model.Source != null && Model.Source.Contains(source, System.StringComparer.OrdinalIgnoreCase);
                        <div class="form-check form-check-inline">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="Source"
                                   value="@source"
                                   @(isChecked ? "checked" : null)
                                   onchange="this.form.submit()" />
                            <label class="form-check-label small">@source</label>
                        </div>
                    }
                </div>
            }
        </form>
        <span class="text-muted small">@Model.Results.Count result@(Model.Results.Count == 1 ? "" : "s")</span>
    </div>

    @if (Model.Results.Count > 0)
    {
        <div class="d-flex flex-column gap-3 mb-5">
            @foreach (var hit in Model.Results)
            {
                <a class="text-decoration-none"
                   href="@hit.Url">
                    <div class="card border-0 border-start border-4 shadow-sm hover-shadow-sm" style="border-color: rgba(13,110,253,.5) !important;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-1">
                                <h2 class="h5 mb-0 text-primary">@hit.Title</h2>
                                <span class="badge bg-secondary">@hit.Source</span>
                            </div>
                            @if (!string.IsNullOrWhiteSpace(hit.Snippet))
                            {
                                <p class="mb-2 text-muted small">@hit.Snippet</p>
                            }
                            <div class="d-flex gap-3 small text-muted">
                                @if (hit.Date.HasValue)
                                {
                                    <span><i class="bi bi-clock"></i> @hit.Date.Value.ToLocalTime().ToString("dd MMM yyyy HH:mm")</span>
                                }
                                @if (!string.IsNullOrWhiteSpace(hit.FileType))
                                {
                                    <span><i class="bi bi-file-earmark"></i> @hit.FileType</span>
                                }
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="status">
            No results found for "<strong>@Model.Q</strong>".
        </div>
    }
}
