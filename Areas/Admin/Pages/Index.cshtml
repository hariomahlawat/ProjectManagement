@page
@model ProjectManagement.Areas.Admin.Pages.AdminIndexModel
@{
    ViewData["Title"] = "Admin dashboard";
    var metrics = Model.Metrics;
}

<nav aria-label="breadcrumb" class="mb-2">
  <ol class="breadcrumb small mb-0">
    <li class="breadcrumb-item active" aria-current="page">Admin</li>
  </ol>
</nav>
<h3 class="mb-3">Admin dashboard</h3>

@* Top metrics row: always visible without scrolling *@
<div class="row g-3 mb-3">
  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-1">
          <div class="small text-muted">Manage Users</div>
          <a asp-area="Admin" asp-page="/Users/Index" class="small text-decoration-none">Open</a>
        </div>
        <div class="fs-4 fw-semibold">@metrics.TotalUsers</div>
        <div class="small text-muted">Total users</div>

        <div class="mt-3 small">
          <div class="d-flex justify-content-between"><span>Disabled</span><span>@metrics.DisabledUsers</span></div>
          <progress class="pm-progress pm-progress-slim" value="@metrics.DisabledPct" max="100" aria-label="Disabled users percentage"></progress>
          <div class="d-flex justify-content-between mt-2"><span>Must change password</span><span>@metrics.MustChangePwd</span></div>
          <progress class="pm-progress pm-progress-slim" value="@metrics.MustChangePwdPct" max="100" aria-label="Password change pending percentage"></progress>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-1">
          <div class="small text-muted">Analytics</div>
          <a asp-area="Admin" asp-page="/Analytics/Index" class="small text-decoration-none">Open</a>
        </div>
        <div class="fs-4 fw-semibold">@metrics.LoginsLast7d</div>
        <div class="small text-muted">Logins last 7 days</div>

        <div class="mt-3 small">
          <div class="d-flex justify-content-between"><span>Unique users</span><span>@metrics.UniqueLoginsLast7d</span></div>
          <progress class="pm-progress pm-progress-slim" value="@metrics.UniqueLoginPct" max="100" aria-label="Unique logins share"></progress>
          <div class="d-flex justify-content-between mt-2"><span>Failed attempts</span><span>@metrics.FailedLoginsLast7d</span></div>
          <progress class="pm-progress pm-progress-slim" value="@metrics.FailedLoginPct" max="100" aria-label="Failed login share"></progress>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-1">
          <div class="small text-muted">Logs</div>
          <a asp-area="Admin" asp-page="/Logs/Index" class="small text-decoration-none">Open</a>
        </div>
        <div class="fs-4 fw-semibold">@metrics.AuditEvents24h</div>
        <div class="small text-muted">Audit events in last 24 hours</div>

        <div class="mt-3 small">
          <div class="d-flex justify-content-between"><span>Warnings</span><span>@metrics.WarningEvents24h</span></div>
          <progress class="pm-progress pm-progress-slim" value="@metrics.WarningPct" max="100" aria-label="Warnings share"></progress>
          <div class="d-flex justify-content-between mt-2"><span>Errors</span><span>@metrics.ErrorEvents24h</span></div>
          <progress class="pm-progress pm-progress-slim" value="@metrics.ErrorPct" max="100" aria-label="Errors share"></progress>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row g-3 mb-3">
  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-1">
          <div class="small text-muted">Project lifecycle</div>
          <a asp-area="Admin" asp-page="/Projects/Trash" class="small text-decoration-none">Review trash</a>
        </div>
        <div class="fs-4 fw-semibold">@metrics.TrashedProjects</div>
        <div class="small text-muted">Project(s) in trash</div>

        <div class="mt-3 small">
          <div class="d-flex justify-content-between"><span>Archived</span><span>@metrics.ArchivedProjects</span></div>
          <a asp-page="/Projects/Index" asp-route-IncludeArchived="true" class="btn btn-sm btn-outline-primary mt-2">Browse archived projects</a>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-1">
          <div class="small text-muted">Documents</div>
          <a asp-area="Admin" asp-page="/Documents/Recycle" class="small text-decoration-none">Open recycle bin</a>
        </div>
        <div class="fs-4 fw-semibold">@metrics.DeletedDocuments</div>
        <div class="small text-muted">Soft-deleted document(s)</div>

        <p class="small text-muted mt-3 mb-0">Use the recycle bin to restore or permanently delete uploaded files.</p>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-1">
          <div class="small text-muted">Calendar</div>
          <a asp-area="Admin" asp-page="/Calendar/Deleted" class="small text-decoration-none">Restore events</a>
        </div>
        <div class="fs-4 fw-semibold">@metrics.DeletedEvents</div>
        <div class="small text-muted">Deleted event(s) awaiting review</div>

        <p class="small text-muted mt-3 mb-0">Clearing deleted events keeps shared schedules current for all teams.</p>
      </div>
    </div>
  </div>
</div>

@* Attention band (only if something needs admin action) *@
@if (Model.Attention.Items.Any())
{
  <div class="alert alert-warning d-flex align-items-center" role="alert">
    <div class="me-2">Attention needed:</div>
    <ul class="mb-0">
      @foreach (var i in Model.Attention.Items)
      {
        <li class="mb-0">@i.Text @if (!string.IsNullOrEmpty(i.LinkText)) { <a class="ms-1" href="@i.Href">@i.LinkText</a> }</li>
      }
    </ul>
  </div>
}

@* Two-column lower row: compact recent actions on the right *@
<div class="row g-3">
  <div class="col-lg-8">
    <div class="card shadow-sm mb-3">
      <div class="card-body">
        <h5 class="card-title h6 mb-2">Project categories</h5>
        <p class="card-text small text-muted">Maintain the hierarchy used to group projects and reports.</p>
        <a asp-area="Admin" asp-page="/Categories/Index" class="btn btn-sm btn-outline-primary">Open category manager</a>
      </div>
    </div>
    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-title h6 mb-2">Sponsoring lookups</h5>
        <p class="card-text small text-muted">Manage sponsoring units and line directorates available to project teams.</p>
        <div class="d-flex flex-wrap gap-2">
          <a asp-area="Admin" asp-page="/Lookups/SponsoringUnits/Index" class="btn btn-sm btn-outline-primary">Manage sponsoring units</a>
          <a asp-area="Admin" asp-page="/Lookups/LineDirectorates/Index" class="btn btn-sm btn-outline-primary">Manage line directorates</a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="card shadow-sm">
      <div class="card-header py-2"><strong>Recent admin actions</strong></div>
      <div class="list-group list-group-flush pm-scrollable-320">
        @foreach (var a in Model.RecentAdminActions)
        {
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <div class="small">
              <span class="badge bg-secondary me-2">@a.Level</span>@a.Message
            </div>
            <span class="text-muted small">@a.WhenLocal</span>
          </div>
        }
      </div>
      <div class="card-footer text-end py-2">
        <a asp-area="Admin" asp-page="/Logs/Index" class="small text-decoration-none">View all logs</a>
      </div>
    </div>
  </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}
