@page
@model ProjectManagement.Areas.Admin.Pages.Analytics.LoginsModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles="Admin")]
@{
    ViewData["Title"] = "Login patterns";
}

<nav aria-label="breadcrumb" class="mb-2">
  <ol class="breadcrumb small mb-0">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Analytics/Index">Analytics</a></li>
    <li class="breadcrumb-item active" aria-current="page">Logins</li>
  </ol>
</nav>
<h3 class="mb-3">Login patterns</h3>
<div class="card shadow-sm">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span class="fw-semibold">Scatter</span>
    <div class="d-flex align-items-center gap-2">
      <select id="user" class="form-select form-select-sm">
        <option value="">All users</option>
        @foreach (var u in Model.Users) { <option value="@u.Id">@u.UserName</option> }
      </select>
      <select id="lookback" class="form-select form-select-sm">
        <option value="7">7 days</option>
        <option value="30" selected>30 days</option>
        <option value="90">90 days</option>
      </select>
      <div class="form-check form-check-sm">
        <input class="form-check-input" type="checkbox" id="weekendOdd">
        <label class="form-check-label" for="weekendOdd">Mark weekends odd</label>
      </div>
      <button id="refresh" class="btn btn-sm btn-outline-primary">Refresh</button>
      <a id="export" class="btn btn-sm btn-outline-secondary" href="#">Export CSV</a>
    </div>
  </div>
  <div class="card-body">
    <div class="chart-container-320">
      <canvas id="loginsScatter"></canvas>
    </div>
    <div class="mt-3">
      <h6>Odd logins</h6>
      <div class="table-responsive">
        <table class="table table-sm">
          <thead><tr><th>When</th><th>User</th><th>Reason</th></tr></thead>
          <tbody id="oddRows"></tbody>
        </table>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script src="~/lib/chart.js/chart.umd.js" asp-append-version="true"></script>
  <script type="module" src="~/js/analytics-logins.js" asp-append-version="true"></script>
}
