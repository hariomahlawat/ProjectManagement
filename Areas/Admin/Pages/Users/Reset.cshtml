@page "{id}"
@model ProjectManagement.Areas.Admin.Pages.Users.ResetModel
<h3>Reset password</h3>
<div class="pm-card pm-shadow p-4 p-md-5">
  <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="mb-3">
      <label for="NewPassword" class="form-label">New password</label>
      <div class="input-group">
        <input asp-for="NewPassword"
               class="form-control"
               id="NewPassword"
               data-pw-input
               autocomplete="new-password" />
        <button type="button"
                class="btn btn-outline-secondary password-toggle"
                data-target="#NewPassword"
                aria-label="Show password"
                aria-pressed="false"
                title="Show password">
          <svg class="bi" aria-hidden="true">
            <use href="@(Url.Content("~/lib/bootstrap-icons/bootstrap-icons.svg") + "#eye")"></use>
          </svg>
        </button>
      </div>
      <div class="mt-2 d-flex gap-2">
        <button type="button" id="genPwd" class="btn btn-sm btn-outline-secondary">Generate</button>
        <button type="button" id="cpyPwd" class="btn btn-sm btn-outline-secondary">Copy</button>
      </div>
      <span class="form-text pm-field-hint">Minimum 8 characters. No special rules enforced.</span>
      <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <button class="btn btn-danger" type="submit">Reset</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
  </form>
</div>

@section Scripts {
    <script type="module" src="~/js/users/reset.js" asp-append-version="true"></script>
}
