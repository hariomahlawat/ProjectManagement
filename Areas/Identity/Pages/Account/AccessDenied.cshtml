@page
@model ProjectManagement.Areas.Identity.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

@{
    var returnUrl = Context.Request.Query["ReturnUrl"].ToString();
    var isFfcManagePage = !string.IsNullOrWhiteSpace(returnUrl) &&
        returnUrl.Contains("/ProjectOfficeReports/FFC/Records/Manage", System.StringComparison.OrdinalIgnoreCase);
    var message = isFfcManagePage
        ? "Only administrators or heads of department can manage FFC records. If you need access, please contact your administrator."
        : "You don't have permission to view this resource. If you believe this is an error, please contact your administrator.";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h1 class="h4 mb-3">Access denied</h1>
                    <p class="text-muted mb-4">@message</p>
                    <a class="btn btn-primary" asp-page="/Index">Return to dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>
