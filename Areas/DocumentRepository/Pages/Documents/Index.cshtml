@page
@model ProjectManagement.Areas.DocumentRepository.Pages.Documents.IndexModel
@using System.Linq
@using ProjectManagement.Data.DocRepo
@{
    ViewData["Title"] = "Document repository";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 mb-0">Document repository</h1>
        <div class="d-flex gap-2">
            @if (User.IsInRole("Admin"))
            {
                <a asp-area="DocumentRepository"
                   asp-page="/Admin/DeleteRequests/Index"
                   class="btn btn-outline-danger">
                    Delete requests
                </a>
            }
            <a asp-page="./Upload" class="btn btn-primary"><i class="bi bi-upload"></i> Upload</a>
        </div>
    </div>

    <form method="get" class="row g-2 mb-4" data-docrepo-filter>
        <div class="col-sm-4 col-lg-3">
            <input class="form-control" type="search" name="q" value="@Model.Q" placeholder="Search subject / sender / tag" />
        </div>
        <div class="col-sm-3 col-lg-2">
            <input class="form-control" name="tag" value="@Model.Tag" placeholder="Tag" />
        </div>
        <div class="col-sm-3 col-lg-2">
            <select class="form-select" name="officeCategoryId">
                <option value="">All offices</option>
                @foreach (var office in Model.OfficeCategories)
                {
                    <option value="@office.Id" selected="@(Model.OfficeCategoryId == office.Id ? "selected" : null)">@office.Name</option>
                }
            </select>
        </div>
        <div class="col-sm-3 col-lg-2">
            <select class="form-select" name="documentCategoryId">
                <option value="">All document types</option>
                @foreach (var docCat in Model.DocumentCategories)
                {
                    <option value="@docCat.Id" selected="@(Model.DocumentCategoryId == docCat.Id ? "selected" : null)">@docCat.Name</option>
                }
            </select>
        </div>
        <div class="col-sm-2 col-lg-1">
            <input class="form-control" type="number" name="year" value="@(Model.Year?.ToString() ?? string.Empty)" placeholder="Year" min="1900" max="2100" />
        </div>
        <div class="col-sm-2 col-lg-1">
            <button type="submit" class="btn btn-outline-secondary w-100">Filter</button>
        </div>
        <input type="hidden" name="page" value="1" />
        <input type="hidden" name="pageSize" value="@Model.PageSize" />
    </form>

    <partial name="_Pager" model="new PagerModel(Model.PageNumber, Model.PageSize, Model.TotalCount, Request)" />


    @if (!Model.Items.Any())
    {
        <div class="alert alert-light border">No documents found.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-3">
            @foreach (var d in Model.Items)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="card-title mb-1">@d.Subject</h5>
                                    <div class="text-muted small">
                                        @(d.DocumentDate?.ToString("dd MMM yyyy") ?? "—")
                                        @if (!string.IsNullOrWhiteSpace(d.ReceivedFrom))
                                        {
                                            <text> · @d.ReceivedFrom</text>
                                        }
                                    </div>
                                </div>
                                <span class="badge @(d.OcrStatus switch
                                    {
                                        OcrStatus.Queued => "bg-secondary",
                                        OcrStatus.Succeeded => "bg-success",
                                        OcrStatus.Failed => "bg-danger",
                                        _ => "bg-light text-dark"
                                    })"
                                      title="@(d.OcrStatus == OcrStatus.Failed ? d.OcrFailureReason : null)">
                                    OCR: @d.OcrStatus
                                </span>
                            </div>

                            @if (d.DocumentTags?.Any() == true)
                            {
                                <div class="mt-2">
                                    @foreach (var t in d.DocumentTags.Select(x => x.Tag))
                                    {
                                        <span class="badge bg-outline-secondary border me-1">@t.Name</span>
                                    }
                                </div>
                            }
                        </div>
                        <div class="card-footer d-flex gap-2 align-items-center">
                            <a class="btn btn-sm btn-outline-primary" asp-page="./View" asp-route-id="@d.Id" target="_blank" rel="noopener">
                                <i class="bi bi-box-arrow-up-right"></i> View
                            </a>
                            <a class="btn btn-sm btn-outline-secondary" asp-page="./Download" asp-route-id="@d.Id">
                                <i class="bi bi-download"></i> Download
                            </a>

                            <authorize policy="DocRepo.Upload">
                                <div class="d-flex gap-2 ms-auto">
                                    <form method="post" asp-page="./Manage" asp-page-handler="Deactivate" asp-route-id="@d.Id">
                                        <button class="btn btn-sm btn-outline-warning" type="submit" @(d.IsActive ? null : "disabled")>Deactivate</button>
                                    </form>
                                    <form method="post" asp-page="./Manage" asp-page-handler="Activate" asp-route-id="@d.Id">
                                        <button class="btn btn-sm btn-outline-success" type="submit" @(!d.IsActive ? null : "disabled")>Activate</button>
                                    </form>
                                    <form method="post" asp-page="./Manage" asp-page-handler="RequestDelete" asp-route-id="@d.Id">
                                        <input type="hidden" name="reason" value="Obsolete" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit">Request Delete</button>
                                    </form>
                                </div>
                            </authorize>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <partial name="_Pager" model="new PagerModel(Model.PageNumber, Model.PageSize, Model.TotalCount, Request)" />

</div>

@section Scripts {
    <script src="~/js/docrepo/index.js" asp-append-version="true" defer></script>
}
