@page
@model ProjectManagement.Areas.DocumentRepository.Pages.Documents.IndexModel
@{
    ViewData["Title"] = "Document repository";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 mb-0">Document repository</h1>
        <a asp-page="./Upload" class="btn btn-primary"><i class="bi bi-upload"></i> Upload</a>
    </div>

    <form method="get" class="row g-2 mb-4" data-docrepo-filter>
        <div class="col-sm-4 col-lg-3">
            <input class="form-control" type="search" name="q" value="@Model.Query" placeholder="Search subject or received from" />
        </div>
        <div class="col-sm-3 col-lg-2">
            <input class="form-control" name="tag" value="@Model.Tag" placeholder="Tag" />
        </div>
        <div class="col-sm-3 col-lg-2">
            <select class="form-select" name="officeCategoryId">
                <option value="">All offices</option>
                @foreach (var office in Model.OfficeOptions)
                {
                    <option value="@office.Id" selected="@(Model.OfficeCategoryId == office.Id ? "selected" : null)">@office.Name</option>
                }
            </select>
        </div>
        <div class="col-sm-3 col-lg-2">
            <select class="form-select" name="documentCategoryId">
                <option value="">All document types</option>
                @foreach (var docCat in Model.DocumentCategoryOptions)
                {
                    <option value="@docCat.Id" selected="@(Model.DocumentCategoryId == docCat.Id ? "selected" : null)">@docCat.Name</option>
                }
            </select>
        </div>
        <div class="col-sm-2 col-lg-1">
            <input class="form-control" type="number" name="year" value="@Model.Year" placeholder="Year" min="1900" max="2100" />
        </div>
        <div class="col-sm-2 col-lg-1">
            <button type="submit" class="btn btn-outline-secondary w-100">Filter</button>
        </div>
    </form>

    @if (!Model.Documents.Any())
    {
        <div class="alert alert-light border">No documents found.</div>
    }
    else
    {
        <div class="list-group shadow-sm">
            @foreach (var document in Model.Documents)
            {
                <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                   asp-page="./View" asp-route-id="@document.Id" target="_blank" rel="noopener">
                    <div>
                        <div class="fw-semibold">@document.Subject</div>
                        <div class="small text-muted">
                            @if (!string.IsNullOrWhiteSpace(document.ReceivedFrom))
                            {
                                <span>From: @document.ReceivedFrom</span>
                                <span class="mx-1">Â·</span>
                            }
                            @if (document.DocumentDate.HasValue)
                            {
                                <span>@document.DocumentDate.Value.ToString("dd MMM yyyy")</span>
                            }
                        </div>
                    </div>
                    <i class="bi bi-box-arrow-up-right"></i>
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/docrepo/index.js" asp-append-version="true" defer></script>
}
