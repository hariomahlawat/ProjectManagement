@page "{id:guid}"
@model ProjectManagement.Areas.DocumentRepository.Pages.Documents.ManageModel
@{
    ViewData["Title"] = "Manage document";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 mb-0">Manage document</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to list</a>
    </div>

    @if (Model.Document is null)
    {
        <div class="alert alert-danger">Document not found.</div>
    }
    else
    {
        if (!Model.Document.IsActive)
        {
            <div class="alert alert-warning mb-3">
                This document is inactive. You can activate it below.
            </div>
        }

        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h2 class="h5">@Model.Document.Subject</h2>
                <dl class="row mb-0 small">
                    <dt class="col-sm-3">Received from</dt>
                    <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Document.ReceivedFrom) ? Model.Document.ReceivedFrom : "—")</dd>
                    <dt class="col-sm-3">Document date</dt>
                    <dd class="col-sm-9">@(Model.Document.DocumentDate?.ToString("dd MMM yyyy") ?? "—")</dd>
                    <dt class="col-sm-3">Office category</dt>
                    <dd class="col-sm-9">@Model.Document.OfficeCategory?.Name</dd>
                    <dt class="col-sm-3">Document category</dt>
                    <dd class="col-sm-9">@Model.Document.DocumentCategory?.Name</dd>
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.Document.IsActive)
                        {
                            <span class="badge text-bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge text-bg-secondary">Inactive</span>
                        }
                    </dd>
                    <dt class="col-sm-3">OCR status</dt>
                    <dd class="col-sm-9">@Model.Document.OcrStatus.ToString()</dd>
                    @if (!string.IsNullOrEmpty(Model.Document.OcrFailureReason))
                    {
                        <dt class="col-sm-3">OCR failure</dt>
                        <dd class="col-sm-9">@Model.Document.OcrFailureReason</dd>
                    }
                </dl>
            </div>
        </div>

        <authorize policy="DocRepo.SoftDelete">
            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h2 class="h6">Activation</h2>
                            <p class="small text-muted">Toggle whether this document is available to viewers.</p>
                            <div class="d-flex gap-2">
                                <form method="post" asp-page-handler="Deactivate" asp-route-id="@Model.Document.Id" class="d-inline">
                                    <button type="submit" class="btn btn-warning" @(Model.Document.IsActive ? null : "disabled")>Deactivate</button>
                                </form>
                                <form method="post" asp-page-handler="Activate" asp-route-id="@Model.Document.Id" class="d-inline">
                                    <button type="submit" class="btn btn-success" @(Model.Document.IsActive ? "disabled" : null)>Activate</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h2 class="h6">Request deletion</h2>
                            <p class="small text-muted">Submit a deletion request for approval. Provide context for the approver.</p>
                            <form method="post" asp-page-handler="RequestDelete" asp-route-id="@Model.Document.Id">
                                <div class="mb-3">
                                    <label asp-for="Reason" class="form-label">Reason (optional, 512 characters max)</label>
                                    <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Reason" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-danger">Submit delete request</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </authorize>

        <div class="card mt-4 shadow-sm">
            <div class="card-body">
                <h2 class="h6 mb-3">Pending delete requests</h2>
                @if (!Model.PendingRequests.Any())
                {
                    <p class="text-muted small mb-0">No pending requests.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th scope="col">Requested by</th>
                                    <th scope="col">Requested at</th>
                                    <th scope="col">Reason</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model.PendingRequests)
                                {
                                    <tr>
                                        <td>@request.RequestedByUserId</td>
                                        <td>@request.RequestedAtUtc.ToLocalTime().ToString("dd MMM yyyy HH:mm")</td>
                                        <td>@(string.IsNullOrWhiteSpace(request.Reason) ? "—" : request.Reason)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
