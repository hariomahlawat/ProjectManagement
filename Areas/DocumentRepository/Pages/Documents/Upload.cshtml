@page
@model ProjectManagement.Areas.DocumentRepository.Pages.Documents.UploadModel
@{
    ViewData["Title"] = "Upload document (PDF)";
}

<!-- simple breadcrumb, no extra model needed -->
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="DocumentRepository" asp-page="/Documents/Index">Documents</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            Upload
        </li>
    </ol>
</nav>

<div class="container-fluid py-3">
    <div class="row g-3">
        <div class="col-12 col-xl-8 col-xxl-9">
            <div class="card h-100">
                <div class="card-header d-flex align-items-center">
                    <h1 class="h5 mb-0">Preview</h1>
                </div>
                <div class="card-body p-2">
                    <div class="docrepo-preview-frame">
                        <iframe class="w-100 h-100 border-0@(Model.HasPreview ? string.Empty : " d-none")"
                                id="pdfPreview"
                                data-docrepo-preview-frame
                                src="@(Model.HasPreview ? Model.PdfPreviewUrl : null)"
                                title="PDF preview"
                                referrerpolicy="no-referrer"></iframe>
                        <div class="d-flex align-items-center justify-content-center h-100 text-muted@(Model.HasPreview ? " d-none" : string.Empty)"
                             id="pdfPlaceholder"
                             data-docrepo-preview-placeholder>
                            <div class="text-center">
                                <i class="bi bi-file-earmark-pdf display-4 d-block mb-2"></i>
                                <div class="fw-semibold">Choose a PDF to preview</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-4 col-xxl-3">
            <div class="card position-sticky top-3rem">
                <div class="card-header">
                    <h2 class="h6 mb-0">Details</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" class="vstack gap-3">
                        <div>
                            <label class="form-label" asp-for="Input.File">Choose file</label>
                            <input class="form-control" asp-for="Input.File" type="file" accept="application/pdf"
                                   data-docrepo-upload-input id="pdfInput" />
                            <span class="text-danger" asp-validation-for="Input.File"></span>
                        </div>

                        <div>
                            <label class="form-label" asp-for="Input.Subject"></label>
                            <input class="form-control" asp-for="Input.Subject" />
                            <span class="text-danger" asp-validation-for="Input.Subject"></span>
                        </div>

                        <div>
                            <label class="form-label" asp-for="Input.ReceivedFrom"></label>
                            <input class="form-control" asp-for="Input.ReceivedFrom" />
                            <span class="text-danger" asp-validation-for="Input.ReceivedFrom"></span>
                        </div>

                        <div>
                            <label class="form-label" asp-for="Input.DocumentDate"></label>
                            <input class="form-control" asp-for="Input.DocumentDate" type="date" />
                            <span class="text-danger" asp-validation-for="Input.DocumentDate"></span>
                        </div>

                        <div>
                            <label class="form-label" for="office">Office</label>
                            <select id="office" class="form-select" asp-for="Input.OfficeCategoryId"
                                    asp-items="Model.OfficeSelectList">
                                <option value="">Select office</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Input.OfficeCategoryId"></span>
                        </div>

                        <div>
                            <label class="form-label" for="doctype">Document type</label>
                            <select id="doctype" class="form-select" asp-for="Input.DocumentCategoryId"
                                    asp-items="Model.DocumentTypeSelectList">
                                <option value="">Select type</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Input.DocumentCategoryId"></span>
                        </div>

                        <div>
                            <label class="form-label" asp-for="Input.Tags">Tags (max 5, comma separated)</label>
                            <input class="form-control" asp-for="Input.Tags" />
                            <span class="text-muted small">Example: <em>RFP, TEC, Training</em></span>
                            <span class="text-danger" asp-validation-for="Input.Tags"></span>
                        </div>

                        @if (Model.CanMarkAots)
                        {
                            <!-- SECTION: AOTS flag -->
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.IsAots" />
                                <label class="form-check-label" asp-for="Input.IsAots"></label>
                            </div>
                        }

                        <div class="d-flex gap-2">
                            <button class="btn btn-primary" type="submit">Upload</button>
                            <a class="btn btn-outline-secondary"
                               asp-area="DocumentRepository" asp-page="/Documents/Index">Cancel</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer small text-muted">
                    PDF up to 50&nbsp;MB. Scanned PDFs will be queued for OCR.
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/docrepo.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="~/Pages/Shared/_ValidationScriptsPartial.cshtml" />
    <script src="~/js/docrepo/upload.js" asp-append-version="true" defer></script>
}
