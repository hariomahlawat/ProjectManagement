@page
@using System.Globalization
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Training.IndexModel
@{
    ViewData["Title"] = "Training tracker";
    var showExportModal = ViewData["ShowTrainingExportModal"] as bool? ?? false;
}

<div class="training-page-header card shadow-sm border-0 mb-4">
    <div class="card-body d-flex flex-column flex-lg-row gap-3 gap-lg-4 align-items-start align-items-lg-center justify-content-between">
        <div>
            <h1 class="h2 mb-2">Training tracker</h1>
            <p class="text-muted mb-0">Monitor participation, track readiness, and keep every training initiative aligned with the wider project office.</p>
        </div>
        <div class="d-flex flex-wrap align-items-center gap-2">
            <button type="button"
                    class="btn btn-outline-secondary d-inline-flex align-items-center gap-2 training-filter-trigger"
                    data-bs-toggle="modal"
                    data-bs-target="#trainingFiltersModal"
                    aria-controls="trainingFiltersModal"
                    aria-haspopup="dialog"
                    aria-expanded="false">
                <i class="bi bi-funnel" aria-hidden="true"></i>
                <span>Filters</span>
            </button>
            <a asp-page="./Manage" class="btn btn-primary">New training</a>
            @if (Model.IsFeatureEnabled)
            {
                <button type="button"
                        class="btn btn-outline-secondary d-inline-flex align-items-center gap-2"
                        data-bs-toggle="modal"
                        data-bs-target="#trainingExportModal"
                        aria-controls="trainingExportModal"
                        aria-haspopup="dialog"
                        aria-expanded="false">
                    <i class="bi bi-download" aria-hidden="true"></i>
                    <span>Export to Excel</span>
                </button>
            }
        </div>
    </div>
</div>

@if (!Model.IsFeatureEnabled)
{
    <div class="alert alert-warning" role="alert">
        The training tracker is currently disabled. Please check back after the feature is enabled.
    </div>
}
else
{
    <div class="row g-3 mb-4">
        <div class="col-6 col-lg-3">
            <div class="card kpi-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="kpi-label">Total trainings</div>
                    <div class="kpi-value">@Model.Kpis.TotalTrainings.ToString("N0", CultureInfo.CurrentCulture)</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="card kpi-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="kpi-label">Total trainees</div>
                    <div class="kpi-value">@Model.Kpis.TotalTrainees.ToString("N0", CultureInfo.CurrentCulture)</div>
                </div>
            </div>
        </div>

        @if (Model.Kpis.ByType.Count > 0)
        {
            foreach (var typeKpi in Model.Kpis.ByType)
            {
                <div class="col-6 col-lg-3">
                    <div class="card kpi-card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="kpi-label">@typeKpi.TypeName</div>
                            <div class="kpi-value kpi-value-compact">@typeKpi.Trainees.ToString("N0", CultureInfo.CurrentCulture)</div>
                            <div class="kpi-meta">Trainings: @typeKpi.Trainings.ToString("N0", CultureInfo.CurrentCulture)</div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="modal fade"
         id="trainingFiltersModal"
         tabindex="-1"
         aria-labelledby="trainingFiltersModalLabel"
         aria-hidden="true"
         data-bs-focus="true">
        <div class="modal-dialog modal-dialog-scrollable modal-lg modal-fullscreen-sm-down">
            <div class="modal-content training-filter-modal">
                <form method="get" class="w-100 training-filter-form">
                    <div class="modal-header">
                        <div>
                            <h2 class="modal-title h5 mb-1" id="trainingFiltersModalLabel">Filters</h2>
                            <p class="text-muted small mb-0">Adjust the filters to focus on the teams, timeframes, and programs that matter most.</p>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3 align-items-end">
                            <div class="col-lg-4">
                                <label asp-for="Filter.TypeId" class="form-label fw-semibold small text-uppercase text-secondary"></label>
                                <select asp-for="Filter.TypeId" asp-items="Model.TrainingTypes" class="form-select"></select>
                            </div>
                            <div class="col-lg-4">
                                <label asp-for="Filter.ProjectTechnicalCategoryId" class="form-label fw-semibold small text-uppercase text-secondary"></label>
                                <select asp-for="Filter.ProjectTechnicalCategoryId" asp-items="Model.ProjectTechnicalCategoryOptions" class="form-select"></select>
                            </div>
                            <div class="col-lg-4">
                                <label asp-for="Filter.Category" class="form-label fw-semibold small text-uppercase text-secondary"></label>
                                <select asp-for="Filter.Category" asp-items="Model.CategoryOptions" class="form-select"></select>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Filter.From" class="form-label fw-semibold small text-uppercase text-secondary"></label>
                                <input asp-for="Filter.From" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Filter.To" class="form-label fw-semibold small text-uppercase text-secondary"></label>
                                <input asp-for="Filter.To" class="form-control" />
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <label asp-for="Filter.Search" class="form-label fw-semibold small text-uppercase text-secondary"></label>
                                <input asp-for="Filter.Search" class="form-control" placeholder="Search notes or projects" />
                            </div>
                        </div>
                        <p class="filter-tip text-muted small mt-3 mb-0">Tip: Combine technical category and category filters to spot readiness gaps faster.</p>
                    </div>
                    <div class="modal-footer flex-column flex-sm-row align-items-stretch align-items-sm-center gap-2 justify-content-between">
                        <a asp-page="./Index" class="btn btn-link btn-sm px-0">Reset filters</a>
                        <div class="d-grid w-100 w-sm-auto">
                            <button type="submit" class="btn btn-primary">Apply filters</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade"
         id="trainingExportModal"
         tabindex="-1"
         aria-labelledby="trainingExportModalLabel"
         aria-hidden="true"
         data-bs-focus="true"
         data-training-export-auto-show="@(showExportModal ? "true" : "false")">
        <div class="modal-dialog modal-dialog-scrollable modal-lg modal-fullscreen-sm-down">
            <div class="modal-content training-export-modal">
                <form method="post" asp-page-handler="Export" class="w-100 training-export-form">
                    <div class="modal-header">
                        <div>
                            <h2 class="modal-title h5 mb-1" id="trainingExportModalLabel">Export trainings</h2>
                            <p class="text-muted small mb-0">Choose the timeframe and technical category to tailor your Excel export.</p>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-6 col-lg-4">
                                <label asp-for="Export.From" class="form-label fw-semibold small text-uppercase text-secondary"></label>
                                <input asp-for="Export.From" class="form-control" />
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <label asp-for="Export.To" class="form-label fw-semibold small text-uppercase text-secondary"></label>
                                <input asp-for="Export.To" class="form-control" />
                            </div>
                            <div class="col-lg-4">
                                <label asp-for="Export.ProjectTechnicalCategoryId" class="form-label fw-semibold small text-uppercase text-secondary"></label>
                                <select asp-for="Export.ProjectTechnicalCategoryId"
                                        asp-items="Model.ProjectTechnicalCategoryOptions"
                                        class="form-select"></select>
                            </div>
                        </div>
                        <div class="mt-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Export.IncludeRoster" aria-describedby="trainingExportIncludeRosterHelp" />
                                <label class="form-check-label" asp-for="Export.IncludeRoster"></label>
                            </div>
                            <div class="form-text" id="trainingExportIncludeRosterHelp">Include roster details in the export when available so teams can review individual attendance records.</div>
                        </div>

                        <input type="hidden" asp-for="Filter.TypeId" />
                        <input type="hidden" asp-for="Filter.Category" />
                        <input type="hidden" asp-for="Filter.Search" />
                        <input type="hidden" asp-for="Filter.ProjectTechnicalCategoryId" />
                        <input type="hidden" asp-for="Filter.From" />
                        <input type="hidden" asp-for="Filter.To" />
                    </div>
                    <div class="modal-footer flex-column flex-sm-row align-items-stretch align-items-sm-center gap-2 justify-content-between">
                        <div class="d-grid w-100 w-sm-auto">
                            <button type="submit"
                                    class="btn btn-primary d-inline-flex align-items-center gap-2"
                                    data-training-busy-label="Preparing Excel…">
                                <span class="training-export-button-label">Download Excel</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    if (Model.Kpis.ByTechnicalCategory.Count > 0)
    {
        <div class="mb-4">
            <div class="section-heading d-flex align-items-center gap-2 mb-3">
                <span class="heading-accent"></span>
                <h2 class="h5 text-muted mb-0">By technical category</h2>
            </div>
            <div class="row g-3">
                @foreach (var category in Model.Kpis.ByTechnicalCategory)
                {
                    <div class="col-6 col-lg-3">
                        <div class="card kpi-card shadow-sm border-0 h-100">
                            <div class="card-body">
                                <div class="kpi-label">@category.TechnicalCategoryName</div>
                                <div class="kpi-value kpi-value-compact">@category.Trainees.ToString("N0", CultureInfo.CurrentCulture)</div>
                                <div class="kpi-meta">Trainings: @category.Trainings.ToString("N0", CultureInfo.CurrentCulture)</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    if (!Model.HasResults)
    {
        <div class="card shadow-sm border-0 empty-state">
            <div class="card-body py-5 text-center text-muted">
                <p class="mb-2">No trainings match the current filters.</p>
                <p class="mb-0">Adjust the filters above or create a new training entry.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0 training-table">
                        <thead>
                            <tr>
                                <th scope="col">Training type</th>
                                <th scope="col">Period</th>
                                <th scope="col">Strength (Offrs – JCOs – ORs)</th>
                                <th scope="col">Total</th>
                                <th scope="col">Source</th>
                                <th scope="col">Projects</th>
                                <th scope="col">Notes</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                @foreach (var training in Model.Trainings)
                {
                    <tr>
                        <td>
                            <div class="fw-semibold">@training.TrainingTypeName</div>
                        </td>
                        <td class="text-muted small">@training.Period</td>
                        <td><span class="badge bg-soft-primary text-primary">@training.Strength</span></td>
                        <td class="fw-semibold">@training.Total.ToString("N0", CultureInfo.CurrentCulture)</td>
                        <td>
                            @if (training.Source == ProjectManagement.Areas.ProjectOfficeReports.Domain.TrainingCounterSource.Legacy)
                            {
                                <span class="badge bg-secondary">Legacy</span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark">Roster</span>
                            }
                        </td>
                        <td>
                            @if (training.ProjectNames.Count == 0)
                            {
                                <span class="text-muted">None linked</span>
                            }
                            else
                            {
                                <ul class="list-unstyled mb-0">
                                @foreach (var project in training.ProjectNames)
                                {
                                    <li>@project</li>
                                }
                                </ul>
                            }
                        </td>
                        <td>
                            @if (string.IsNullOrWhiteSpace(training.Notes))
                            {
                                <span class="text-muted">&mdash;</span>
                            }
                            else
                            {
                                @training.Notes
                            }
                        </td>
                        <td class="text-end">
                            <a asp-page="./Manage" asp-route-id="@training.Id" class="btn btn-sm btn-outline-primary">Manage</a>
                        </td>
                    </tr>
                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
}

@section Styles
{
    <link rel="stylesheet" href="~/css/project-office-reports/training/manage.css" asp-append-version="true" />
}

@section Scripts
{
    <script type="module" src="~/js/project-office-reports/training/index.js" asp-append-version="true"></script>
}
