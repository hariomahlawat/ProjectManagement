@page
@using System.Globalization
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Training.IndexModel
@{
    ViewData["Title"] = "Training tracker";
    ViewData["UseFullWidth"] = false;
    var showExportModal = ViewData["ShowTrainingExportModal"] as bool? ?? false;

    // ------------------------------------------------------------
    // active filters counter
    // ------------------------------------------------------------
    var activeFilters = 0;
    if (Model.Filter.TypeId.HasValue && Model.Filter.TypeId.Value != Guid.Empty) activeFilters++;
    if (Model.Filter.ProjectId.HasValue) activeFilters++;
    if (Model.Filter.ProjectTechnicalCategoryId.HasValue) activeFilters++;
    if (Model.Filter.Category.HasValue) activeFilters++;
    if (Model.Filter.From.HasValue || Model.Filter.To.HasValue) activeFilters++;
    if (!string.IsNullOrWhiteSpace(Model.Filter.Search)) activeFilters++;

    // ------------------------------------------------------------
    // route values for filter-preserving links
    // ------------------------------------------------------------
    var fromValue = Model.Filter.From?.ToString("yyyy-MM-dd");
    var toValue = Model.Filter.To?.ToString("yyyy-MM-dd");
    var baseFilterRouteValues = new Dictionary<string, string?>
    {
        ["TypeId"] = Model.Filter.TypeId?.ToString(),
        ["Category"] = Model.Filter.Category?.ToString(),
        ["From"] = fromValue,
        ["To"] = toValue,
        ["Search"] = Model.Filter.Search
    };

    // ------------------------------------------------------------
    // kpi buckets from service
    // ------------------------------------------------------------
    var sim = Model.Kpis.ByType.FirstOrDefault(x => x.TypeName.Equals("Simulator", StringComparison.OrdinalIgnoreCase));
    var drone = Model.Kpis.ByType.FirstOrDefault(x => x.TypeName.Equals("Drone", StringComparison.OrdinalIgnoreCase));
}

<!-- ============================================================
     PAGE HEADER
     ============================================================ -->
<div class="training-page-header card shadow-sm border-0 mb-4">
    <div class="card-body d-flex flex-column flex-lg-row gap-3 gap-lg-4 align-items-start align-items-lg-center justify-content-between">
        <div>
            <h1 class="h2 mb-2">Training tracker</h1>
            <p class="small text-secondary mb-0">
                Current view:
                @(
                                Model.Filter.TypeId.HasValue && Model.Filter.TypeId.Value != Guid.Empty
                                ? Model.TrainingTypes.FirstOrDefault(t => t.Value == Model.Filter.TypeId.ToString())?.Text ?? "Selected training type"
                                : "All training types"
                                ),
                @(
                                Model.Filter.ProjectTechnicalCategoryId.HasValue
                                ? Model.ProjectTechnicalCategoryOptions.FirstOrDefault(t => t.Value == Model.Filter.ProjectTechnicalCategoryId.Value.ToString())?.Text ?? "Selected technical category"
                                : "All technical categories"
                                ),
                @(
                                Model.Filter.Category.HasValue
                                ? Model.CategoryOptions.FirstOrDefault(t => t.Value == Model.Filter.Category.ToString())?.Text ?? "Selected category"
                                : "All categories"
                                )
                @if (Model.Filter.ProjectId.HasValue)
                {
                    <text>, </text>
                    @(Model.SelectedProjectName ?? "Selected project")
                }
                @if (Model.Filter.From.HasValue || Model.Filter.To.HasValue)
                {
                    <text>, period </text>
                    @if (Model.Filter.From.HasValue)
                    {
                        @Model.Filter.From?.ToString("dd MMM yyyy")
                    }
                    @if (Model.Filter.To.HasValue)
                    {
                        <text> to </text>
                        @Model.Filter.To?.ToString("dd MMM yyyy")
                    }
                }
            </p>
        </div>
        <div class="d-flex flex-wrap align-items-center gap-2">
            <button type="button"
                    class="btn btn-outline-secondary d-inline-flex align-items-center gap-2 training-filter-trigger"
                    data-bs-toggle="modal"
                    data-bs-target="#trainingFiltersModal">
                <i class="bi bi-funnel" aria-hidden="true"></i>
                <span>Filters</span>
                @if (activeFilters > 0)
                {
                    <span class="badge bg-primary-subtle text-primary">@activeFilters</span>
                }
            </button>
            @if (Model.CanApproveTrainingTracker)
            {
                <a asp-page="./Approvals"
                   class="btn btn-outline-primary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-shield-check" aria-hidden="true"></i>
                    <span>Training approvals</span>
                    @await Component.InvokeAsync("TrainingApprovalsBadge")
                </a>
            }
            @if (Model.CanManageTrainingTracker)
            {
                <a asp-page="./Manage" class="btn btn-primary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-plus-lg" aria-hidden="true"></i>
                    <span>New training</span>
                </a>
            }
            @if (Model.IsFeatureEnabled)
            {
                <button type="button"
                        class="btn btn-outline-secondary d-inline-flex align-items-center gap-2"
                        data-bs-toggle="modal"
                        data-bs-target="#trainingExportModal">
                    <i class="bi bi-download" aria-hidden="true"></i>
                    <span>Export</span>
                </button>
            }
        </div>
    </div>
</div>

@if (!Model.IsFeatureEnabled)
{
    <div class="alert alert-warning" role="alert">
        The training tracker is currently disabled. Please check back after the feature is enabled.
    </div>
}
else
{
    <!-- ============================================================
         KPI ROW
         ============================================================ -->
    <div class="row g-3 mb-4">
        <!-- total trainings: no strength -->
        <div class="col-6 col-lg-3">
            <div class="card kpi-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="kpi-label">Total trainings</div>
                    <div class="kpi-value">@Model.Kpis.TotalTrainings.ToString("N0", CultureInfo.CurrentCulture)</div>
                </div>
            </div>
        </div>

        <!-- total trainees: with strength -->
        <div class="col-6 col-lg-3">
            <div class="card kpi-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="kpi-label">Total trainees</div>
                    <div class="kpi-value">
                        @Model.Kpis.TotalTrainees.ToString("N0", CultureInfo.CurrentCulture)
                        @if (Model.TotalOfficers + Model.TotalJcos + Model.TotalOrs > 0)
                        {
                            <span class="text-muted fs-6">
                                (
                                @Model.TotalOfficers.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.TotalJcos.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.TotalOrs.ToString("N0", CultureInfo.CurrentCulture)
                                )
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- simulator: trainees + strength -->
        <div class="col-6 col-lg-3">
            <div class="card kpi-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="kpi-label">Simulator</div>
                    <div class="kpi-value">
                        @((sim?.Trainees ?? 0).ToString("N0", CultureInfo.CurrentCulture))
                        @if (Model.SimulatorStrength.Officers + Model.SimulatorStrength.Jcos + Model.SimulatorStrength.Ors > 0)
                        {
                            <span class="text-muted fs-6">
                                (
                                @Model.SimulatorStrength.Officers.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.SimulatorStrength.Jcos.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.SimulatorStrength.Ors.ToString("N0", CultureInfo.CurrentCulture)
                                )
                            </span>
                        }
                    </div>
                    <div class="kpi-meta">Trainings: @((sim?.Trainings ?? 0).ToString("N0", CultureInfo.CurrentCulture))</div>
                </div>
            </div>
        </div>

        <!-- drone: trainees + strength -->
        <div class="col-6 col-lg-3">
            <div class="card kpi-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="kpi-label">Drone</div>
                    <div class="kpi-value">
                        @((drone?.Trainees ?? 0).ToString("N0", CultureInfo.CurrentCulture))
                        @if (Model.DroneStrength.Officers + Model.DroneStrength.Jcos + Model.DroneStrength.Ors > 0)
                        {
                            <span class="text-muted fs-6">
                                (
                                @Model.DroneStrength.Officers.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.DroneStrength.Jcos.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.DroneStrength.Ors.ToString("N0", CultureInfo.CurrentCulture)
                                )
                            </span>
                        }
                    </div>
                    <div class="kpi-meta">Trainings: @((drone?.Trainings ?? 0).ToString("N0", CultureInfo.CurrentCulture))</div>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================================
         TRAINING YEAR CHART + TECHNICAL CATEGORY CARDS (7 : 5)
         ============================================================ -->
    @if (Model.TrainingYearChart.Count > 0 || Model.Kpis.ByTechnicalCategory.Count > 0)
    {
        <div class="row g-4 align-items-stretch mb-4">

            @* Chart: 7 columns on XL, full width on smaller screens *@
            @if (Model.TrainingYearChart.Count > 0)
            {
                <div class="col-12 col-xl-7">
                    <div class="card training-chart-card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <h2 class="h6 mb-1">Training year trend</h2>
                                    <p class="text-muted small mb-0">
                                        Simulator vs Drone by training year (Apr–Mar)
                                    </p>
                                </div>
                                <button type="button"
                                        class="btn btn-light btn-sm"
                                        data-action="download-png"
                                        data-target="training-year-trend-canvas">
                                    <i class="bi bi-download"></i>
                                </button>
                            </div>

                            <div class="ratio ratio-21x9 pm-util-maxh-360"
                                 data-training-year='@System.Text.Json.JsonSerializer.Serialize(
                                                                  Model.TrainingYearChart,
                                                                  new System.Text.Json.JsonSerializerOptions
                                                                  {
                                                                      PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase
                                                                  })'>
                    <canvas id="training-year-trend-canvas"></canvas>
                </div>
            </div>
        </div>
    </div>
        }

            @* Simulator technical trainings cards: 5 columns on XL, 2 cards per row on md+ *@
            @if (Model.Kpis.ByTechnicalCategory.Count > 0)
            {
                <div class="col-12 col-xl-5">
                    <div class="mb-0 h-100">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h2 class="h6 mb-0">Simulator technical trainings</h2>
                            <p class="text-muted small mb-0">
                                Top categories in the current view
                            </p>
                        </div>

                        <div class="row g-3">
                            @foreach (var cat in Model.Kpis.ByTechnicalCategory
                                            .OrderByDescending(x => x.Trainees)
                                            .Take(6))
                            {
                                var categoryRouteValues = new Dictionary<string, string?>(baseFilterRouteValues)
                                {
                                    ["ProjectTechnicalCategoryId"] = cat.TechnicalCategoryId.ToString()
                                };
                                <div class="col-12 col-md-6">
                                    <a asp-page="./Index"
                                       asp-all-route-data="categoryRouteValues"
                                       class="text-decoration-none">
                                        <div class="card training-tech-card shadow-sm border-0 h-100">
                                            <div class="card-body">
                                                <div class="small text-muted mb-1">Technical category</div>
                                                <div class="fw-semibold text-truncate"
                                                     title="@cat.TechnicalCategoryName">
                                                    @cat.TechnicalCategoryName
                                                </div>

                                                <div class="mt-3 small text-muted">Trainees</div>
                                                <div class="fs-4 fw-semibold">
                                                    @cat.Trainees.ToString("N0", CultureInfo.CurrentCulture)
                                                    @if (cat.Officers > 0 || cat.Jcos > 0 || cat.Ors > 0)
                                                    {
                                                        <span class="text-muted fs-6">
                                                            (
                                                            @cat.Officers.ToString("N0", CultureInfo.CurrentCulture)
                                                            –
                                                            @cat.Jcos.ToString("N0", CultureInfo.CurrentCulture)
                                                            –
                                                            @cat.Ors.ToString("N0", CultureInfo.CurrentCulture)
                                                            )
                                                        </span>
                                                    }
                                                </div>

                                                <div class="mt-2 d-flex justify-content-between align-items-center small text-muted">
                                                    <span>Trainings</span>
                                                    <span>
                                                        @cat.Trainings.ToString("N0", CultureInfo.CurrentCulture)
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- ============================================================
         PROJECT BREAKDOWN (TECHNICAL CATEGORY)
         ============================================================ -->
    @if (Model.Filter.ProjectTechnicalCategoryId.HasValue)
    {
        var clearCategoryRouteValues = new Dictionary<string, string?>(baseFilterRouteValues);
        var clearProjectRouteValues = new Dictionary<string, string?>(baseFilterRouteValues)
        {
            ["ProjectTechnicalCategoryId"] = Model.Filter.ProjectTechnicalCategoryId.Value.ToString()
        };
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
                    <div>
                        <h2 class="h6 mb-1">Projects in this technical category</h2>
                        <p class="text-muted small mb-0">
                            A session linked to multiple projects appears under each project.
                        </p>
                    </div>
                    <div class="d-flex flex-wrap gap-2">
                        @if (Model.Filter.ProjectId.HasValue)
                        {
                            <a asp-page="./Index"
                               asp-all-route-data="clearProjectRouteValues"
                               class="btn btn-outline-secondary btn-sm">
                                Clear project filter
                            </a>
                        }
                        <a asp-page="./Index"
                           asp-all-route-data="clearCategoryRouteValues"
                           class="btn btn-outline-secondary btn-sm">
                            Clear category filter
                        </a>
                    </div>
                </div>

                @if (Model.ProjectBreakdown.Count == 0)
                {
                    <div class="text-muted">No projects found for the current filters.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table pm-table align-middle mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">Project</th>
                                    <th scope="col">Training sessions</th>
                                    <th scope="col" class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var project in Model.ProjectBreakdown)
                                {
                                    var projectRouteValues = new Dictionary<string, string?>(baseFilterRouteValues)
                                    {
                                        ["ProjectTechnicalCategoryId"] = Model.Filter.ProjectTechnicalCategoryId.Value.ToString(),
                                        ["ProjectId"] = project.ProjectId.ToString()
                                    };
                                    <tr class="@(Model.Filter.ProjectId == project.ProjectId ? "table-primary" : string.Empty)">
                                        <td>
                                            <a asp-page="/Projects/Overview"
                                               asp-route-id="@project.ProjectId"
                                               class="fw-semibold text-decoration-none">
                                                @project.ProjectName
                                            </a>
                                        </td>
                                        <td class="fw-semibold">@project.TrainingSessions.ToString("N0", CultureInfo.CurrentCulture)</td>
                                        <td class="text-end">
                                            <a asp-page="./Index"
                                               asp-all-route-data="projectRouteValues"
                                               class="btn btn-sm btn-outline-primary">
                                                View sessions
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }



    <!-- ============================================================
         FILTERS MODAL
         ============================================================ -->
    <div class="modal fade"
         id="trainingFiltersModal"
         tabindex="-1"
         aria-labelledby="trainingFiltersModalLabel"
         aria-hidden="true"
         data-bs-focus="true">
        <div class="modal-dialog modal-dialog-scrollable modal-lg modal-fullscreen-sm-down">
            <div class="modal-content">
                <form method="get" class="w-100">
                    <div class="modal-header">
                        <h2 class="modal-title h5" id="trainingFiltersModalLabel">Filters</h2>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-lg-4">
                                <label asp-for="Filter.TypeId" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <select asp-for="Filter.TypeId" asp-items="Model.TrainingTypes" class="form-select"></select>
                            </div>
                            <div class="col-lg-4">
                                <label asp-for="Filter.ProjectTechnicalCategoryId" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <select asp-for="Filter.ProjectTechnicalCategoryId" asp-items="Model.ProjectTechnicalCategoryOptions" class="form-select"></select>
                            </div>
                            <div class="col-lg-4">
                                <label asp-for="Filter.Category" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <select asp-for="Filter.Category" asp-items="Model.CategoryOptions" class="form-select"></select>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Filter.From" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <input asp-for="Filter.From" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Filter.To" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <input asp-for="Filter.To" class="form-control" />
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <label asp-for="Filter.Search" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <input asp-for="Filter.Search" class="form-control" placeholder="Search notes or projects" />
                            </div>
                        </div>
                        <input asp-for="Filter.ProjectId" type="hidden" />
                    </div>
                    <div class="modal-footer gap-2 justify-content-between">
                        <a asp-page="./Index" class="btn btn-link btn-sm px-0">Reset filters</a>
                        <button type="submit" class="btn btn-primary btn-sm">Apply filters</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- ============================================================
         EXPORT MODAL
         ============================================================ -->
    <div class="modal fade"
         id="trainingExportModal"
         tabindex="-1"
         aria-labelledby="trainingExportModalLabel"
         aria-hidden="true"
         data-bs-focus="true"
         data-training-export-auto-show="@(showExportModal.ToString().ToLowerInvariant())">
        <div class="modal-dialog modal-dialog-scrollable modal-lg modal-fullscreen-sm-down">
            <div class="modal-content">
                <form method="post" asp-page-handler="Export" class="w-100 training-export-form">
                    <div class="modal-header">
                        <h2 class="modal-title h5" id="trainingExportModalLabel">Export trainings</h2>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="row g-3">
                            <div class="col-lg-4">
                                <label asp-for="Export.TypeId" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <select asp-for="Export.TypeId" asp-items="Model.TrainingTypes" class="form-select"></select>
                                <span asp-validation-for="Export.TypeId" class="text-danger small"></span>
                            </div>
                            <div class="col-lg-4">
                                <label asp-for="Export.ProjectTechnicalCategoryId" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <select asp-for="Export.ProjectTechnicalCategoryId" asp-items="Model.ProjectTechnicalCategoryOptions" class="form-select"></select>
                                <span asp-validation-for="Export.ProjectTechnicalCategoryId" class="text-danger small"></span>
                            </div>
                            <div class="col-lg-4">
                                <label asp-for="Export.Category" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <select asp-for="Export.Category" asp-items="Model.CategoryOptions" class="form-select"></select>
                                <span asp-validation-for="Export.Category" class="text-danger small"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Export.From" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <input asp-for="Export.From" class="form-control" />
                                <span asp-validation-for="Export.From" class="text-danger small"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Export.To" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <input asp-for="Export.To" class="form-control" />
                                <span asp-validation-for="Export.To" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <label asp-for="Export.Search" class="form-label small text-uppercase text-secondary fw-semibold"></label>
                                <input asp-for="Export.Search" class="form-control" placeholder="Search notes or projects" />
                                <span asp-validation-for="Export.Search" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input asp-for="Export.IncludeRoster" class="form-check-input" />
                                    <label asp-for="Export.IncludeRoster" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer gap-2 justify-content-between flex-wrap">
                        <p class="text-muted small mb-0">Your export will use the filters above. Default values match the current view.</p>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary btn-sm" data-training-busy-label="Preparing...">
                                <i class="bi bi-download" aria-hidden="true"></i>
                                <span>Export</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- ============================================================
     TABLE / EMPTY
     ============================================================ -->
    @if (!Model.HasResults)
    {
        <div class="card shadow-sm border-0 empty-state">
            <div class="card-body py-5 text-center text-muted">
                <p class="mb-2">No trainings match the current filters.</p>
                <p class="mb-3">Adjust the filters above or create a new training entry.</p>
                <div class="d-flex justify-content-center gap-2">
                    <a asp-page="./Index" class="btn btn-outline-secondary btn-sm">Clear filters</a>
                    @if (Model.CanManageTrainingTracker)
                    {
                        <a asp-page="./Manage" class="btn btn-primary btn-sm">New training</a>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card pm-card-table shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table pm-table align-middle mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Training type</th>
                                <th scope="col">Period</th>
                                <th scope="col">Source</th>
                                <th scope="col">Total</th>
                                <th scope="col">Strength</th>
                                <th scope="col">Projects</th>
                                <th scope="col">Notes/ Remarks</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var training in Model.Trainings)
                            {
                                var extraProjects = training.ProjectNames.Count > 2 ? training.ProjectNames.Count - 2 : 0;
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@training.TrainingTypeName</div>
                                    </td>
                                    <td class="text-muted small">
                                        @training.Period@if (!string.IsNullOrWhiteSpace(training.PeriodDayCount))
                                        {
                                            <text> (@training.PeriodDayCount)</text>
                                        }
                                    </td>
                                    <td>
                                        @if (training.Source == ProjectManagement.Areas.ProjectOfficeReports.Domain.TrainingCounterSource.Legacy)
                                        {
                                            <span class="badge bg-secondary">Legacy</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-dark">Roster</span>
                                        }
                                    </td>
                                    <td class="fw-semibold">@training.Total.ToString("N0", CultureInfo.CurrentCulture)</td>
                                    <td>
                                        <span class="badge bg-light text-dark fw-normal">@training.Strength</span>
                                    </td>
                                    <td class="pm-util-minw-180">
                                        @if (training.ProjectNames.Count == 0)
                                        {
                                            <span class="text-muted">None linked</span>
                                        }
                                        else
                                        {
                                            <ul class="list-unstyled mb-0 small text-truncate-2">
                                                @foreach (var project in training.ProjectNames.Take(2))
                                                {
                                                    <li>@project</li>
                                                }
                                            </ul>
                                            @if (extraProjects > 0)
                                            {
                                                <div class="small text-secondary">+ @extraProjects more</div>
                                            }
                                        }
                                    </td>
                                    <td class="small text-truncate pm-util-maxw-200">
                                        @if (string.IsNullOrWhiteSpace(training.Notes))
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                        else
                                        {
                                            @training.Notes
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-page="./View"
                                           asp-route-id="@training.Id"
                                           class="btn btn-sm btn-outline-secondary me-1">View</a>

                                        @if (Model.CanManageTrainingTracker)
                                        {
                                            <a asp-page="./Manage" asp-route-id="@training.Id" class="btn btn-sm btn-outline-primary">Manage</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between align-items-center">
                <span class="text-muted small">
                    Showing the 20 most recent trainings in this view.
                </span>
                @if (Model.HasMoreRecords)
                {
                    <a asp-page="./Records"
                       asp-route-TypeId="@(Model.Filter.TypeId)"
                       asp-route-ProjectTechnicalCategoryId="@(Model.Filter.ProjectTechnicalCategoryId)"
                       asp-route-ProjectId="@(Model.Filter.ProjectId)"
                       asp-route-Category="@(Model.Filter.Category)"
                       asp-route-From="@(Model.Filter.From?.ToString("yyyy-MM-dd"))"
                       asp-route-To="@(Model.Filter.To?.ToString("yyyy-MM-dd"))"
                       asp-route-Search="@(Model.Filter.Search)"
                       class="btn btn-outline-primary btn-sm">
                        View all records
                    </a>
                }
            </div>
        </div>
    }
}

