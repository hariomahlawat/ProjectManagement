@page
@using System.Globalization
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Training.IndexModel
@{
    ViewData["Title"] = "Training tracker";
    ViewData["UseFullWidth"] = false;
    var showExportModal = ViewData["ShowTrainingExportModal"] as bool? ?? false;

    // ------------------------------------------------------------
    // active filters counter
    // ------------------------------------------------------------
    var activeFilters = 0;
    if (Model.Filter.TypeId.HasValue && Model.Filter.TypeId.Value != Guid.Empty) activeFilters++;
    if (Model.Filter.ProjectTechnicalCategoryId.HasValue) activeFilters++;
    if (Model.Filter.Category.HasValue) activeFilters++;
    if (Model.Filter.From.HasValue || Model.Filter.To.HasValue) activeFilters++;
    if (!string.IsNullOrWhiteSpace(Model.Filter.Search)) activeFilters++;

    // ------------------------------------------------------------
    // kpi buckets from service
    // ------------------------------------------------------------
    var sim = Model.Kpis.ByType.FirstOrDefault(x => x.TypeName.Equals("Simulator", StringComparison.OrdinalIgnoreCase));
    var drone = Model.Kpis.ByType.FirstOrDefault(x => x.TypeName.Equals("Drone", StringComparison.OrdinalIgnoreCase));
}

<!-- ============================================================
     PAGE HEADER
     ============================================================ -->
<div class="training-page-header card shadow-sm border-0 mb-4">
    <div class="card-body d-flex flex-column flex-lg-row gap-3 gap-lg-4 align-items-start align-items-lg-center justify-content-between">
        <div>
            <h1 class="h2 mb-2">Training tracker</h1>
            <p class="small text-secondary mb-0">
                Current view:
                @(
                                Model.Filter.TypeId.HasValue && Model.Filter.TypeId.Value != Guid.Empty
                                ? Model.TrainingTypes.FirstOrDefault(t => t.Value == Model.Filter.TypeId.ToString())?.Text ?? "Selected training type"
                                : "All training types"
                                ),
                @(
                                Model.Filter.ProjectTechnicalCategoryId.HasValue
                                ? Model.ProjectTechnicalCategoryOptions.FirstOrDefault(t => t.Value == Model.Filter.ProjectTechnicalCategoryId.Value.ToString())?.Text ?? "Selected technical category"
                                : "All technical categories"
                                ),
                @(
                                Model.Filter.Category.HasValue
                                ? Model.CategoryOptions.FirstOrDefault(t => t.Value == Model.Filter.Category.ToString())?.Text ?? "Selected category"
                                : "All categories"
                                )
                @if (Model.Filter.From.HasValue || Model.Filter.To.HasValue)
                {
                    <text>, period </text>
                    @if (Model.Filter.From.HasValue)
                    {
                        @Model.Filter.From?.ToString("dd MMM yyyy")
                    }
                    @if (Model.Filter.To.HasValue)
                    {
                        <text> to </text>
                        @Model.Filter.To?.ToString("dd MMM yyyy")
                    }
                }
            </p>
        </div>
        <div class="d-flex flex-wrap align-items-center gap-2">
            <button type="button"
                    class="btn btn-outline-secondary d-inline-flex align-items-center gap-2 training-filter-trigger"
                    data-bs-toggle="modal"
                    data-bs-target="#trainingFiltersModal">
                <i class="bi bi-funnel" aria-hidden="true"></i>
                <span>Filters</span>
                @if (activeFilters > 0)
                {
                    <span class="badge bg-primary-subtle text-primary">@activeFilters</span>
                }
            </button>
            @if (Model.CanApproveTrainingTracker)
            {
                <a asp-page="./Approvals"
                   class="btn btn-outline-primary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-shield-check" aria-hidden="true"></i>
                    <span>Training approvals</span>
                    @await Component.InvokeAsync("TrainingApprovalsBadge")
                </a>
            }
            @if (Model.CanManageTrainingTracker)
            {
                <a asp-page="./Manage" class="btn btn-primary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-plus-lg" aria-hidden="true"></i>
                    <span>New training</span>
                </a>
            }
            @if (Model.IsFeatureEnabled)
            {
                <button type="button"
                        class="btn btn-outline-secondary d-inline-flex align-items-center gap-2"
                        data-bs-toggle="modal"
                        data-bs-target="#trainingExportModal">
                    <i class="bi bi-download" aria-hidden="true"></i>
                    <span>Export</span>
                </button>
            }
        </div>
    </div>
</div>

@if (!Model.IsFeatureEnabled)
{
    <div class="alert alert-warning" role="alert">
        The training tracker is currently disabled. Please check back after the feature is enabled.
    </div>
}
else
{
    <!-- ============================================================
         KPI ROW
         ============================================================ -->
    <div class="row g-3 mb-4">
        <!-- total trainings: no strength -->
        <div class="col-6 col-lg-3">
            <div class="card kpi-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="kpi-label">Total trainings</div>
                    <div class="kpi-value">@Model.Kpis.TotalTrainings.ToString("N0", CultureInfo.CurrentCulture)</div>
                </div>
            </div>
        </div>

        <!-- total trainees: with strength -->
        <div class="col-6 col-lg-3">
            <div class="card kpi-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="kpi-label">Total trainees</div>
                    <div class="kpi-value">
                        @Model.Kpis.TotalTrainees.ToString("N0", CultureInfo.CurrentCulture)
                        @if (Model.TotalOfficers + Model.TotalJcos + Model.TotalOrs > 0)
                        {
                            <span class="text-muted fs-6">
                                (
                                @Model.TotalOfficers.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.TotalJcos.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.TotalOrs.ToString("N0", CultureInfo.CurrentCulture)
                                )
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- simulator: trainees + strength -->
        <div class="col-6 col-lg-3">
            <div class="card kpi-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="kpi-label">Simulator</div>
                    <div class="kpi-value">
                        @((sim?.Trainees ?? 0).ToString("N0", CultureInfo.CurrentCulture))
                        @if (Model.SimulatorStrength.Officers + Model.SimulatorStrength.Jcos + Model.SimulatorStrength.Ors > 0)
                        {
                            <span class="text-muted fs-6">
                                (
                                @Model.SimulatorStrength.Officers.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.SimulatorStrength.Jcos.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.SimulatorStrength.Ors.ToString("N0", CultureInfo.CurrentCulture)
                                )
                            </span>
                        }
                    </div>
                    <div class="kpi-meta">Trainings: @((sim?.Trainings ?? 0).ToString("N0", CultureInfo.CurrentCulture))</div>
                </div>
            </div>
        </div>

        <!-- drone: trainees + strength -->
        <div class="col-6 col-lg-3">
            <div class="card kpi-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="kpi-label">Drone</div>
                    <div class="kpi-value">
                        @((drone?.Trainees ?? 0).ToString("N0", CultureInfo.CurrentCulture))
                        @if (Model.DroneStrength.Officers + Model.DroneStrength.Jcos + Model.DroneStrength.Ors > 0)
                        {
                            <span class="text-muted fs-6">
                                (
                                @Model.DroneStrength.Officers.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.DroneStrength.Jcos.ToString("N0", CultureInfo.CurrentCulture)
                                –
                                @Model.DroneStrength.Ors.ToString("N0", CultureInfo.CurrentCulture)
                                )
                            </span>
                        }
                    </div>
                    <div class="kpi-meta">Trainings: @((drone?.Trainings ?? 0).ToString("N0", CultureInfo.CurrentCulture))</div>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================================
         TRAINING YEAR CHART
         ============================================================ -->
    @if (Model.TrainingYearChart.Count > 0)
    {
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <h2 class="h6 mb-1">Training year trend</h2>
                        <p class="text-muted small mb-0">Simulator vs Drone by training year (Apr–Mar)</p>
                    </div>
                    <button type="button"
                            class="btn btn-light btn-sm"
                            data-action="download-png"
                            data-target="training-year-trend-canvas">
                        <i class="bi bi-download"></i>
                    </button>
                </div>
                <div class="ratio ratio-21x9 pm-util-maxh-360"
                     data-training-year='@System.Text.Json.JsonSerializer.Serialize(Model.TrainingYearChart, new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase })'>
                    <canvas id="training-year-trend-canvas"></canvas>
                </div>
            </div>
        </div>
    }

    <!-- ============================================================
     TECHNICAL CATEGORY CARDS
     ============================================================ -->
    @if (Model.Kpis.ByTechnicalCategory.Count > 0)
    {
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h2 class="h6 mb-0">Simulator technical trainings</h2>
                <p class="text-muted small mb-0">Top categories in the current view</p>
            </div>
            <div class="row g-3">
                @foreach (var cat in Model.Kpis.ByTechnicalCategory
                        .OrderByDescending(x => x.Trainees)
                        .Take(6))
                {
                    <div class="col-12 col-md-6 col-lg-4 col-xl-2">
                        <div class="card training-tech-card shadow-sm border-0 h-100">
                            <div class="card-body">
                                <div class="small text-muted mb-1">Technical category</div>
                                <div class="fw-semibold text-truncate" title="@cat.TechnicalCategoryName">@cat.TechnicalCategoryName</div>

                                <div class="mt-3 small text-muted">Trainees</div>
                                <div class="fs-4 fw-semibold">
                                    @cat.Trainees.ToString("N0", CultureInfo.CurrentCulture)
                                    @if (cat.Officers > 0 || cat.Jcos > 0 || cat.Ors > 0)
                                    {
                                        <span class="text-muted fs-6">
                                            (
                                            @cat.Officers.ToString("N0", CultureInfo.CurrentCulture)
                                            –
                                            @cat.Jcos.ToString("N0", CultureInfo.CurrentCulture)
                                            –
                                            @cat.Ors.ToString("N0", CultureInfo.CurrentCulture)
                                            )
                                        </span>
                                    }
                                </div>

                                <div class="mt-2 d-flex justify-content-between align-items-center small text-muted">
                                    <span>Trainings</span>
                                    <span>@cat.Trainings.ToString("N0", CultureInfo.CurrentCulture)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- ============================================================
         FILTERS MODAL
         ============================================================ -->
    <!-- (unchanged – keeping your existing filters + export modals) -->
    @* ... filters modal markup ... *@
    @* ... export modal markup ... *@

    <!-- ============================================================
     TABLE / EMPTY
     ============================================================ -->
    @if (!Model.HasResults)
    {
        <div class="card shadow-sm border-0 empty-state">
            <div class="card-body py-5 text-center text-muted">
                <p class="mb-2">No trainings match the current filters.</p>
                <p class="mb-3">Adjust the filters above or create a new training entry.</p>
                <div class="d-flex justify-content-center gap-2">
                    <a asp-page="./Index" class="btn btn-outline-secondary btn-sm">Clear filters</a>
                    @if (Model.CanManageTrainingTracker)
                    {
                        <a asp-page="./Manage" class="btn btn-primary btn-sm">New training</a>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card pm-card-table shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table pm-table align-middle mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Training type</th>
                                <th scope="col">Period</th>
                                <th scope="col">Source</th>
                                <th scope="col">Total</th>
                                <th scope="col">Strength</th>
                                <th scope="col">Projects</th>
                                <th scope="col">Notes/ Remarks</th>
                                @if (Model.CanManageTrainingTracker)
                                {
                                    <th scope="col" class="text-end">Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var training in Model.Trainings)
                            {
                                var extraProjects = training.ProjectNames.Count > 2 ? training.ProjectNames.Count - 2 : 0;
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@training.TrainingTypeName</div>
                                    </td>
                                    <td class="text-muted small">
                                        @training.Period@if (!string.IsNullOrWhiteSpace(training.PeriodDayCount))
                                        {
                                            <text> (@training.PeriodDayCount)</text>
                                        }
                                    </td>
                                    <td>
                                        @if (training.Source == ProjectManagement.Areas.ProjectOfficeReports.Domain.TrainingCounterSource.Legacy)
                                        {
                                            <span class="badge bg-secondary">Legacy</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-dark">Roster</span>
                                        }
                                    </td>
                                    <td class="fw-semibold">@training.Total.ToString("N0", CultureInfo.CurrentCulture)</td>
                                    <td>
                                        <span class="badge bg-light text-dark fw-normal">@training.Strength</span>
                                    </td>
                                    <td class="pm-util-minw-180">
                                        @if (training.ProjectNames.Count == 0)
                                        {
                                            <span class="text-muted">None linked</span>
                                        }
                                        else
                                        {
                                            <ul class="list-unstyled mb-0 small text-truncate-2">
                                                @foreach (var project in training.ProjectNames.Take(2))
                                                {
                                                    <li>@project</li>
                                                }
                                            </ul>
                                            @if (extraProjects > 0)
                                            {
                                                <div class="small text-secondary">+ @extraProjects more</div>
                                            }
                                        }
                                    </td>
                                    <td class="small text-truncate pm-util-maxw-200">
                                        @if (string.IsNullOrWhiteSpace(training.Notes))
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                        else
                                        {
                                            @training.Notes
                                        }
                                    </td>
                                    @if (Model.CanManageTrainingTracker)
                                    {
                                        <td class="text-end">
                                            <a asp-page="./Manage" asp-route-id="@training.Id" class="btn btn-sm btn-outline-primary">Manage</a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between align-items-center">
                <span class="text-muted small">
                    Showing the 20 most recent trainings in this view.
                </span>
                @if (Model.HasMoreRecords)
                {
                    <a asp-page="./Records"
                       asp-route-TypeId="@(Model.Filter.TypeId)"
                       asp-route-ProjectTechnicalCategoryId="@(Model.Filter.ProjectTechnicalCategoryId)"
                       asp-route-Category="@(Model.Filter.Category)"
                       asp-route-From="@(Model.Filter.From?.ToString("yyyy-MM-dd"))"
                       asp-route-To="@(Model.Filter.To?.ToString("yyyy-MM-dd"))"
                       asp-route-Search="@(Model.Filter.Search)"
                       class="btn btn-outline-primary btn-sm">
                        View all records
                    </a>
                }
            </div>
        </div>
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/components/pm-table.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/project-office-reports/training/manage.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/lib/chart.js/chart.umd.js"></script>
    <script type="module" src="~/js/project-office-reports/training/index.js" asp-append-version="true"></script>
}
