@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Proliferation.IndexModel
@{
    ViewData["Title"] = "Proliferation Tracker";
}
<div class="kpis">
  <div id="kpi-total-completed" class="kpi-card"></div>
  <div id="kpi-total-prolif" class="kpi-card"></div>
  <div id="kpi-total-sdd" class="kpi-card"></div>
  <div id="kpi-total-abw" class="kpi-card"></div>
</div>

<h3>Proliferation in last one year</h3>
<div class="kpis">
  <div id="kpi-lastyear-projects" class="kpi-card"></div>
  <div id="kpi-lastyear-total" class="kpi-card"></div>
  <div id="kpi-lastyear-sdd" class="kpi-card"></div>
  <div id="kpi-lastyear-abw" class="kpi-card"></div>
</div>

<div class="filters">
  <!-- server-rendered controls; values read by JS -->
  <select id="filter-year" multiple></select>
  <input type="text" id="filter-daterange" />
  <select id="filter-project-category"></select>
  <select id="filter-technical-category"></select>
  <select id="filter-source">
    <option value="">All</option>
    <option value="SDD">SDD</option>
    <option value="ABW_515">515 ABW</option>
  </select>
  <input type="text" id="filter-search" placeholder="Search project, simulator, unit" />
  <button id="btn-apply">Apply</button>
  <button id="btn-reset">Reset</button>
</div>

<div class="actions">
  <button id="btn-add-granular">Add Granular</button>
  <button id="btn-add-yearly">Add Yearly</button>
  <div class="split">
    <button id="btn-import">Import</button>
    <div class="menu">
      <button id="btn-import-yearly">Yearly CSV</button>
      <button id="btn-import-granular">Granular CSV</button>
    </div>
  </div>
  <button id="btn-export">Export CSV</button>
  <button id="btn-reconcile">Reconciliation</button>
</div>

<table id="results"></table>

<!-- Empty containers for modal and drawer. Content is injected by external JS -->
<div id="modal-host" aria-hidden="true"></div>
<aside id="drawer-host" aria-hidden="true"></aside>

<link rel="stylesheet" href="~/css/pages/proliferation-tracker.css" />
<script src="~/js/pages/proliferation-tracker.js" defer></script>
