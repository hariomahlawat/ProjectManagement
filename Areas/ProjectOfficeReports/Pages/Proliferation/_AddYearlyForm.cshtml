<form id="yearlyForm" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="yearly-projectId" class="form-label">Project ID<span class="text-danger">*</span></label>
        <div class="input-group input-group-sm">
            <span class="input-group-text" id="yearly-projectId-addon"><i class="bi bi-hash" aria-hidden="true"></i></span>
            <input type="number" class="form-control" id="yearly-projectId" name="projectId" min="1" required aria-describedby="yearly-projectId-help yearly-projectId-addon" />
        </div>
        <div id="yearly-projectId-help" class="form-text">Enter the numeric project identifier.</div>
        <div class="invalid-feedback">Project ID is required.</div>
    </div>

    <div class="mb-3">
        <label for="yearly-source" class="form-label">Source<span class="text-danger">*</span></label>
        <select id="yearly-source" name="source" class="form-select form-select-sm" required>
            <option value="Sdd">SDD</option>
            <option value="Abw515">515 ABW</option>
        </select>
        <div class="invalid-feedback">Select a source.</div>
    </div>

    <div class="row g-3">
        <div class="col-sm-6">
            <label for="yearly-year" class="form-label">Year<span class="text-danger">*</span></label>
            <input type="number" class="form-control form-control-sm" id="yearly-year" name="year" min="2000" max="9999" required />
            <div class="invalid-feedback">Provide a valid year.</div>
        </div>
        <div class="col-sm-6">
            <label for="yearly-quantity" class="form-label">Total quantity<span class="text-danger">*</span></label>
            <input type="number" class="form-control form-control-sm" id="yearly-quantity" name="totalQuantity" min="0" required />
            <div class="invalid-feedback">Quantity must be zero or greater.</div>
        </div>
    </div>

    <div class="mt-3">
        <label for="yearly-remarks" class="form-label">Remarks</label>
        <textarea id="yearly-remarks" name="remarks" class="form-control" rows="3" maxlength="500" placeholder="Optional context or notes"></textarea>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-4">
        <button type="reset" class="btn btn-outline-secondary btn-sm">Clear</button>
        <button type="submit" class="btn btn-primary btn-sm" data-submit>
            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true" hidden></span>
            Save entry
        </button>
    </div>
</form>
