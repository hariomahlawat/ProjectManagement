@model bool

<div class="year-preferences" id="yearPreferences" aria-live="polite">
    @if (!Model)
    {
        <div class="alert alert-warning d-flex align-items-start gap-2 small mb-3" role="status" id="prefPermissionNotice">
            <span aria-hidden="true">⚠️</span>
            <div>Only proliferation approvers can change year preferences. You can still review existing settings.</div>
        </div>
    }
    <form id="yearPreferenceForm" novalidate data-can-manage="@Model.ToString().ToLowerInvariant()">
        <div class="mb-3">
            <label class="form-label" for="prefProject">Project</label>
            <input id="prefProject" class="form-control" type="search" placeholder="Search completed projects" autocomplete="off" list="prefProjectOptions" />
            <datalist id="prefProjectOptions"></datalist>
            <input type="hidden" id="prefProjectId" />
            <div class="form-text">Only completed projects with proliferation history are shown.</div>
        </div>
        <div class="row g-3">
            <div class="col-6">
                <label class="form-label" for="prefSource">Source</label>
                <select id="prefSource" class="form-select" required>
                    <option value="">Select source</option>
                    <option value="1">SDD</option>
                    <option value="2">515 ABW</option>
                </select>
            </div>
            <div class="col-6">
                <label class="form-label" for="prefYear">Year</label>
                <input id="prefYear" class="form-control" type="number" min="2000" max="3000" required />
            </div>
        </div>
        <fieldset class="mt-4" aria-labelledby="prefModeLegend">
            <legend id="prefModeLegend" class="form-label">Preference</legend>
            <div class="list-group">
                <label class="list-group-item list-group-item-action d-flex align-items-start gap-2">
                    <input class="form-check-input mt-1" type="radio" name="prefMode" value="UseYearlyAndGranular" checked>
                    <div>
                        <span class="fw-semibold">Use yearly + granular</span>
                        <div class="text-muted small">Always add approved yearly totals and granular entries for this project-year.</div>
                    </div>
                </label>
                <label class="list-group-item list-group-item-action d-flex align-items-start gap-2">
                    <input class="form-check-input mt-1" type="radio" name="prefMode" value="Auto">
                    <div>
                        <span class="fw-semibold">Auto</span>
                        <div class="text-muted small">Prefer granular totals when present; fall back to yearly.</div>
                    </div>
                </label>
                <label class="list-group-item list-group-item-action d-flex align-items-start gap-2">
                    <input class="form-check-input mt-1" type="radio" name="prefMode" value="UseYearly">
                    <div>
                        <span class="fw-semibold">Use yearly</span>
                        <div class="text-muted small">Always rely on the yearly total for this project-year.</div>
                    </div>
                </label>
                <label class="list-group-item list-group-item-action d-flex align-items-start gap-2">
                    <input class="form-check-input mt-1" type="radio" name="prefMode" value="UseGranular">
                    <div>
                        <span class="fw-semibold">Use granular</span>
                        <div class="text-muted small">Always use granular entries summed for this project-year.</div>
                    </div>
                </label>
            </div>
        </fieldset>
        <div class="alert alert-info d-flex align-items-start gap-2 small mt-3" role="status" id="prefModeHelp">
            <span aria-hidden="true">ℹ️</span>
            <div>Preferences apply per project, source, and calendar year. Changes take effect immediately.</div>
        </div>
        <div id="prefOverrideHint" class="small mt-2 text-info" hidden>
            Overrides available—<a class="text-decoration-none" href="@Url.Page("/Proliferation/Manage", new { area = "ProjectOfficeReports" })#pf-overrides-card">open manager</a> to review mixed data.
        </div>
        <div id="prefCurrentMode" class="text-muted small mt-2" hidden></div>
        <div id="prefSavedAt" class="text-muted small" hidden></div>
        <div class="d-flex justify-content-end gap-2 mt-4">
            <button type="button" class="btn btn-light" id="btnPrefReset">Reset</button>
            <button type="submit" class="btn btn-primary" id="btnSavePreference" @(Model ? string.Empty : "disabled aria-disabled='true'")>
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true" hidden></span>
                Save preference
            </button>
        </div>
    </form>
</div>
