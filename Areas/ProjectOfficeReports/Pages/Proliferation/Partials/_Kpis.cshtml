@* KPI tiles: data is injected by JS. *@
<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-3" id="kpi-overview" aria-live="polite">
  <div class="col">
    <div class="card kpi-card border-0 shadow-sm rounded-4 h-100">
      <div class="card-body d-flex flex-column gap-2 p-4">
        <span class="text-uppercase text-muted small fw-semibold">All time</span>
        <div>
          <div class="text-muted small">Completed projects</div>
          <div id="kpiAllTimeCompletedProjects" class="fs-3 fw-bold lh-1">—</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card kpi-card border-0 shadow-sm rounded-4 h-100">
      <div class="card-body d-flex flex-column gap-2 p-4">
        <span class="text-uppercase text-muted small fw-semibold">All time</span>
        <div>
          <div class="text-muted small">Total proliferation (effective)</div>
          <div id="kpiAllTimeEffective" class="fs-3 fw-bold lh-1">—</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card kpi-card border-0 shadow-sm rounded-4 h-100">
      <div class="card-body d-flex flex-column gap-2 p-4">
        <span class="text-uppercase text-muted small fw-semibold">Last 12 months</span>
        <div>
          <div class="text-muted small">Projects proliferated</div>
          <div id="kpiLastYearProjects" class="fs-3 fw-bold lh-1">—</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card kpi-card border-0 shadow-sm rounded-4 h-100">
      <div class="card-body d-flex flex-column gap-2 p-4">
        <span class="text-uppercase text-muted small fw-semibold">Last 12 months</span>
        <div>
          <div class="text-muted small">Total proliferation (qty)</div>
          <div id="kpiLastYearTotal" class="fs-3 fw-bold lh-1">—</div>
        </div>
      </div>
    </div>
  </div>
</div>
