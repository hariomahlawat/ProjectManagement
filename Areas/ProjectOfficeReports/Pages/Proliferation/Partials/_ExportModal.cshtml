<div class="modal fade" id="proliferationExportModal" tabindex="-1" aria-labelledby="proliferationExportModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title h5" id="proliferationExportModalLabel">Export proliferation overview</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="proliferationExportForm" class="needs-validation" method="get" action="/api/proliferation/export" novalidate>
                    <input type="hidden" name="Page" value="1" />
                    <input type="hidden" name="PageSize" value="0" />

                    <div class="row g-3 align-items-end">
                        <div class="col-12 col-md-4">
                            <label class="form-label">Date filter</label>
                            <div class="btn-group w-100" role="group" aria-label="Export date filter mode">
                                <input type="radio" class="btn-check" name="ExportFilterMode" id="expModeAll" value="all" autocomplete="off" checked>
                                <label class="btn btn-outline-secondary" for="expModeAll">All time</label>
                                <input type="radio" class="btn-check" name="ExportFilterMode" id="expModeYears" value="years" autocomplete="off">
                                <label class="btn btn-outline-secondary" for="expModeYears">Years</label>
                                <input type="radio" class="btn-check" name="ExportFilterMode" id="expModeYearRange" value="yearRange" autocomplete="off">
                                <label class="btn btn-outline-secondary" for="expModeYearRange">Year range</label>
                                <input type="radio" class="btn-check" name="ExportFilterMode" id="expModeRange" value="range" autocomplete="off">
                                <label class="btn btn-outline-secondary" for="expModeRange">Date range</label>
                            </div>
                        </div>

                        <div class="col-12 col-md-4" id="expYearsWrap">
                            <label for="expYears" class="form-label">Years</label>
                            <select id="expYears" name="Years" class="form-select" multiple aria-describedby="expYearsHelp">
                            </select>
                            <div id="expYearsHelp" class="form-text">Choose one or more years, pick a range, or export everything.</div>
                        </div>

                        <div class="col-12 col-md-4 d-none" id="expYearFromWrap">
                            <label for="expYearFrom" class="form-label">From year</label>
                            <select id="expYearFrom" class="form-select" aria-describedby="expYearRangeHelp">
                            </select>
                        </div>

                        <div class="col-12 col-md-4 d-none" id="expYearToWrap">
                            <label for="expYearTo" class="form-label">To year</label>
                            <select id="expYearTo" class="form-select" aria-describedby="expYearRangeHelp">
                            </select>
                            <div id="expYearRangeHelp" class="form-text">Select the inclusive start and end years for export.</div>
                        </div>

                        <div class="col-12 col-md-4 d-none" id="expFromWrap">
                            <label for="expFrom" class="form-label">From date</label>
                            <input id="expFrom" name="FromDateUtc" type="date" class="form-control" />
                        </div>

                        <div class="col-12 col-md-4 d-none" id="expToWrap">
                            <label for="expTo" class="form-label">To date</label>
                            <input id="expTo" name="ToDateUtc" type="date" class="form-control" />
                        </div>

                        <div class="col-12 col-md-4">
                            <label for="expSource" class="form-label">Source</label>
                            <select id="expSource" name="Source" class="form-select">
                                <option value="">All sources</option>
                                <option value="1">SDD</option>
                                <option value="2">515 ABW</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-4">
                            <label for="expProjectCat" class="form-label">Project category</label>
                            <select id="expProjectCat" name="ProjectCategoryId" class="form-select">
                                <option value="">All categories</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-4">
                            <label for="expTechCat" class="form-label">Technical category</label>
                            <select id="expTechCat" name="TechnicalCategoryId" class="form-select">
                                <option value="">All technical</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <label for="expSearch" class="form-label">Search</label>
                            <input id="expSearch" name="Search" type="text" class="form-control" placeholder="Project, simulator, or unit" />
                        </div>
                    </div>

                    <div class="alert alert-warning d-none mt-3" id="expValidationMessage" role="alert"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmExportBtn">
                    <span class="spinner-border spinner-border-sm align-text-bottom me-2 d-none" role="status" aria-hidden="true"></span>
                    Download XLSX
                </button>
            </div>
        </div>
    </div>
</div>
