<div class="offcanvas offcanvas-end" tabindex="-1" id="ocYearly" aria-labelledby="ocYearlyLabel">
  <div class="offcanvas-header">
    <h5 id="ocYearlyLabel" class="offcanvas-title">Add yearly total</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <form id="formYearly" novalidate>
      <div class="mb-3">
        <label for="yProjectId" class="form-label">Project</label>
        <select id="yProjectId" class="form-select" required></select>
        <div class="invalid-feedback">Select a completed project.</div>
      </div>
      <div class="mb-3">
        <label for="ySource" class="form-label">Source</label>
        <select id="ySource" class="form-select" required>
          <option value="Sdd">SDD</option>
          <option value="Abw515">515 ABW</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="yYear" class="form-label">Year</label>
        <input id="yYear" type="number" min="2000" max="3000" class="form-control" required />
      </div>
      <div class="mb-3">
        <label for="yQty" class="form-label">Total quantity</label>
        <input id="yQty" type="number" min="0" class="form-control" required />
      </div>
      <div class="mb-3">
        <label for="yRemarks" class="form-label">Remarks</label>
        <textarea id="yRemarks" class="form-control" maxlength="500" rows="2"></textarea>
      </div>
      <div class="d-flex justify-content-end gap-2">
        <button class="btn btn-light" type="button" data-bs-dismiss="offcanvas">Cancel</button>
        <button class="btn btn-primary" id="btnSaveYearly" type="submit">Save</button>
      </div>
    </form>
  </div>
</div>
