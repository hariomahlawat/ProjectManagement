@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Proliferation.SummaryModel
@{
    ViewData["Title"] = "Proliferation Summary";
}

<div class="container-xxl my-4" data-page="proliferation-summary">
    <h1 class="h3 mb-3">Proliferation summary</h1>
    <p class="text-muted">@Model.Lede</p>

    <section class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body">
            <h2 class="h5">Totals</h2>
            <dl class="row mb-0">
                <dt class="col-sm-4">Projects</dt>
                <dd class="col-sm-8">@Model.ProjectsTotal.ToString("N0")</dd>

                <dt class="col-sm-4">Years</dt>
                <dd class="col-sm-8">@Model.YearsTotal.ToString("N0")</dd>

                <dt class="col-sm-4">Proliferations</dt>
                <dd class="col-sm-8">@Model.GrandTotal.ToString("N0")</dd>

                <dt class="col-sm-4">ABW-515 totals</dt>
                <dd class="col-sm-8">@Model.GrandAbw.ToString("N0")</dd>

                <dt class="col-sm-4">SDD totals</dt>
                <dd class="col-sm-8">@Model.GrandSdd.ToString("N0")</dd>
            </dl>
        </div>
    </section>
</div>
