<form id="granularForm" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="granular-projectId" class="form-label">Project ID<span class="text-danger">*</span></label>
        <div class="input-group input-group-sm">
            <span class="input-group-text" id="granular-projectId-addon"><i class="bi bi-hash" aria-hidden="true"></i></span>
            <input type="number" class="form-control" id="granular-projectId" name="projectId" min="1" required aria-describedby="granular-projectId-help granular-projectId-addon" />
        </div>
        <div id="granular-projectId-help" class="form-text">Only completed projects can record proliferation.</div>
        <div class="invalid-feedback">Project ID is required.</div>
    </div>

    <div class="row g-3">
        <div class="col-sm-6">
            <label for="granular-date" class="form-label">Proliferation date<span class="text-danger">*</span></label>
            <input type="date" class="form-control form-control-sm" id="granular-date" name="proliferationDate" required />
            <div class="invalid-feedback">Enter a valid date.</div>
        </div>
        <div class="col-sm-6">
            <label for="granular-quantity" class="form-label">Quantity<span class="text-danger">*</span></label>
            <input type="number" class="form-control form-control-sm" id="granular-quantity" name="quantity" min="1" required />
            <div class="invalid-feedback">Quantity must be at least 1.</div>
        </div>
    </div>

    <div class="row g-3 mt-0">
        <div class="col-sm-6">
            <label for="granular-unit" class="form-label">Unit<span class="text-danger">*</span></label>
            <input type="text" class="form-control form-control-sm" id="granular-unit" name="unitName" maxlength="120" placeholder="e.g. 123rd Training" required />
            <div class="invalid-feedback">Unit is required.</div>
        </div>
        <div class="col-sm-6">
            <label for="granular-simulator" class="form-label">Simulator<span class="text-danger">*</span></label>
            <input type="text" class="form-control form-control-sm" id="granular-simulator" name="simulatorName" maxlength="120" placeholder="e.g. Pilot Trainer" required />
            <div class="invalid-feedback">Simulator is required.</div>
        </div>
    </div>

    <div class="mt-3">
        <label for="granular-remarks" class="form-label">Remarks</label>
        <textarea id="granular-remarks" name="remarks" class="form-control" rows="3" maxlength="500" placeholder="Optional context or notes"></textarea>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-4">
        <button type="reset" class="btn btn-outline-secondary btn-sm">Clear</button>
        <button type="submit" class="btn btn-primary btn-sm" data-submit>
            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true" hidden></span>
            Save entry
        </button>
    </div>
</form>
