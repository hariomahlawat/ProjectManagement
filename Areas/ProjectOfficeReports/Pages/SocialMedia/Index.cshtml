@model ProjectManagement.Areas.ProjectOfficeReports.Pages.SocialMedia.IndexModel
@using ProjectManagement.Areas.ProjectOfficeReports.SocialMedia.ViewModels
@{
    ViewData["Title"] = "Social media";

    // ----- helper: map platform name -> bootstrap icon -----
    string GetPlatformIcon(string? platformName)
    {
        if (string.IsNullOrWhiteSpace(platformName))
        {
            return "bi-share"; // generic
        }

        var n = platformName.Trim().ToLowerInvariant();

        // X / Twitter
        if (n.Contains("twitter") || n.Contains("x (formerly twitter)") || n == "x" || n.Contains("x "))
        {
            return "bi-twitter";
        }

        if (n.Contains("instagram"))
        {
            return "bi-instagram";
        }

        if (n.Contains("facebook") || n.Contains("fb "))
        {
            return "bi-facebook";
        }

        if (n.Contains("youtube"))
        {
            return "bi-youtube";
        }

        if (n.Contains("linkedin"))
        {
            return "bi-linkedin";
        }

        // fallback
        return "bi-share";
    }

    // normalize dates for filter modal inputs
    string? fromValue = Model.Filter.StartDate?.ToString("yyyy-MM-dd");
    string? toValue = Model.Filter.EndDate?.ToString("yyyy-MM-dd");

    // are filters active?
    var hasFilters =
        (Model.Filter.EventTypeId.HasValue)
        || (Model.Filter.PlatformId.HasValue)
        || !string.IsNullOrWhiteSpace(Model.Filter.SearchQuery)
        || Model.Filter.StartDate.HasValue
        || Model.Filter.EndDate.HasValue
        || Model.Filter.OnlyActiveEventTypes;

    // base data
    var eventsInView = Model.Events ?? Array.Empty<SocialMediaEventListItem>();
    var totalEvents = eventsInView.Count;
    // we don't have "IsCoverReady", so "has photos" stays our proxy
    var coverReady = eventsInView.Count(e => e.PhotoCount > 0);
    var totalPhotos = eventsInView.Sum(e => e.PhotoCount);

    // platforms
    var platformsGrouped = eventsInView
        .GroupBy(e => string.IsNullOrWhiteSpace(e.PlatformName) ? "Unspecified" : e.PlatformName!)
        .Select(g => new { Name = g.Key, Count = g.Count() })
        .OrderByDescending(x => x.Count)
        .ToList();

    var topPlatform = platformsGrouped.ElementAtOrDefault(0);
    var secondPlatform = platformsGrouped.ElementAtOrDefault(1);
    var othersCount = platformsGrouped.Skip(2).Sum(x => x.Count);

    // latest event
    var latestEvent = eventsInView
        .OrderByDescending(e => e.DateOfEvent)
        .ThenByDescending(e => e.PhotoCount)
        .FirstOrDefault();

    // toasts from TempData (your partial already expects a list)
    var toastMessages = new List<SocialMediaToastMessage>();
    if (TempData.TryGetValue("ToastMessage", out var toastMsg) && toastMsg is string okMsg && !string.IsNullOrWhiteSpace(okMsg))
    {
        toastMessages.Add(new SocialMediaToastMessage(okMsg, "success"));
    }
    if (TempData.TryGetValue("ToastError", out var toastErr) && toastErr is string errMsg && !string.IsNullOrWhiteSpace(errMsg))
    {
        toastMessages.Add(new SocialMediaToastMessage(errMsg, "danger"));
    }
}

<partial name="_ToastMessages" model="toastMessages" />

<div class="visit-shell visit-tracker visit-shell--tight">
    <!-- top bar / hero -->
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-3 mt-1">
        <div>
            <nav aria-label="Breadcrumb" class="visit-breadcrumb mb-1">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="" asp-page="/Dashboard/Index">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Social media</li>
                </ol>
            </nav>
            <h2 class="h2 mb-1">Social media footprints</h2>
            <p class="text-muted small mb-0">
                Log organisational posts, clips and coverage. Attach screenshots, pick a platform and export on demand.
            </p>
            @if (latestEvent is not null)
            {
                <p class="text-muted small mt-1 d-inline-flex align-items-center gap-1">
                    <i class="bi bi-clock-history" aria-hidden="true"></i>
                    Latest: @latestEvent.DateOfEvent.ToString("dd MMM yyyy") (@latestEvent.Title)
                </p>
            }
        </div>
        <div class="d-flex gap-2">
            <button type="button"
                    class="btn btn-outline-secondary d-inline-flex align-items-center gap-1"
                    data-bs-toggle="modal"
                    data-bs-target="#socialFiltersModal">
                <i class="bi bi-sliders"></i>
                <span>Filters</span>
                @if (hasFilters)
                {
                    <span class="badge bg-primary rounded-pill ms-1">
                        !
                        <span class="visually-hidden">Filters applied</span>
                    </span>
                }
            </button>

            @if (eventsInView.Count > 0)
            {
                <button type="button"
                        class="btn btn-outline-secondary d-inline-flex align-items-center gap-1"
                        data-bs-toggle="modal"
                        data-bs-target="#exportSocialModal">
                    <i class="bi bi-file-earmark-spreadsheet"></i>
                    <span>Export</span>
                </button>
            }

            @if (Model.CanManage)
            {
                <a asp-page="Create" class="btn btn-primary d-inline-flex align-items-center gap-1">
                    <i class="bi bi-plus-circle"></i>
                    <span>Create event</span>
                </a>
            }
        </div>
    </div>

    <!-- KPI strip -->
    <section class="kpi-strip mb-3">
        <div class="kpi-card kpi-card--blue">
            <div class="kpi-card__top">
                <i class="bi bi-collection"></i>
                <span>Events in view</span>
            </div>
            <div class="kpi-card__value">@totalEvents</div>
        </div>
        <div class="kpi-card kpi-card--teal">
            <div class="kpi-card__top">
                @if (topPlatform is not null)
                {
                    <i class="bi @GetPlatformIcon(topPlatform.Name)" aria-hidden="true"></i>
                }
                else
                {
                    <i class="bi bi-share" aria-hidden="true"></i>
                }
                <span>@(topPlatform?.Name ?? "Top platform")</span>
            </div>
            <div class="kpi-card__value">@((topPlatform?.Count ?? 0).ToString())</div>
            <div class="kpi-card__hint">posts</div>
        </div>
        <div class="kpi-card kpi-card--green">
            <div class="kpi-card__top">
                @if (secondPlatform is not null)
                {
                    <i class="bi @GetPlatformIcon(secondPlatform.Name)" aria-hidden="true"></i>
                }
                else
                {
                    <i class="bi bi-share" aria-hidden="true"></i>
                }
                <span>@(secondPlatform?.Name ?? "Second platform")</span>
            </div>
            <div class="kpi-card__value">@((secondPlatform?.Count ?? 0).ToString())</div>
            <div class="kpi-card__hint">posts</div>
        </div>
        <div class="kpi-card kpi-card--amber">
            <div class="kpi-card__top">
                <i class="bi bi-share" aria-hidden="true"></i>
                <span>Other platforms</span>
            </div>
            <div class="kpi-card__value">@othersCount</div>
            <div class="kpi-card__hint">combined</div>
        </div>
    </section>

    <!-- active filters chips -->
    @if (hasFilters)
    {
        <div class="d-flex flex-wrap gap-2 mb-2">
            @if (Model.Filter.EventTypeId.HasValue)
            {
                var selectedEventType = Model.Filter.EventTypeOptions.FirstOrDefault(o => o.Selected);
                if (selectedEventType is not null)
                {
                    <span class="visit-pill"><i class="bi bi-funnel"></i> @selectedEventType.Text</span>
                }
            }
            @if (Model.Filter.PlatformId.HasValue)
            {
                var selectedPlatform = Model.Filter.PlatformOptions.FirstOrDefault(o => o.Selected);
                if (selectedPlatform is not null)
                {
                    <span class="visit-pill"><i class="bi bi-hash"></i> @selectedPlatform.Text</span>
                }
            }
            @if (Model.Filter.StartDate.HasValue)
            {
                <span class="visit-pill"><i class="bi bi-calendar-event"></i> From: @Model.Filter.StartDate.Value.ToString("dd MMM yyyy")</span>
            }
            @if (Model.Filter.EndDate.HasValue)
            {
                <span class="visit-pill"><i class="bi bi-calendar2-event"></i> To: @Model.Filter.EndDate.Value.ToString("dd MMM yyyy")</span>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Filter.SearchQuery))
            {
                <span class="visit-pill"><i class="bi bi-search"></i> "@Model.Filter.SearchQuery"</span>
            }
            @if (Model.Filter.OnlyActiveEventTypes)
            {
                <span class="visit-pill"><i class="bi bi-check2-circle"></i> Active types only</span>
            }
            <a asp-page="Index" class="text-decoration-none small d-inline-flex align-items-center gap-1 text-secondary">
                <i class="bi bi-x-circle" aria-hidden="true"></i>
                Clear filters
            </a>
        </div>
    }

    <!-- table -->
    <section>
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                <h2 class="h6 mb-0">Events</h2>
                <p class="text-muted small mb-0">Browse social stories and jump into details for galleries and exports.</p>
            </div>
            @if (eventsInView.Count > 0)
            {
                <span class="text-muted small">@eventsInView.Count item@(eventsInView.Count == 1 ? "" : "s")</span>
            }
        </div>

        @if (eventsInView.Count == 0)
        {
            <div class="visit-empty visit-empty--subtle text-center py-5">
                <div class="visit-empty__icon" aria-hidden="true"><i class="bi bi-clipboard2-minus"></i></div>
                <h2 class="visit-empty__title">No events match the current filters</h2>
                <p class="visit-empty__subtitle">Adjust filters or add a new event to get started.</p>
            </div>
        }
        else
        {
            <div class="card border-0 shadow-sm">
                <div class="table-responsive">
                    <table class="table align-middle mb-0 visit-table">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Event type</th>
                                <th scope="col">Title</th>
                                <th scope="col">Platform</th>
                                <th scope="col">Photos</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ev in eventsInView.OrderByDescending(e => e.DateOfEvent))
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@ev.DateOfEvent.ToString("dd MMM yyyy")</div>
                                    </td>
                                    <td>@ev.EventTypeName</td>
                                    <td>
                                        <div class="fw-semibold">@ev.Title</div>
                                        @* your view model doesn't have Description, so we don't try to show it *@
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="bi @GetPlatformIcon(ev.PlatformName ?? string.Empty) text-muted" aria-hidden="true"></i>
                                            <span>@(ev.PlatformName ?? "—")</span>
                                        </div>
                                    </td>
                                    <td>@ev.PhotoCount</td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-page="Details" asp-route-id="@ev.Id" class="btn btn-outline-secondary btn-sm">View</a>
                                            @if (Model.CanManage)
                                            {
                                                <a asp-page="Edit" asp-route-id="@ev.Id" class="btn btn-outline-primary btn-sm">Edit</a>
                                                <form method="post"
                                                      asp-page-handler="Delete"
                                                      asp-route-id="@ev.Id"
                                                      class="d-inline"
                                                      data-confirm="Delete this social media event?">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        }
    </section>
</div>

<!-- FILTER MODAL -->
<div class="modal fade" id="socialFiltersModal" tabindex="-1" aria-labelledby="socialFiltersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form method="get">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="socialFiltersModalLabel">Filter events</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted small mb-3">Slice by type, platform, or time range to focus on campaigns that matter.</p>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label" for="sm-event-type">Event type</label>
                            <select id="sm-event-type" name="EventTypeId" class="form-select">
                                @foreach (var option in Model.Filter.EventTypeOptions)
                                {
                                    <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label" for="sm-from">From</label>
                            <input id="sm-from" name="From" type="date" value="@(fromValue ?? string.Empty)" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label" for="sm-to">To</label>
                            <input id="sm-to" name="To" type="date" value="@(toValue ?? string.Empty)" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="sm-platform">Platform</label>
                            <select id="sm-platform" name="PlatformId" class="form-select">
                                @foreach (var option in Model.Filter.PlatformOptions)
                                {
                                    <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="sm-search">Title or description</label>
                            <input id="sm-search" name="Q" value="@Model.Filter.SearchQuery" class="form-control" placeholder="Search posts…" />
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="true" id="sm-active" name="OnlyActiveEventTypes" @(Model.Filter.OnlyActiveEventTypes ? "checked" : "") />
                                <label class="form-check-label" for="sm-active">
                                    Only active event types
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a asp-page="Index" class="btn btn-link text-decoration-none">Clear</a>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary d-inline-flex align-items-center gap-1">
                        <i class="bi bi-funnel"></i>
                        <span>Apply filters</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- EXPORT MODAL -->
<div class="modal fade" id="exportSocialModal" tabindex="-1" aria-labelledby="exportSocialModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exportSocialModalLabel">Export events</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted small mb-3">Reuse current filters or narrow them further for this export.</p>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label" for="exp-event-type">Event type</label>
                            <select id="exp-event-type" name="EventTypeId" class="form-select">
                                @foreach (var option in Model.Filter.EventTypeOptions)
                                {
                                    <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="exp-search">Title or description</label>
                            <input id="exp-search" name="Q" value="@Model.Filter.SearchQuery" class="form-control" placeholder="Search posts…" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="exp-from">From</label>
                            <input id="exp-from" name="From" type="date" value="@(fromValue ?? string.Empty)" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="exp-to">To</label>
                            <input id="exp-to" name="To" type="date" value="@(toValue ?? string.Empty)" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="exp-platform">Platform</label>
                            <select id="exp-platform" name="PlatformId" class="form-select">
                                @foreach (var option in Model.Filter.PlatformOptions)
                                {
                                    <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="true" id="exp-active" name="OnlyActiveEventTypes" @(Model.Filter.OnlyActiveEventTypes ? "checked" : "") />
                                <label class="form-check-label" for="exp-active">
                                    Only active event types
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-primary d-inline-flex align-items-center gap-2" asp-page-handler="ExportPdf">
                        <i class="bi bi-filetype-pdf"></i>
                        <span>Export PDF</span>
                    </button>
                    <button type="submit" class="btn btn-primary d-inline-flex align-items-center gap-2" asp-page-handler="Export">
                        <i class="bi bi-file-earmark-spreadsheet"></i>
                        <span>Export Excel</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

