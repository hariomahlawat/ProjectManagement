@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.SocialMedia.IndexModel
@using System.Linq
@{
    ViewData["Title"] = "Social media storytelling";

    var toastMessages = new List<ProjectManagement.Areas.ProjectOfficeReports.SocialMedia.ViewModels.SocialMediaToastMessage>();
    if (TempData.TryGetValue("ToastMessage", out var toastValue) && toastValue is string toast && !string.IsNullOrWhiteSpace(toast))
    {
        toastMessages.Add(new ProjectManagement.Areas.ProjectOfficeReports.SocialMedia.ViewModels.SocialMediaToastMessage(toast, "success"));
    }

    if (TempData.TryGetValue("ToastError", out var toastErrorValue) && toastErrorValue is string toastError && !string.IsNullOrWhiteSpace(toastError))
    {
        toastMessages.Add(new ProjectManagement.Areas.ProjectOfficeReports.SocialMedia.ViewModels.SocialMediaToastMessage(toastError, "danger"));
    }

    var totalEvents = Model.Events.Count;
    var coveredEvents = Model.Events.Count(e => e.CoverPhotoId.HasValue);
    var photoCount = Model.Events.Sum(e => e.PhotoCount);
    var showExportModal = ViewData["ShowExportModal"] as bool? ?? false;
    var exportFromValue = Model.Filter.StartDateValue ?? Model.From;
    var exportToValue = Model.Filter.EndDateValue ?? Model.To;
}

<partial name="_ToastMessages" model="toastMessages" />

<div class="social-shell">
    <nav aria-label="Breadcrumb" class="mb-3">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-area="" asp-page="/Dashboard/Index">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Social media</li>
        </ol>
    </nav>

    <section class="social-hero social-hero--compact">
        <div class="social-hero__content">
            <span class="social-hero__eyebrow">Project office reports</span>
            <h1 class="social-hero__title">Social media storytelling</h1>
            <p class="social-hero__subtitle">Track events amplified on social media and curate gallery-ready imagery for rapid exports.</p>
            <div class="social-hero__actions">
                @if (Model.CanManage)
                {
                    <a asp-page="Create" class="btn btn-primary d-inline-flex align-items-center gap-2">
                        <i class="bi bi-plus-circle" aria-hidden="true"></i>
                        <span>Create event</span>
                    </a>

                    if (Model.Events.Count > 0)
                    {
                        <button type="button" class="btn btn-outline-light d-inline-flex align-items-center gap-2" data-bs-toggle="modal" data-bs-target="#exportSocialEventsModal">
                            <i class="bi bi-file-earmark-spreadsheet" aria-hidden="true"></i>
                            <span>Export events</span>
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-light d-inline-flex align-items-center gap-2" disabled aria-disabled="true">
                            <i class="bi bi-file-earmark-spreadsheet" aria-hidden="true"></i>
                            <span>Export events</span>
                        </button>
                    }
                }
            </div>
        </div>
        <div class="social-hero__stats">
            <div class="social-stat-card">
                <span class="social-stat-card__label">Events in view</span>
                <span class="social-stat-card__value">@totalEvents</span>
            </div>
            <div class="social-stat-card">
                <span class="social-stat-card__label">Cover-ready stories</span>
                <span class="social-stat-card__value">@coveredEvents</span>
            </div>
            <div class="social-stat-card">
                <span class="social-stat-card__label">Photos captured</span>
                <span class="social-stat-card__value">@photoCount</span>
            </div>
        </div>
    </section>

    <section class="social-section">
        <header class="social-section__header">
            <div>
                <h2 class="social-section__title">Filter events</h2>
                <p class="social-section__subtitle">Slice by type, platform, or time range to focus on campaigns that matter.</p>
            </div>
            @if (Model.Filter.EventTypeId.HasValue || Model.Filter.StartDate.HasValue || Model.Filter.EndDate.HasValue || !string.IsNullOrWhiteSpace(Model.Filter.SearchQuery) || Model.Filter.PlatformId.HasValue || Model.Filter.OnlyActiveEventTypes)
            {
                <a asp-page="Index" class="btn btn-link social-section__reset"><i class="bi bi-x-circle" aria-hidden="true"></i>Clear filters</a>
            }
        </header>

        <form method="get" class="row gy-3">
            <div class="col-12 col-md-3">
                <label asp-for="EventTypeId" class="form-label">Event type</label>
                <select asp-for="EventTypeId" asp-items="Model.Filter.EventTypeOptions" class="form-select"></select>
            </div>
            <div class="col-6 col-md-2">
                <label class="form-label" for="from-date">From</label>
                <input id="from-date" name="From" type="date" value="@(Model.Filter.StartDateValue ?? string.Empty)" class="form-control" />
            </div>
            <div class="col-6 col-md-2">
                <label class="form-label" for="to-date">To</label>
                <input id="to-date" name="To" type="date" value="@(Model.Filter.EndDateValue ?? string.Empty)" class="form-control" />
            </div>
            <div class="col-12 col-md-2">
                <label asp-for="PlatformId" class="form-label">Platform</label>
                <select asp-for="PlatformId" asp-items="Model.Filter.PlatformOptions" class="form-select"></select>
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label" for="search-query">Search</label>
                <input id="search-query" name="Q" value="@Model.Filter.SearchQuery" class="form-control" placeholder="Title or description" />
            </div>
            <div class="col-12 col-md-3 d-flex align-items-center">
                <div class="form-check mt-4">
                    <input class="form-check-input" type="checkbox" asp-for="OnlyActiveEventTypes" />
                    <label class="form-check-label" asp-for="OnlyActiveEventTypes">Only active event types</label>
                </div>
            </div>
            <div class="col-12 col-md-auto align-self-end">
                <button type="submit" class="btn btn-primary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-funnel" aria-hidden="true"></i>
                    <span>Apply filters</span>
                </button>
            </div>
        </form>
    </section>

    <section class="social-section">
        <header class="social-section__header">
            <div>
                <h2 class="social-section__title">Events</h2>
                <p class="social-section__subtitle mb-0">Browse social stories and jump into details for galleries and exports.</p>
            </div>
        </header>

        @if (Model.Events.Count == 0)
        {
            <div class="alert alert-info" role="status">
                No events match the current filters. Adjust filters or add a new event to get started.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Title</th>
                            <th scope="col">Type</th>
                            <th scope="col">Platform</th>
                            <th scope="col" class="text-end">Photos</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Events)
                        {
                            <tr>
                                <td data-title="Date">@item.DateOfEvent.ToString("dd MMM yyyy")</td>
                                <td data-title="Title">
                                    <a asp-page="Details" asp-route-id="@item.Id" class="fw-semibold">@item.Title</a>
                                    @if (!item.EventTypeIsActive)
                                    {
                                        <span class="badge bg-warning-subtle text-warning-emphasis ms-2">Type inactive</span>
                                    }
                                </td>
                                <td data-title="Type">@item.EventTypeName</td>
                                <td data-title="Platform">@(string.IsNullOrWhiteSpace(item.PlatformName) ? "-" : item.PlatformName)</td>
                                <td data-title="Photos" class="text-end">@item.PhotoCount</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                        @if (Model.CanManage)
                                        {
                                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </section>
</div>

<div class="modal fade" id="exportSocialEventsModal" tabindex="-1" aria-labelledby="exportSocialEventsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form method="post" class="needs-validation" novalidate data-social-disable-on-submit>
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exportSocialEventsModalLabel">Export events</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted mb-3">Choose the filters for your offline report. Generate either the structured Excel workbook or a storytelling PDF with hero images.</p>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="EventTypeId" class="form-label">Event type</label>
                            <select asp-for="EventTypeId" asp-items="Model.Filter.EventTypeOptions" class="form-select"></select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PlatformId" class="form-label">Platform</label>
                            <select asp-for="PlatformId" asp-items="Model.Filter.PlatformOptions" class="form-select"></select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="export-from-date">From</label>
                            <input id="export-from-date" name="From" type="date" value="@(exportFromValue ?? string.Empty)" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="export-to-date">To</label>
                            <input id="export-to-date" name="To" type="date" value="@(exportToValue ?? string.Empty)" class="form-control" />
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Q" class="form-label">Search</label>
                            <input asp-for="Q" class="form-control" placeholder="Title or description" />
                            <div class="form-text">Leave blank to include every story.</div>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="OnlyActiveEventTypes" />
                                <label class="form-check-label" for="OnlyActiveEventTypes">Only active event types</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-primary d-inline-flex align-items-center gap-2" asp-page-handler="ExportPdf" data-social-busy-label="Generating…">
                        <i class="bi bi-filetype-pdf" aria-hidden="true"></i>
                        <span>Export PDF report</span>
                    </button>
                    <button type="submit" class="btn btn-primary d-inline-flex align-items-center gap-2" asp-page-handler="Export" data-social-busy-label="Exporting…">
                        <i class="bi bi-file-earmark-spreadsheet" aria-hidden="true"></i>
                        <span>Export Excel</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @if (showExportModal)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const modalEl = document.getElementById('exportSocialEventsModal');
                if (!modalEl) {
                    return;
                }

                const bootstrap = window.bootstrap;
                if (bootstrap && bootstrap.Modal) {
                    bootstrap.Modal.getOrCreateInstance(modalEl).show();
                } else {
                    modalEl.classList.add('show');
                    modalEl.style.display = 'block';
                    modalEl.removeAttribute('aria-hidden');
                }
            });
        </script>
    }
    <script type="module" src="~/js/pages/project-office-reports/social-media.js" asp-append-version="true"></script>
}
