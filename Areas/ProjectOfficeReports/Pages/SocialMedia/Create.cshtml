@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.SocialMedia.CreateModel
@{
    ViewData["Title"] = "Create social media event";
}

<div class="social-shell">
    <nav aria-label="Breadcrumb" class="mb-3">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-area="" asp-page="/Dashboard/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="Index">Social media</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>

    <section class="social-hero">
        <div class="social-hero__content">
            <span class="social-hero__eyebrow">Project office reports</span>
            <h1 class="social-hero__title">Capture a new social media story</h1>
            <p class="social-hero__subtitle">Log the event, highlight the platform, and upload photos later to keep the story fresh.</p>
        </div>
    </section>

    <section class="social-section">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" novalidate class="row g-4" data-social-disable-on-submit>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12 col-md-6">
                        <label asp-for="Input.EventTypeId" class="form-label"></label>
                        <select asp-for="Input.EventTypeId" asp-items="Model.EventTypeOptions" class="form-select"></select>
                        <span asp-validation-for="Input.EventTypeId" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6">
                        <label asp-for="Input.DateOfEvent" class="form-label"></label>
                        <input asp-for="Input.DateOfEvent" class="form-control" type="date" />
                        <span asp-validation-for="Input.DateOfEvent" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Input.Title" class="form-label"></label>
                        <input asp-for="Input.Title" class="form-control" />
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6">
                        <label asp-for="Input.Platform" class="form-label"></label>
                        <input asp-for="Input.Platform" class="form-control" placeholder="Instagram, LinkedIn, X…" />
                        <span asp-validation-for="Input.Platform" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Input.Description" class="form-label"></label>
                        <textarea asp-for="Input.Description" class="form-control" rows="4" placeholder="Key talking points, outcomes, hashtags…"></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    <div class="col-12 d-flex gap-3">
                        <button type="submit" class="btn btn-primary d-inline-flex align-items-center gap-2" data-social-busy-label="Saving…">
                            <i class="bi bi-check-circle" aria-hidden="true"></i>
                            <span>Save event</span>
                        </button>
                        <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="~/Pages/Shared/_ValidationScriptsPartial.cshtml" />
    <script type="module" src="~/js/pages/project-office-reports/social-media.js" asp-append-version="true"></script>
}
