@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.MapBoardModel
@{
    ViewData["Title"] = "FFC Proposals – Country board";
}

@section Styles {
    <link rel="stylesheet" href="~/css/project-office-reports/ffc-map.css" asp-append-version="true" />
}

<div class="container-xxl py-1" id="ffc-board-page">
    <!-- ===== Board header ===== -->
    <section class="pm-page-header">
        <div>
            <h1 class="h4 mb-1">FFC – Country board</h1>
            <p class="pm-page-subtitle">
                Project units per country (installed, delivered, planned). Optimised for screenshots and slides.
            </p>
        </div>
    </section>

    <div class="d-flex align-items-center gap-3 mb-3">
        <span class="text-muted small">Show:</span>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="ffcFilterCompleted" checked>
            <label class="form-check-label small" for="ffcFilterCompleted">Completed (installed + delivered)</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="ffcFilterPlanned" checked>
            <label class="form-check-label small" for="ffcFilterPlanned">Planned</label>
        </div>
    </div>

    <!-- ===== Country cards ===== -->
    <div id="ffc-board" class="ffc-board" data-data-url="@Url.Page("/FFC/Map", pageHandler: "Data")">
        <!-- tiles injected by JS -->
    </div>

    <footer class="text-muted small mt-3">Project units data refreshes nightly.</footer>
</div>

@section Scripts {
    <script src="~/js/pages/project-office-reports/ffc/ffc-filter-state.js" asp-append-version="true"></script>
    <script defer src="~/js/pages/project-office-reports/ffc/ffc-map-board.js" asp-append-version="true"></script>
}
