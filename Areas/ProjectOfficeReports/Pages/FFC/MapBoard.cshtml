@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.MapBoardModel
@{
    ViewData["Title"] = "FFC – Board";
}

@section Styles {
    <link rel="stylesheet" href="~/css/project-office-reports/ffc-map.css" asp-append-version="true" />
}

<div class="container-xxl py-4">
    <section class="pm-page-header">
        <div>
            <h1 class="h4 mb-1">FFC – Country board</h1>
            <p class="pm-page-subtitle">
                Completed, linked projects per country (Installed / Delivered / Planned). Optimised for screenshots.
            </p>
        </div>
        <div class="d-flex gap-2">
            <a asp-area="ProjectOfficeReports" asp-page="/FFC/Map" class="btn btn-outline-secondary">Back to map</a>
            <button id="ffc-board-fullscreen" class="btn btn-outline-secondary" type="button">Full width</button>
            <button id="ffc-board-export" class="btn btn-primary" type="button">Export PNG</button>
        </div>
    </section>

    <div id="ffc-board" class="ffc-board">
        <!-- tiles injected by JS -->
    </div>

    <footer class="text-muted small mt-3">Tip: Use the “Full width” button, then take a single screenshot for slides.</footer>
</div>

@section Scripts {
    <script defer src="~/js/vendor/html2canvas.min.js" asp-append-version="true"></script>
    <script defer src="~/js/pages/project-office-reports/ffc/ffc-map-board.js" asp-append-version="true"></script>
}
