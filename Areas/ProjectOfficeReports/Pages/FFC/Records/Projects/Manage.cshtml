@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.Records.Projects.ManageModel
@{
    ViewData["Title"] = "FFC Projects";
}

<h1 class="h5 mb-2">Projects for @Model.Record.Country.Name (@Model.Record.Year)</h1>
<partial name="_StatusMessage" />

<div class="row g-4">
    <div class="col-lg-7">
        <table class="table table-sm align-middle">
            <thead><tr><th>Name</th><th>Linked</th><th>Remarks</th><th class="text-end">Actions</th></tr></thead>
            <tbody>
            @foreach (var p in Model.Items)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@(p.LinkedProject?.Name ?? "— none —")</td>
                    <td>@p.Remarks</td>
                    <td class="text-end">
                        <authorize roles="Admin,HoD">
                            <a asp-page="./Manage" asp-route-recordId="@Model.Record.Id" asp-route-id="@p.Id" class="btn btn-link btn-sm">Edit</a>
                        </authorize>
                        @if (!(User.IsInRole("Admin") || User.IsInRole("HoD")))
                        {
                            <span class="text-muted">Read only</span>
                        }
                        <authorize roles="Admin,HoD">
                            <form method="post" asp-page-handler="Delete" asp-route-recordId="@Model.Record.Id" asp-route-id="@p.Id" class="d-inline">
                                <button class="btn btn-link btn-sm" type="submit">Delete</button>
                            </form>
                        </authorize>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <a asp-page="../Manage" asp-page-handler="Edit" asp-route-id="@Model.Record.Id" class="btn btn-secondary btn-sm">Back</a>
    </div>

    <div class="col-lg-5">
        <authorize roles="Admin,HoD">
            <div class="card">
                <div class="card-header">@(Model.Input.Id.HasValue ? "Edit Project" : "Add Project")</div>
                <div class="card-body">
                    <form method="post">
                        @if (Model.Input.Id.HasValue)
                        {
                            <input type="hidden" asp-for="Input.Id" />
                            <button type="submit" asp-page-handler="Update" asp-route-recordId="@Model.Record.Id" class="d-none"></button>
                        }
                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label">Name</label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.LinkedProjectId" class="form-label">Link to Project (optional)</label>
                            <select asp-for="Input.LinkedProjectId" class="form-select" asp-items="Model.LinkedProjects">
                                <option value="">-- none --</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Remarks" class="form-label">Remarks</label>
                            <input asp-for="Input.Remarks" class="form-control" />
                        </div>

                        @if (Model.Input.Id.HasValue)
                        {
                            <button type="submit" asp-page-handler="Update" asp-route-recordId="@Model.Record.Id" class="btn btn-primary">Save changes</button>
                            <a asp-page="./Manage" asp-route-recordId="@Model.Record.Id" class="btn btn-secondary">Cancel</a>
                        }
                        else
                        {
                            <button type="submit" asp-page-handler="Create" asp-route-recordId="@Model.Record.Id" class="btn btn-primary">Add</button>
                        }
                    </form>
                </div>
            </div>
        </authorize>
    </div>
</div>
