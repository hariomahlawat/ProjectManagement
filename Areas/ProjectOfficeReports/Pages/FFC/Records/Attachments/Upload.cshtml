@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.Records.Attachments.UploadModel
@using System
@using ProjectManagement.Helpers
@{
    ViewData["Title"] = "Friendly Foreign Countries attachments";

    var maxFileSizeText = FileSizeFormatter.FormatFileSize(Model.MaxFileSizeBytes);
    string FormatFileSize(long bytes) => FileSizeFormatter.FormatFileSize(bytes);
}
<section class="pm-page">
    <header class="pm-page-header">
        <div>
            <span class="pm-pill">FFC records</span>
            <h1 class="pm-page-title">Attachments for @Model.Record.Country.Name (@Model.Record.Year)</h1>
            <p class="pm-page-subtitle">Review supporting documents and imagery linked to this simulator record, or upload new files for collaboration.</p>
        </div>
        <div class="pm-page-actions">
            <a asp-page="../Manage" asp-route-editId="@Model.Record.Id" class="pm-button pm-button-ghost">
                <i class="bi bi-arrow-left" aria-hidden="true"></i>
                Back to record
            </a>
        </div>
    </header>

    <partial name="~/Areas/ProjectOfficeReports/Pages/Shared/_StatusMessage.cshtml" />

    <div class="pm-split">
        <div class="pm-table-card">
            <div class="pm-table-scroll">
                <table class="pm-data-table">
                    <thead>
                        <tr>
                            <th>Kind</th>
                            <th>Caption</th>
                            <th>Type</th>
                            <th>Size</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">No attachments uploaded yet.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var a in Model.Items)
                        {
                            <tr>
                                <td>
                                    <span class="pm-status-chip pm-status-neutral text-uppercase">@a.Kind</span>
                                </td>
                                <td>@(string.IsNullOrWhiteSpace(a.Caption) ? "â€”" : a.Caption)</td>
                                <td>@a.ContentType</td>
                                <td>@FormatFileSize(a.SizeBytes)</td>
                                <td class="text-end">
                                    <authorize roles="Admin,HoD">
                                        <form method="post" asp-page-handler="Delete" asp-route-recordId="@Model.Record.Id" asp-route-id="@a.Id" class="d-inline">
                                            <button class="pm-button pm-button-ghost pm-button-sm" type="submit">Delete</button>
                                        </form>
                                    </authorize>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>

        <authorize roles="Admin,HoD">
            <div class="pm-form-card">
                <div class="pm-card-header">Upload attachment</div>
                <div class="pm-card-body">
                    <form method="post" enctype="multipart/form-data" class="pm-form">
                        <div class="pm-form-field">
                            <label asp-for="UploadFile" class="form-label">File</label>
                            <input asp-for="UploadFile" type="file" class="form-control" />
                            <span asp-validation-for="UploadFile" class="text-danger"></span>
                            <span class="form-text text-muted">Maximum size @maxFileSizeText.</span>
                        </div>
                        <div class="pm-form-field">
                            <label asp-for="Kind" class="form-label">Kind</label>
                            <select asp-for="Kind" class="form-select">
                                <option value="0">PDF</option>
                                <option value="1">Photo</option>
                            </select>
                        </div>
                        <div class="pm-form-field">
                            <label asp-for="Caption" class="form-label">Caption (optional)</label>
                            <input asp-for="Caption" class="form-control" placeholder="Brief description" />
                        </div>
                        <div class="pm-form-footer">
                            <button type="submit" asp-page-handler="Upload" asp-route-recordId="@Model.Record.Id" class="pm-button pm-button-primary">Upload file</button>
                        </div>
                    </form>
                </div>
            </div>
        </authorize>
    </div>
</section>
