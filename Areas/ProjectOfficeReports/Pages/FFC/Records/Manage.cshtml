@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.Records.ManageModel
@{
    ViewData["Title"] = "FFC Records";
}

<h1 class="h3 mb-3">FFC Records</h1>
<partial name="_StatusMessage" />

<div class="row g-4">
    <div class="col-xl-7">
        <partial name="_RecordTable" model="Model.Records" />
    </div>

    <div class="col-xl-5">
        <authorize roles="Admin,HoD">
            <div class="card">
                <div class="card-header">
                    @(Model.IsEditMode ? "Edit Record" : "New Record")
                </div>
                <div class="card-body">
                    <form method="post" class="vstack gap-3">
                        @if (Model.IsEditMode)
                        {
                            <input type="hidden" asp-for="Input.Id" />
                        }
                        <partial name="_RecordForm"
                                 model="new ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.Records.FfcRecordFormModel(Model.Input, Model.CountrySelect, Model.IsEditMode)" />
                        <div class="d-flex gap-2">
                            @if (Model.IsEditMode)
                            {
                                <button type="submit" asp-page-handler="Update" class="btn btn-primary">Save changes</button>
                                <a asp-page-handler="" class="btn btn-secondary">Cancel</a>
                            }
                            else
                            {
                                <button type="submit" asp-page-handler="Create" class="btn btn-primary">Create</button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </authorize>
    </div>
</div>
