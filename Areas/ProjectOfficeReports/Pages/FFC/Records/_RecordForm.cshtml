@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.Records.FfcRecordFormModel

<div>
    <label class="form-label">Country</label>
    <select asp-for="Input.CountryId" class="form-select" asp-items="Model.CountryList"></select>
    <span asp-validation-for="Input.CountryId" class="text-danger"></span>
</div>

<input asp-for="Input.RowVersion" type="hidden" />

<div>
    <label asp-for="Input.Year" class="form-label">Year</label>
    <input asp-for="Input.Year" class="form-control" />
    <span asp-validation-for="Input.Year" class="text-danger"></span>
</div>

<hr />
<h6 class="mb-2">IPA</h6>
<div class="form-check">
    <input class="form-check-input" asp-for="Input.IpaYes" />
    <label class="form-check-label" asp-for="Input.IpaYes">Yes</label>
</div>
<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="Input.IpaDate" class="form-label">Date (optional)</label>
        <input asp-for="Input.IpaDate" type="date" class="form-control" />
        <span asp-validation-for="Input.IpaDate" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Input.IpaRemarks" class="form-label">Remarks</label>
        <input asp-for="Input.IpaRemarks" class="form-control" />
    </div>
</div>

<hr />
<h6 class="mb-2">GSL</h6>
<div class="form-check">
    <input class="form-check-input" asp-for="Input.GslYes" />
    <label class="form-check-label" asp-for="Input.GslYes">Yes</label>
</div>
<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="Input.GslDate" class="form-label">Date (optional)</label>
        <input asp-for="Input.GslDate" type="date" class="form-control" />
        <span asp-validation-for="Input.GslDate" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Input.GslRemarks" class="form-label">Remarks</label>
        <input asp-for="Input.GslRemarks" class="form-control" />
    </div>
</div>

<hr />
<div>
    <label asp-for="Input.OverallRemarks" class="form-label">Overall Remarks</label>
    <textarea asp-for="Input.OverallRemarks" rows="3" class="form-control"></textarea>
</div>

@if (Model.IsEdit)
{
    <div class="form-check mt-2">
        <input class="form-check-input" asp-for="Input.IsDeleted" />
        <label class="form-check-label" asp-for="Input.IsDeleted">Soft deleted</label>
    </div>

    <div class="mt-3">
        <a asp-page="./Projects/Manage" asp-route-recordId="@Model.Input.Id" class="btn btn-outline-secondary btn-sm">Manage Projects</a>
        <a asp-page="./Attachments/Upload" asp-route-recordId="@Model.Input.Id" class="btn btn-outline-secondary btn-sm">Manage Attachments</a>
    </div>
}
