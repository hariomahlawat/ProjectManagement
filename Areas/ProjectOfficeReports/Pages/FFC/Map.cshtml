@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.MapModel
@{
    ViewData["Title"] = "FFC Proposals – World map";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/leaflet/1.9.4/leaflet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/project-office-reports/ffc-map.css" asp-append-version="true" />
}

<div class="container-fluid px-3 px-lg-4 py-0">
    <!-- Section: Page header -->
    <div class="pm-page-header">
        <div>
            <h1 class="h4 mb-1">FFC – Simulators footprint</h1>
            <p class="pm-page-subtitle text-muted small mb-2">
                Countries are shaded by total simulator units (installed, delivered and planned). Click a country to see its breakdown and open the detailed table.
            </p>
            <div class="d-flex flex-wrap gap-3 mb-2 small text-muted">
                <span><strong>@Model.TotalCountriesWithUnits</strong> countries with activity</span>
                <span><strong>@Model.TotalUnits</strong> total units</span>
                <span><strong>@Model.TotalInstalled</strong> installed</span>
                <span><strong>@Model.TotalDelivered</strong> delivered (not installed)</span>
                <span><strong>@Model.TotalPlanned</strong> planned</span>
            </div>
        </div>
    </div>

    <div class="d-flex align-items-center gap-3 mb-2">
        <span class="text-muted small">Show:</span>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="ffcFilterCompleted" checked>
            <label class="form-check-label small" for="ffcFilterCompleted">Completed (installed + delivered)</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="ffcFilterPlanned" checked>
            <label class="form-check-label small" for="ffcFilterPlanned">Planned</label>
        </div>
    </div>

    <!-- Section: Map toolbar -->
    <div class="ffc-map-toolbar d-flex flex-wrap align-items-center gap-3 mb-3">
        <div class="d-flex align-items-center gap-2 flex-wrap">
            <button type="button"
                    class="btn btn-outline-primary"
                    data-action="ffc-map-toggle-fullwidth"
                    aria-pressed="false">
                Use full-width map
            </button>
            <div class="text-muted small">
                Expand the map to the entire viewport to fit more countries and details.
            </div>
        </div>

        <div class="d-flex align-items-center gap-2 flex-wrap">
            <span class="text-muted small fw-semibold">Quick focus</span>
            <div class="btn-group" role="group" aria-label="Quick map focus">
                <button type="button" class="btn btn-outline-secondary" data-zoom="world">World</button>
                <button type="button" class="btn btn-outline-secondary" data-zoom="africa">Africa</button>
                <button type="button" class="btn btn-outline-secondary" data-zoom="southasia">South Asia</button>
            </div>
        </div>
    </div>

    <!-- Section: Map -->
    <section class="ffc-map-layout"
             id="ffc-map-shell"
             data-map-fullwidth="on">
        <div class="ffc-map-canvas">
            <div id="ffc-map"
                 class="ffc-map"
                 role="img"
                 aria-label="World map showing FFC project unit counts"
                 data-data-url="@Url.Page("./Map", pageHandler: "Data")"
                 data-geo-url="@Url.Content("~/ffc/maps/world_india_view.geojson")"
                 data-ffc-detail-url="@Url.Page("/FFC/MapTableDetailed", new { area = "ProjectOfficeReports" })"></div>

            <div class="ffc-focus-floating card shadow-sm" id="ffc-focus-floating">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary" data-zoom="southasia">South Asia</button>
                        <button type="button" class="btn btn-outline-primary" data-zoom="africa">Africa</button>
                        <button type="button" class="btn btn-outline-secondary" data-zoom="world">Reset</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/lib/leaflet/1.9.4/leaflet.js" asp-append-version="true"></script>
    <script src="~/js/pages/project-office-reports/ffc/ffc-map.js" asp-append-version="true"></script>
    <script src="~/js/pages/project-office-reports/ffc/ffc-map-init.js" asp-append-version="true" defer></script>
}
