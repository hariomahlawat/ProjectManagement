@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.MapModel
@{
    ViewData["Title"] = "FFC Proposals – World map";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/leaflet/1.9.4/leaflet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/project-office-reports/ffc-map.css" asp-append-version="true" />
}

<div class="container-xxl py-4">
    <div class="pm-page-header">
        <div>
            <h1 class="h4 mb-1">FFC – World map</h1>
            <p class="pm-page-subtitle">
                Countries shaded by total project units (installed, delivered, planned). Drill into a country to see details.
            </p>
        </div>
        <div class="btn-toolbar flex-wrap gap-2 justify-content-end" role="toolbar" aria-label="Map actions">
            <div class="btn-group" role="group" aria-label="FFC navigation">
                <a asp-area="ProjectOfficeReports"
                   asp-page="/FFC/Index"
                   class="btn btn-outline-secondary">FFC dashboard</a>
                <a asp-area="ProjectOfficeReports"
                   asp-page="/FFC/MapTableDetailed"
                   class="btn btn-outline-secondary">Detailed table</a>
                <a asp-area="ProjectOfficeReports"
                   asp-page="/FFC/MapBoard"
                   class="btn btn-outline-secondary">Country board</a>
            </div>
            <div class="btn-group" role="group" aria-label="Layout controls">
                <button type="button"
                        class="btn btn-outline-secondary"
                        data-action="ffc-map-toggle-fullwidth"
                        aria-pressed="false"
                        aria-label="Toggle full width">
                    Full width
                </button>
            </div>
        </div>
    </div>

    <section class="ffc-map-layout"
             id="ffc-map-shell"
             data-map-fullwidth="off">
        <div class="ffc-map-canvas">
            <div id="ffc-map"
                 class="ffc-map"
                 role="img"
                 aria-label="World map showing FFC project unit counts"
                 data-data-url="@Url.Page("./Map", pageHandler: "Data")"
                 data-geo-url="@Url.Content("~/ffc/maps/world_india_view.geojson")"
                 data-ffc-detail-url="@Url.Page("./MapTableDetailed")"></div>

            <div class="ffc-focus-floating card shadow-sm" id="ffc-focus-floating">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary" data-zoom="southasia">South Asia</button>
                        <button type="button" class="btn btn-outline-primary" data-zoom="africa">Africa</button>
                        <button type="button" class="btn btn-outline-secondary" data-zoom="world">Reset</button>
                    </div>
                </div>
            </div>
        </div>

        <aside class="ffc-map-sidebar" id="ffc-map-sidebar" aria-label="Map controls">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h6 mb-3">Total project units</h2>
                    <div id="legendRamp" class="legend-ramp ffc-legend-ramp" aria-hidden="true"></div>
                    <ul id="legendLabels" class="legend-labels ffc-legend-labels list-unstyled small mb-0"></ul>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h2 class="h6 mb-3">Focus</h2>
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary" data-zoom="southasia">South Asia</button>
                        <button type="button" class="btn btn-outline-primary" data-zoom="africa">Africa</button>
                        <button type="button" class="btn btn-outline-secondary" data-zoom="world">Reset</button>
                    </div>
                </div>
            </div>
        </aside>
    </section>
</div>

@section Scripts {
    <script src="~/lib/leaflet/1.9.4/leaflet.js" asp-append-version="true"></script>
    <script src="~/js/pages/project-office-reports/ffc/ffc-map.js" asp-append-version="true"></script>
    <script src="~/js/pages/project-office-reports/ffc/ffc-map-init.js" asp-append-version="true" defer></script>
}
