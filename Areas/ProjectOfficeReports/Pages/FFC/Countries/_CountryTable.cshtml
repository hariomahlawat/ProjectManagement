@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.Countries.ManageModel

<div class="table-responsive">
<table class="table table-sm align-middle mb-0">
    <thead>
        <tr>
            <th>
                <a asp-page="./Manage" asp-all-route-data='Model.BuildRoute(p: 1, sort: "name", dir: Model.GetSortDirectionFor("name"))' class="text-decoration-none d-inline-flex align-items-center gap-1">
                    <span>Name</span>
                    <i class='@Model.GetSortIconClass("name")'></i>
                </a>
            </th>
            <th>
                <a asp-page="./Manage" asp-all-route-data='Model.BuildRoute(p: 1, sort: "iso", dir: Model.GetSortDirectionFor("iso"))' class="text-decoration-none d-inline-flex align-items-center gap-1">
                    <span>ISO</span>
                    <i class='@Model.GetSortIconClass("iso")'></i>
                </a>
            </th>
            <th>
                <a asp-page="./Manage" asp-all-route-data='Model.BuildRoute(p: 1, sort: "status", dir: Model.GetSortDirectionFor("status"))' class="text-decoration-none d-inline-flex align-items-center gap-1">
                    <span>Status</span>
                    <i class='@Model.GetSortIconClass("status")'></i>
                </a>
            </th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (!Model.Countries.Any())
    {
        <tr>
            <td colspan="4" class="text-center text-muted">No countries found.</td>
        </tr>
    }
    else
    {
        foreach (var country in Model.Countries)
        {
            <tr>
                <td class="text-break" style="min-width:160px;">
                    <span class="d-inline-block text-truncate w-100" style="max-width:260px;" data-bs-toggle="tooltip" data-bs-placement="top" title="@country.Name">@country.Name</span>
                </td>
                <td>@country.IsoCode</td>
                <td class="text-center">
                    <span class="badge @(country.IsActive ? "bg-success-subtle text-success-emphasis" : "bg-secondary-subtle text-secondary-emphasis")">@(country.IsActive ? "Active" : "Inactive")</span>
                </td>
                <td class="text-end">
                    <authorize roles="Admin,HoD">
                        <form method="post" asp-page="./Manage" asp-page-handler="ToggleActive" asp-all-route-data="Model.BuildRoute()" class="d-inline">
                            <input type="hidden" name="id" value="@country.Id" />
                            <button type="submit" class="btn btn-link btn-sm">@(country.IsActive ? "Deactivate" : "Activate")</button>
                        </form>
                    </authorize>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
</div>

<nav aria-label="Countries pagination" class="mt-2">
    <ul class="pagination pagination-sm mb-0">
        <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : string.Empty)">
            <a class="page-link" asp-page="./Manage" asp-all-route-data='Model.BuildRoute(p: Math.Max(1, Model.PageNumber - 1))' aria-label="Previous" tabindex="@(Model.PageNumber <= 1 ? -1 : 0)">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (var pageNumber = 1; pageNumber <= Model.TotalPages; pageNumber++)
        {
            <li class="page-item @(pageNumber == Model.PageNumber ? "active" : string.Empty)">
                <a class="page-link" asp-page="./Manage" asp-all-route-data='Model.BuildRoute(p: pageNumber)'>@pageNumber</a>
            </li>
        }
        <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : string.Empty)">
            <a class="page-link" asp-page="./Manage" asp-all-route-data='Model.BuildRoute(p: Math.Min(Model.TotalPages, Model.PageNumber + 1))' aria-label="Next" tabindex="@(Model.PageNumber >= Model.TotalPages ? -1 : 0)">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
