@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.Countries.ManageModel
@{
    ViewData["Title"] = "FFC Countries";
}

<section class="pm-page">
    <header class="pm-page-header">
        <div>
            <span class="pm-pill">FFC administration</span>
            <h1 class="pm-page-title">Country catalogue</h1>
            <p class="pm-page-subtitle">Maintain the list of countries participating in simulator deployments, control activation state, and keep ISO codes accurate.</p>
        </div>
        <div class="pm-page-actions">
            <a asp-area="ProjectOfficeReports" asp-page="/FFC/Index" class="pm-button pm-button-secondary">
                <i class="bi bi-grid" aria-hidden="true"></i>
                View overview
            </a>
            <a asp-area="ProjectOfficeReports" asp-page="/FFC/Records/Manage" class="pm-button pm-button-ghost">
                <i class="bi bi-kanban" aria-hidden="true"></i>
                Go to records
            </a>
        </div>
    </header>

    <partial name="~/Areas/ProjectOfficeReports/Pages/Shared/_StatusMessage.cshtml" />

    <div class="pm-split pm-split-narrow">
        <div class="pm-surface-block">
            <form method="get" class="pm-filter-bar" aria-label="Filter countries">
                <div class="pm-filter-meta">Quick search</div>
                <div class="pm-filter-grid">
                    <div class="pm-form-field">
                        <label class="form-label" for="country-search">Search</label>
                        <input type="search" class="form-control" id="country-search" name="q" value="@Model.Query" placeholder="Country or ISO code" />
                    </div>
                </div>
                <input type="hidden" name="page" value="1" />
                <input type="hidden" name="sort" value="@Model.CurrentSort" />
                <input type="hidden" name="dir" value="@Model.CurrentSortDirection" />
                <div class="pm-filter-actions">
                    <button type="submit" class="pm-button pm-button-primary">Search</button>
                    @if (Model.HasQuery)
                    {
                        <a asp-page="./Manage" asp-all-route-data="Model.BuildRoute(page: 1, query: string.Empty)" class="pm-button pm-button-ghost">Clear</a>
                    }
                </div>
            </form>

            <partial name="_CountryTable" model="Model" />
        </div>

        <div>
            <authorize roles="Admin,HoD">
                <div class="pm-form-card">
                    <div class="pm-card-header">
                        @(Model.IsEditMode ? "Edit country" : "Add country")
                    </div>
                    <div class="pm-card-body">
                        <form method="post" class="pm-form">
                            @if (Model.IsEditMode)
                            {
                                <input type="hidden" asp-for="Input.Id" />
                                <input type="hidden" asp-for="Input.RowVersion" />
                            }
                            <partial name="_CountryForm" model="Model.Input" />
                            <div class="pm-form-footer">
                                @if (Model.IsEditMode)
                                {
                                    <button type="submit" asp-page-handler="Update" class="pm-button pm-button-primary">Save changes</button>
                                    <a asp-page="Manage" asp-all-route-data="Model.BuildRoute(query: Model.Query)" class="pm-button pm-button-ghost">Cancel</a>
                                }
                                else
                                {
                                    <button type="submit" asp-page-handler="Create" class="pm-button pm-button-primary">Create country</button>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </authorize>
        </div>
    </div>
</section>
