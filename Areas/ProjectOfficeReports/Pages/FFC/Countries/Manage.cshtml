@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.Countries.ManageModel
@{
    ViewData["Title"] = "FFC Countries";
}

<h1 class="h3 mb-3">FFC Countries</h1>

<div class="mb-3">
    <a asp-area="ProjectOfficeReports" asp-page="/FFC/Records/Manage" class="btn btn-outline-secondary btn-sm">
        Go to records
    </a>
</div>

<partial name="~/Areas/ProjectOfficeReports/Pages/Shared/_StatusMessage.cshtml" />

<div class="row g-4">
    <div class="col-lg-7">
        <form method="get" class="row gy-2 gx-2 align-items-end mb-3">
            <div class="col-md-6">
                <label class="form-label" for="country-search">Search</label>
                <input type="search" class="form-control" id="country-search" name="q" value="@Model.Query" />
            </div>
            <input type="hidden" name="page" value="1" />
            <input type="hidden" name="sort" value="@Model.CurrentSort" />
            <input type="hidden" name="dir" value="@Model.CurrentSortDirection" />
            <div class="col-md-auto">
                <button type="submit" class="btn btn-outline-primary">Search</button>
                @if (Model.HasQuery)
                {
                    <a asp-page="./Manage" asp-all-route-data="Model.BuildRoute(page: 1, query: string.Empty)" class="btn btn-link">Clear</a>
                }
            </div>
        </form>

        <partial name="_CountryTable" model="Model" />
    </div>

    <div class="col-lg-5">
        <authorize roles="Admin,HoD">
            <div class="card">
                <div class="card-header">
                    @(Model.IsEditMode ? "Edit Country" : "New Country")
                </div>
                <div class="card-body">
                    <form method="post" class="vstack gap-3">
                        @if (Model.IsEditMode)
                        {
                            <input type="hidden" asp-for="Input.Id" />
                            <input type="hidden" asp-for="Input.RowVersion" />
                        }
                        <partial name="_CountryForm" model="Model.Input" />
                        <div class="d-flex gap-2">
                            @if (Model.IsEditMode)
                            {
                                <button type="submit" asp-page-handler="Update" class="btn btn-primary">Save changes</button>
                                <a asp-page="Manage" asp-all-route-data="Model.BuildRoute(query: Model.Query)" class="btn btn-secondary">Cancel</a>
                            }
                            else
                            {
                                <button type="submit" asp-page-handler="Create" class="btn btn-primary">Create</button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </authorize>
    </div>
</div>
