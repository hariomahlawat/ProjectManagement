@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.Countries.ManageModel
@{
    ViewData["Title"] = "FFC Countries";
}

<div class="container-fluid py-3">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-2 mb-3">
        <div>
            <p class="text-uppercase text-muted small mb-1">Project office reports</p>
            <h1 class="h4 mb-2">Manage FFC countries</h1>
            <nav aria-label="Breadcrumb">
                <ol class="breadcrumb mb-0 small">
                    <li class="breadcrumb-item"><a asp-area="" asp-page="/Dashboard/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="ProjectOfficeReports" asp-page="/FFC/Index">FFC simulators</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Manage countries</li>
                </ol>
            </nav>
            <p class="text-muted mb-0 mt-2">Maintain the list of participating countries and update their delivery settings.</p>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <a asp-area="ProjectOfficeReports" asp-page="/FFC/Index" class="btn btn-outline-secondary btn-sm">
                View overview
            </a>
            <a asp-area="ProjectOfficeReports" asp-page="/FFC/Records/Manage" class="btn btn-outline-secondary btn-sm">
                Manage records
            </a>
        </div>
    </div>

    <partial name="~/Areas/ProjectOfficeReports/Pages/Shared/_StatusMessage.cshtml" />
    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="card pm-card pm-shadow h-100">
                <div class="card-header pm-card-header border-0 pb-0">
                    <form method="get" class="row gy-2 gx-2 align-items-end">
                        <div class="col-md-6">
                            <label class="form-label" for="country-search">Search</label>
                            <input type="search" class="form-control" id="country-search" name="q" value="@Model.Query" />
                        </div>
                        <input type="hidden" name="page" value="1" />
                        <input type="hidden" name="sort" value="@Model.CurrentSort" />
                        <input type="hidden" name="dir" value="@Model.CurrentSortDirection" />
                        <div class="col-md-auto">
                            <button type="submit" class="btn btn-outline-primary">Search</button>
                            @if (Model.HasQuery)
                            {
                                <a asp-page="./Manage" asp-all-route-data="Model.BuildRoute(page: 1, query: string.Empty)" class="btn btn-link">Clear</a>
                            }
                        </div>
                    </form>
                </div>
                <div class="card-body pm-card-body pt-0">
                    <partial name="_CountryTable" model="Model" />
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <authorize roles="Admin,HoD">
                <div class="pm-card pm-shadow h-100">
                    <div class="pm-card-header">
                        <div class="pm-card-heading">
                            <div>
                                <h2 class="pm-card-title h5 mb-0">@(Model.IsEditMode ? "Edit country" : "New country")</h2>
                            </div>
                        </div>
                    </div>
                    <div class="pm-card-body">
                        <form method="post" class="vstack gap-3">
                            @if (Model.IsEditMode)
                            {
                                <input type="hidden" asp-for="Input.Id" />
                                <input type="hidden" asp-for="Input.RowVersion" />
                            }
                            <partial name="_CountryForm" model="Model.Input" />
                            <div class="d-flex gap-2">
                                @if (Model.IsEditMode)
                                {
                                    <button type="submit" asp-page-handler="Update" class="btn btn-primary">Save changes</button>
                                    <a asp-page="Manage" asp-all-route-data="Model.BuildRoute(query: Model.Query)" class="btn btn-secondary">Cancel</a>
                                }
                                else
                                {
                                    <button type="submit" asp-page-handler="Create" class="btn btn-primary">Create</button>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </authorize>
        </div>
    </div>
</div>
