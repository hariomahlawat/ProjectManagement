@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.FFC.MapTableDetailedModel
@{
    ViewData["Title"] = "FFC Proposals – Detailed table";
}
<div class="container-xxl py-4">
    <section class="pm-page-header">
        <div>
            <h1 class="h4 mb-1">FFC – Detailed table</h1>
            <p class="pm-page-subtitle">
                Installed, delivered and planned totals show project units captured against each FFC record. Linked project
                details feed the cost and progress summaries shown per row.
            </p>
        </div>
        <div class="btn-toolbar flex-wrap gap-2 justify-content-end" role="toolbar" aria-label="Detailed table actions">
            <div class="btn-group" role="group" aria-label="FFC navigation">
                <a asp-area="ProjectOfficeReports" asp-page="/FFC/Index" class="btn btn-outline-secondary">FFC dashboard</a>
                <a asp-area="ProjectOfficeReports" asp-page="/FFC/Map" class="btn btn-outline-secondary">Map view</a>
                <a asp-area="ProjectOfficeReports" asp-page="/FFC/MapBoard" class="btn btn-outline-secondary">Country board</a>
            </div>
            <div class="btn-group" role="group" aria-label="Export actions">
                <a asp-page="./MapTableDetailed"
                   asp-route-handler="Export"
                   asp-route-countryId="@Model.CountryId"
                   asp-route-year="@Model.Year"
                   class="btn btn-primary">Export Excel</a>
            </div>
        </div>
    </section>

    @if (Model.HasFilters && !string.IsNullOrWhiteSpace(Model.FilterSummary))
    {
        <div class="alert alert-info py-2" role="status">
            Showing records for <strong>@Model.FilterSummary</strong>.
            <a asp-page="./MapTableDetailed" class="alert-link">Reset filters</a>
        </div>
    }

    <div class="table-responsive">
        <table id="ffc-dtable"
               class="table table-sm align-middle ffc-dtable"
               data-source-url="@Url.Page("./MapTableDetailed", pageHandler: "Data", values: new { countryId = Model.CountryId, year = Model.Year })">
            <thead>
                <tr>
                    <th scope="col" style="width:4rem;">S. No.</th>
                    <th scope="col">Project</th>
                    <th scope="col" class="text-end">Cost (₹ Cr)</th>
                    <th scope="col" class="text-end">Quantity</th>
                    <th scope="col">Status</th>
                    <th scope="col">Progress / present status</th>
                    <th scope="col">Overall remarks</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script defer src="~/js/pages/project-office-reports/ffc/ffc-map-table-detailed.js" asp-append-version="true"></script>
}
