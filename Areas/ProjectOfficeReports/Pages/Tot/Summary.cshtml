@page
@using ProjectManagement.Areas.ProjectOfficeReports.Pages.Tot
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Tot.SummaryModel

@section Styles
{
    <link rel="stylesheet" href="~/css/tot.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Transfer of Technology summary";
    var summary = Model.Summary;
}

<div class="tot-summary">
    <header class="tot-summary__header">
        <nav aria-label="breadcrumb" class="tot-summary__breadcrumb">
            <ol class="breadcrumb small mb-0">
                <li class="breadcrumb-item"><a asp-area="" asp-page="/Dashboard/Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-area="ProjectOfficeReports" asp-page="/Tot/Index">Transfer of Technology tracker</a></li>
                <li class="breadcrumb-item active" aria-current="page">Summary</li>
            </ol>
        </nav>
        <div class="tot-summary__title">
            <h1 class="tot-summary__heading">Transfer of Technology summary</h1>
            <p class="tot-summary__lede">@summary.Narrative</p>
        </div>
    </header>

    <div class="tot-summary__grid">
        <section class="tot-summary__column">
            <h2 class="tot-summary__column-heading">Completed (@summary.CompletedCount)</h2>
            @if (summary.CompletedCount > 0)
            {
                <ul class="tot-summary__list">
                    @foreach (var project in summary.Completed)
                    {
                        var completion = SummaryModel.TotSummaryViewModel.FormatCompletionLabel(project);
                        <li class="tot-summary__list-item">
                            <a asp-page="/Projects/Overview" asp-route-id="@project.ProjectId">
                                @project.ProjectName
                                @if (!string.IsNullOrEmpty(completion))
                                {
                                    <text> (@completion)</text>
                                }
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="tot-summary__empty">None</p>
            }
        </section>

        <section class="tot-summary__column">
            <h2 class="tot-summary__column-heading">Not started (@summary.NotStartedCount)</h2>
            @if (summary.NotStartedCount > 0)
            {
                <ul class="tot-summary__list">
                    @foreach (var project in summary.NotStarted)
                    {
                        var completion = SummaryModel.TotSummaryViewModel.FormatCompletionLabel(project);
                        <li class="tot-summary__list-item">
                            <a asp-page="/Projects/Overview" asp-route-id="@project.ProjectId">
                                @project.ProjectName
                                @if (!string.IsNullOrEmpty(completion))
                                {
                                    <text> (@completion)</text>
                                }
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="tot-summary__empty">None</p>
            }
        </section>

        <section class="tot-summary__column">
            <h2 class="tot-summary__column-heading">In progress (@summary.InProgressCount)</h2>
            <div class="tot-summary__subsection">
                <h3 class="tot-summary__subheading">MET complete (@summary.InProgressMetCompleteCount)</h3>
                @if (summary.InProgressMetCompleteCount > 0)
                {
                    <ul class="tot-summary__list">
                        @foreach (var project in summary.InProgressMetComplete)
                        {
                            var completion = SummaryModel.TotSummaryViewModel.FormatCompletionLabel(project);
                            <li class="tot-summary__list-item">
                                <a asp-page="/Projects/Overview" asp-route-id="@project.ProjectId">
                                    @project.ProjectName
                                    @if (!string.IsNullOrEmpty(completion))
                                    {
                                        <text> (@completion)</text>
                                    }
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="tot-summary__empty">None</p>
                }
            </div>
            <div class="tot-summary__subsection">
                <h3 class="tot-summary__subheading">MET not complete (@summary.InProgressMetIncompleteCount)</h3>
                @if (summary.InProgressMetIncompleteCount > 0)
                {
                    <ul class="tot-summary__list">
                        @foreach (var project in summary.InProgressMetIncomplete)
                        {
                            var completion = SummaryModel.TotSummaryViewModel.FormatCompletionLabel(project);
                            <li class="tot-summary__list-item">
                                <a asp-page="/Projects/Overview" asp-route-id="@project.ProjectId">
                                    @project.ProjectName
                                    @if (!string.IsNullOrEmpty(completion))
                                    {
                                        <text> (@completion)</text>
                                    }
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="tot-summary__empty">None</p>
                }
            </div>
        </section>

        <section class="tot-summary__column">
            <h2 class="tot-summary__column-heading">Not required (@summary.NotRequiredCount)</h2>
            @if (summary.NotRequiredCount > 0)
            {
                <ul class="tot-summary__list">
                    @foreach (var project in summary.NotRequired)
                    {
                        var completion = SummaryModel.TotSummaryViewModel.FormatCompletionLabel(project);
                        <li class="tot-summary__list-item">
                            <a asp-page="/Projects/Overview" asp-route-id="@project.ProjectId">
                                @project.ProjectName
                                @if (!string.IsNullOrEmpty(completion))
                                {
                                    <text> (@completion)</text>
                                }
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="tot-summary__empty">None</p>
            }
        </section>
    </div>
</div>
