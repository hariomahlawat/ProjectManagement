@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Tot.IndexModel

@using System.Globalization
@using ProjectManagement.Models

@section Styles
{
    <link rel="stylesheet" href="~/css/tot.css" asp-append-version="true" />
    <style>
        /* shell */
        .tot-shell {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        /* header / toolbar */
        .tot-toolbar {
            display: flex;
            justify-content: space-between;
            gap: .75rem;
            align-items: center;
        }

        .tot-toolbar-title h1 {
            font-size: 1.15rem;
            margin-bottom: .25rem;
        }

        .tot-toolbar-title p {
            margin: 0;
            color: #6b7280;
            font-size: .75rem;
        }

        .tot-toolbar-actions {
            display: flex;
            gap: .5rem;
            flex-wrap: wrap;
        }

        /* context bar */
        .tot-context-bar {
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: .75rem;
            padding: .5rem .75rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: .75rem;
        }

        .tot-context-left {
            display: flex;
            gap: .5rem;
            flex-wrap: wrap;
            align-items: center;
        }

        .tot-pill {
            background: #eef2ff;
            color: #1f2937;
            border-radius: 9999px;
            padding: .25rem .65rem;
            font-size: .7rem;
            display: inline-flex;
            gap: .25rem;
            align-items: center;
        }

        .tot-pill-muted {
            background: #f3f4f6;
        }

        /* workspace */
        .tot-workspace-grid {
            display: grid;
            grid-template-columns: minmax(0, 1.5fr) minmax(280px, 1fr); /* ~60/40 */
            gap: 1rem;
            align-items: stretch;
        }

        @@media (max-width: 1100px) {
            .tot-workspace-grid {
                grid-template-columns: 1fr;
            }
        }

        /* list panel */
        .tot-list-panel {
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: .75rem;
            display: flex;
            flex-direction: column;
            min-height: 450px;
        }

        /* inline search bar */
        .tot-searchbar {
            padding: .5rem .75rem .1rem .75rem;
            display: flex;
            gap: .5rem;
            flex-wrap: wrap;
            align-items: center;
            border-bottom: 1px solid #f3f4f6;
        }

            .tot-searchbar .form-control {
                min-width: 14rem;
            }

        /* list header + body */
        .tot-list-head {
            display: grid;
            grid-template-columns: minmax(160px, 1.2fr) 110px 90px 90px 90px 115px;
            gap: .5rem;
            padding: .4rem .75rem;
            background: #f9fafb;
            border-bottom: 1px solid #f3f4f6;
            font-size: .63rem;
            text-transform: uppercase;
            letter-spacing: .03em;
            color: #6b7280;
            position: sticky;
            top: 0;
            z-index: 2;
        }

        .tot-list-body {
            max-height: 580px;
            overflow-y: auto;
            position: relative;
        }

        .tot-row {
            display: grid;
            grid-template-columns: minmax(160px, 1.2fr) 110px 90px 90px 90px 115px;
            gap: .5rem;
            padding: .55rem .75rem .55rem .5rem;
            align-items: center;
            border-bottom: 1px solid #f3f4f6;
            text-decoration: none;
            color: inherit;
            transition: background .12s ease;
            border-left: 4px solid transparent;
        }

            .tot-row:last-child {
                border-bottom: none;
            }

            .tot-row:hover {
                background: #f9fafb;
            }

            .tot-row.is-selected {
                background: #eef2ff;
                border-left-color: #3b82f6;
            }

        .tot-row-title {
            font-weight: 500;
            font-size: .83rem;
        }

        .tot-row-sub {
            font-size: .65rem;
            color: #6b7280;
        }

        /* chips */
        .chip-sm {
            display: inline-flex;
            align-items: center;
            height: 1.35rem;
            border-radius: 9999px;
            padding: 0 .55rem;
            font-size: .64rem;
            gap: .25rem;
            line-height: 1;
        }

        /* detail panel */
        .tot-detail-panel {
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: .75rem;
            padding: .8rem .9rem 1rem;
            min-height: 450px;
            display: flex;
            flex-direction: column;
            gap: .75rem;
        }

        .tot-detail-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: .55rem;
        }

        .tot-detail-block {
            background: #f9fafb;
            border-radius: .5rem;
            padding: .45rem .5rem;
        }

        .tot-detail-label {
            font-size: .63rem;
            text-transform: uppercase;
            letter-spacing: .02em;
            color: #6b7280;
            margin-bottom: .2rem;
        }

        .tot-detail-value {
            font-weight: 500;
        }

        .tot-actions-inline {
            display: flex;
            flex-wrap: wrap;
            gap: .5rem;
        }

        /* approval strip */
        .tot-approval-card {
            border: 1px solid #e5e7eb;
            background: #f9fafb;
            border-radius: .5rem;
            padding: .5rem .6rem .6rem;
        }

            .tot-approval-card h3 {
                font-size: .7rem;
                text-transform: uppercase;
                letter-spacing: .03em;
                margin-bottom: .4rem;
                color: #4b5563;
            }

        @@media (max-width: 700px) {
            .tot-list-head,
            .tot-row {
                grid-template-columns: 1fr;
            }

            .tot-toolbar {
                flex-direction: column;
                align-items: flex-start;
            }

            .tot-toolbar-actions {
                justify-content: flex-start;
            }
        }
    </style>
}

@{
    ViewData["Title"] = "Transfer of Technology tracker";

    string StatusLabel(ProjectTotStatus status) => status switch
    {
        ProjectTotStatus.NotRequired => "Not required",
        ProjectTotStatus.NotStarted => "Not started",
        ProjectTotStatus.InProgress => "In progress",
        ProjectTotStatus.Completed => "Completed",
        _ => status.ToString()
    };

    string RequestStateLabel(ProjectTotRequestDecisionState state) => state switch
    {
        ProjectTotRequestDecisionState.Pending => "Pending approval",
        ProjectTotRequestDecisionState.Approved => "Approved",
        ProjectTotRequestDecisionState.Rejected => "Rejected",
        _ => state.ToString()
    };

    string TotStatusChipClass(ProjectTotStatus status) => status switch
    {
        ProjectTotStatus.NotRequired => "chip-status-not-required",
        ProjectTotStatus.NotStarted => "chip-status-not-started",
        ProjectTotStatus.InProgress => "chip-status-in-progress",
        ProjectTotStatus.Completed => "chip-status-completed",
        _ => "chip-status-not-started"
    };

    string RequestStateChipClass(ProjectTotRequestDecisionState state) => state switch
    {
        ProjectTotRequestDecisionState.Pending => "chip-decision-pending",
        ProjectTotRequestDecisionState.Approved => "chip-decision-approved",
        ProjectTotRequestDecisionState.Rejected => "chip-decision-rejected",
        _ => "chip-decision-pending"
    };

    string FoPmLabel(bool? value) => value switch
    {
        true => "Yes",
        false => "No",
        _ => "—"
    };

    var summary = Model.Summary;
    var selected = Model.SelectedProject;

    var totalCount = Model.Projects.Count;
    var resultCountText = totalCount == 0
        ? "No projects"
        : totalCount == 1
            ? "Showing 1 project"
            : $"Showing {totalCount} projects";

    var filterBits = new List<string>();
    if (!string.IsNullOrWhiteSpace(Model.SearchTerm)) filterBits.Add($"Search: “{Model.SearchTerm}”");
    if (Model.TotStatusFilter is { } f) filterBits.Add($"Status: {StatusLabel(f)}");
    if (Model.RequestStateFilter is { } rs) filterBits.Add($"Request: {RequestStateLabel(rs)}");
    if (Model.OnlyPending) filterBits.Add("Pending only");
    if (Model.RequiresTotOnly) filterBits.Add("Requires ToT");
    if (Model.MetCompletedOnly) filterBits.Add("MET completed");
    var filterSummary = filterBits.Any() ? string.Join(" · ", filterBits) : "No filters";
}

<div class="tot-shell">
    <!-- breadcrumb -->
    <nav aria-label="Breadcrumb" class="mb-2">
        <ol class="breadcrumb small mb-0">
            <li class="breadcrumb-item">
                <a asp-page="/Index">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-page="Summary">ToT tracker dashboard</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                ToT records
            </li>
        </ol>
    </nav>

    <!-- top toolbar -->
    <div class="tot-toolbar">
        <div class="tot-toolbar-title">
            <h1 class="mb-0">Transfer of Technology tracker</h1>
        </div>
        <div class="tot-toolbar-actions">
            @if (Model.Projects.Any())
            {
                <button type="button"
                        class="btn btn-outline-primary d-flex align-items-center gap-2"
                        data-bs-toggle="modal" data-bs-target="#tot-export-modal">
                    <i class="bi bi-file-earmark-spreadsheet" aria-hidden="true"></i>
                    <span>Export</span>
                </button>
            }
            else
            {
                <button type="button"
                        class="btn btn-outline-primary d-flex align-items-center gap-2"
                        disabled>
                    <i class="bi bi-file-earmark-spreadsheet" aria-hidden="true"></i>
                    <span>Export</span>
                </button>
            }

            <a class="btn btn-outline-secondary d-flex align-items-center gap-2"
               asp-page="Summary">
                <i class="bi bi-card-list" aria-hidden="true"></i>
                <span>Summary view</span>
            </a>

            <button type="button"
                    class="btn btn-light d-flex align-items-center gap-2"
                    data-bs-toggle="modal"
                    data-bs-target="#tot-filter-modal">
                <i class="bi bi-filter" aria-hidden="true"></i>
                <span>More filters</span>
            </button>
        </div>
    </div>

    <!-- alerts -->
    @if (TempData["ToastError"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @err
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Toast"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ok
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- context bar -->
    <div class="tot-context-bar" aria-label="Current ToT view summary">
        <div class="tot-context-left">
            <span class="tot-pill"><strong>@resultCountText</strong></span>
            <span class="tot-pill tot-pill-muted">@filterSummary</span>
        </div>
        <div>
            <span class="tot-pill">
                Pending approvals: <strong>@summary.PendingApprovals</strong>
            </span>
        </div>
    </div>

    <!-- main workspace -->
    <div class="tot-workspace-grid">
        <!-- left: list -->
        <div class="tot-list-panel" aria-label="ToT records">
            @if (!Model.Projects.Any())
            {
                <div class="p-4 text-center text-muted">No projects match the current filters.</div>
            }
            else
            {
                <!-- inline search -->
                <form method="get" class="tot-searchbar" role="search">
                    <input type="hidden" name="TotStatusFilter" value="@Model.TotStatusFilter" />
                    <input type="hidden" name="RequestStateFilter" value="@Model.RequestStateFilter" />
                    <input type="hidden" name="OnlyPending" value="@Model.OnlyPending" />
                    <input type="hidden" name="RequiresTotOnly" value="@Model.RequiresTotOnly" />
                    <input type="hidden" name="MetCompletedOnly" value="@Model.MetCompletedOnly" />
                    <input type="hidden" name="SelectedProjectId" value="@Model.SelectedProjectId" />

                    <div class="input-group input-group-sm pm-util-maxw-320">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search" aria-hidden="true"></i>
                        </span>
                        <input name="SearchTerm"
                               value="@Model.SearchTerm"
                               class="form-control border-start-0"
                               type="search"
                               placeholder="Search projects, units…" />
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary">Search</button>
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary"
                            data-bs-toggle="modal"
                            data-bs-target="#tot-filter-modal">
                        Filters
                    </button>
                </form>

                <div class="tot-list-body">
                    <div class="tot-list-head">
                        <div>Project</div>
                        <div>ToT status</div>
                        <div>Started</div>
                        <div>Completed</div>
                        <div>MET</div>
                        <div>Request</div>
                    </div>

                    @foreach (var row in Model.Projects)
                    {
                        var isSelected = Model.SelectedProjectId.HasValue && Model.SelectedProjectId.Value == row.ProjectId;
                        <a class="tot-row @(isSelected ? "is-selected" : "")"
                           asp-page="./Index"
                           asp-route-TotStatusFilter="@Model.TotStatusFilter"
                           asp-route-RequestStateFilter="@Model.RequestStateFilter"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-OnlyPending="@Model.OnlyPending"
                           asp-route-RequiresTotOnly="@Model.RequiresTotOnly"
                           asp-route-MetCompletedOnly="@Model.MetCompletedOnly"
                           asp-route-SelectedProjectId="@row.ProjectId">
                            <div>
                                <div class="tot-row-title">@row.ProjectName</div>
                                @if (!string.IsNullOrWhiteSpace(row.SponsoringUnit))
                                {
                                    <div class="tot-row-sub">@row.SponsoringUnit</div>
                                }
                            </div>
                            <div>
                                <span class="chip-sm @TotStatusChipClass(row.TotStatus ?? ProjectTotStatus.NotStarted)">
                                    @StatusLabel(row.TotStatus ?? ProjectTotStatus.NotStarted)
                                </span>
                            </div>
                            <div class="small">
                                @(row.TotStartedOn?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) ?? "—")
                            </div>
                            <div class="small">
                                @(row.TotCompletedOn?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) ?? "—")
                            </div>
                            <div class="small">
                                @(row.TotMetCompletedOn?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) ?? "—")
                            </div>
                            <div class="small">
                                @if (row.RequestState is { } rstate)
                                {
                                    <span class="chip-sm @RequestStateChipClass(rstate)">
                                        @RequestStateLabel(rstate)
                                    </span>
                                    @* extra visibility for approvers *@
                                    @if (Model.CanApprove && rstate == ProjectTotRequestDecisionState.Pending)
                                    {
                                        <span class="text-danger small d-block">Needs decision</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">No request</span>
                                }
                            </div>
                        </a>
                    }
                </div>
            }
        </div>

        <!-- right: detail -->
        <div class="tot-detail-panel" aria-label="Selected project details">
            @if (selected is null)
            {
                <div class="text-muted pm-util-mt-025">
                    Select a project from the list to view its milestones, latest request and actions.
                </div>
            }
            else
            {
                <div class="d-flex justify-content-between align-items-start gap-2">
                    <div>
                        <h2 class="h6 mb-1">@selected.ProjectName</h2>
                        @if (!string.IsNullOrWhiteSpace(selected.SponsoringUnit))
                        {
                            <div class="text-muted small">@selected.SponsoringUnit</div>
                        }
                    </div>
                    <div class="d-flex gap-2 flex-wrap">
                        <span class="chip-sm @TotStatusChipClass(selected.TotStatus ?? ProjectTotStatus.NotStarted)">
                            @StatusLabel(selected.TotStatus ?? ProjectTotStatus.NotStarted)
                        </span>
                        @if (selected.RequestState is { } sstate)
                        {
                            <span class="chip-sm @RequestStateChipClass(sstate)">
                                @RequestStateLabel(sstate)
                            </span>
                        }
                    </div>
                </div>

                <div class="tot-detail-grid">
                    <div class="tot-detail-block">
                        <div class="tot-detail-label">Started on</div>
                        <div class="tot-detail-value">
                            @(selected.TotStartedOn?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) ?? "—")
                        </div>
                    </div>
                    <div class="tot-detail-block">
                        <div class="tot-detail-label">Completed on</div>
                        <div class="tot-detail-value">
                            @(selected.TotCompletedOn?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) ?? "—")
                        </div>
                    </div>
                    <div class="tot-detail-block">
                        <div class="tot-detail-label">MET details</div>
                        <div class="tot-detail-value">
                            @(string.IsNullOrWhiteSpace(selected.TotMetDetails) ? "—" : selected.TotMetDetails)
                        </div>
                    </div>
                    <div class="tot-detail-block">
                        <div class="tot-detail-label">MET completed</div>
                        <div class="tot-detail-value">
                            @(selected.TotMetCompletedOn?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) ?? "—")
                        </div>
                    </div>
                    <div class="tot-detail-block">
                        <div class="tot-detail-label">First production model</div>
                        <div class="tot-detail-value">
                            @FoPmLabel(selected.TotFirstProductionModelManufactured)
                        </div>
                    </div>
                    <div class="tot-detail-block">
                        <div class="tot-detail-label">Manufactured on</div>
                        <div class="tot-detail-value">
                            @(selected.TotFirstProductionModelManufacturedOn?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) ?? "—")
                        </div>
                    </div>
                </div>

                <div class="tot-actions-inline">
                    @* IMPORTANT: HoD / approver should not see the submit modal, they should see the approval block below *@
                    @if (!Model.CanApprove && Model.CanSubmit)
                    {
                        <button type="button"
                                class="btn btn-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#tot-submit-modal">
                            Submit update
                        </button>
                    }

                    <a class="btn btn-outline-secondary"
                       asp-page="/Projects/Overview"
                       asp-route-id="@selected.ProjectId">
                        Open project
                    </a>

                    @if (selected.RequestState is not null)
                    {
                        <button type="button"
                                class="btn btn-light"
                                data-bs-toggle="modal"
                                data-bs-target="#tot-request-modal">
                            Latest ToT request
                        </button>
                    }
                </div>

                @* APPROVAL CARD – this is what we had lost *@
                @if (Model.CanApprove && selected.RequestState == ProjectTotRequestDecisionState.Pending)
                {
                    <div class="tot-approval-card mt-2">
                        <h3>HoD decision</h3>
                        <form method="post" asp-page-handler="Decide">
                            <input asp-for="DecideInput.ProjectId" type="hidden" />
                            <input asp-for="DecideInput.RowVersion" type="hidden" />

                            <div class="mb-2">
                                <label asp-for="DecideContextBody" class="form-label small mb-1">Decision context (optional)</label>
                                <textarea asp-for="DecideContextBody" rows="2" class="form-control form-control-sm"></textarea>
                                <span asp-validation-for="DecideContextBody" class="text-danger small"></span>
                            </div>

                            <div class="btn-group btn-group-sm" role="group" aria-label="Approve or reject ToT update">
                                <button type="submit"
                                        name="DecideInput.Approve"
                                        value="true"
                                        class="btn btn-success">
                                    Approve
                                </button>
                                <button type="submit"
                                        name="DecideInput.Approve"
                                        value="false"
                                        class="btn btn-outline-danger">
                                    Reject
                                </button>
                            </div>
                        </form>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- filter modal -->
<partial name="_TotFiltersModal" model="Model" />

<!-- export modal -->
<div class="modal fade" id="tot-export-modal" tabindex="-1" aria-labelledby="tot-export-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-page-handler="Export">
                <div class="modal-header">
                    <h2 class="modal-title fs-5" id="tot-export-modal-label">Export ToT data</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted mb-3">The current filters will be sent along, so export matches what you see.</p>
                    <input type="hidden" asp-for="SelectedProjectId" />
                    <input type="hidden" asp-for="TotStatusFilter" />
                    <input type="hidden" asp-for="RequestStateFilter" />
                    <input type="hidden" asp-for="SearchTerm" />
                    <input type="hidden" asp-for="OnlyPending" />
                    <input type="hidden" asp-for="RequiresTotOnly" />
                    <input type="hidden" asp-for="MetCompletedOnly" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                        <i class="bi bi-file-earmark-spreadsheet" aria-hidden="true"></i>
                        <span>Export workbook</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- latest request modal -->
@if (selected is { } selectedWithRequest && selectedWithRequest.RequestState is not null)
{
    <partial name="_LatestTotRequestModal" model="selectedWithRequest" />
}

<!-- submit modal -->
@if (Model.CanSubmit)
{
    <div class="modal fade" id="tot-submit-modal" tabindex="-1" aria-labelledby="tot-submit-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title fs-5" id="tot-submit-modal-label">Submit update for HoD approval</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <partial name="_SubmitTotUpdateModal" model="Model" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts
{
    <script type="module" src="~/js/pages/project-office-reports/tot.js" asp-append-version="true"></script>
}
