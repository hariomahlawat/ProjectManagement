                                                        <span class="tot-remark-meta-item">
                                                            <i class="bi bi-clock-history" aria-hidden="true"></i>
                                                            <span class="tot-remark-meta-label">Posted</span>
                                                            <span>@(FormatTimestamp(internalRemark.CreatedAtUtc) ?? "—")</span>
