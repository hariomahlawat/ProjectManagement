@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Ipr.ManageModel
@{
    ViewData["Title"] = "Manage patent records";
    var toastMessage = TempData["ToastMessage"] as string;
    var toastError = TempData["ToastError"] as string;
}

<div class="container-fluid py-3">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-2 mb-3">
        <div>
            <p class="text-uppercase text-muted small mb-1">Project office reports</p>
            <h1 class="h4 mb-2">Manage patent records</h1>
            <nav aria-label="Breadcrumb">
                <ol class="breadcrumb mb-0 small">
                    <li class="breadcrumb-item"><a asp-area="" asp-page="/Dashboard/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="ProjectOfficeReports" asp-page="/Ipr/Index">Patent tracker</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Manage patent records</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(toastMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @toastMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(toastError))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @toastError
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-3">
        <div class="col-12 col-lg-7">
            <div class="card h-100">
                <div class="card-header d-flex flex-column flex-md-row gap-2 justify-content-between align-items-md-center">
                    <span class="fw-semibold">Patent records</span>
                    <form method="get" class="d-flex flex-column flex-sm-row gap-2 align-items-stretch align-items-sm-center">
                        <input asp-for="Query"
                               class="form-control form-control-sm"
                               type="search"
                               placeholder="Search filing number or title" />
                        <div class="d-flex gap-2">
                            <button class="btn btn-sm btn-outline-primary" type="submit">Search</button>
                            <a class="btn btn-sm btn-outline-secondary" asp-page="./Manage">Clear</a>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="pm-util-col-140">Filing no.</th>
                                <th>Title</th>
                                <th class="pm-util-col-140">Type</th>
                                <th class="pm-util-col-160">Status</th>
                                <th class="pm-util-col-160">Project</th>
                                <th class="pm-util-col-140"></th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model.Records.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">No records found.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var record in Model.Records)
                            {
                                <tr class="@(Model.EditId == record.Id ? "table-primary" : string.Empty)">
                                    <td class="font-monospace">@record.FilingNumber</td>
                                    <td>@(string.IsNullOrWhiteSpace(record.Title) ? "—" : record.Title)</td>
                                    <td>@record.TypeLabel</td>
                                    <td>@record.StatusLabel</td>
                                    <td>@(string.IsNullOrWhiteSpace(record.ProjectName) ? "—" : record.ProjectName)</td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary"
                                           asp-page="./Manage"
                                           asp-route-editId="@record.Id"
                                           asp-route-Query="@Model.Query">
                                            Edit
                                        </a>
                                        <form method="post" asp-page-handler="Delete" class="d-inline">
                                            <input type="hidden" name="id" value="@record.Id" />
                                            <input type="hidden" name="rowVersion" value="@record.RowVersion" />
                                            <input type="hidden" name="Query" value="@Model.Query" />
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                                    data-manage-ipr-delete="true"
                                                    data-record-title="@record.Title">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-5">
            <div class="card h-100">
                <div class="card-header">
                    <span class="fw-semibold">@(Model.EditId.HasValue ? "Edit patent record" : "Add patent record")</span>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    @if (!Model.EditId.HasValue)
                    {
                        <form method="post" asp-page-handler="Create" id="iprCreateForm" class="row g-3">
                            <input type="hidden" name="Query" value="@Model.Query" />
                            @await Html.PartialAsync("_IprFormFields", Model)
                            <div class="col-12 d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Create</button>
                                <a asp-page="./Manage" class="btn btn-outline-secondary">Reset</a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="Update" id="iprEditForm" class="row g-3">
                            <input type="hidden" asp-for="Input.Id" />
                            <input type="hidden" asp-for="Input.RowVersion" />
                            <input type="hidden" name="Query" value="@Model.Query" />
                            @await Html.PartialAsync("_IprFormFields", Model)
                            <div class="col-12 d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Save changes</button>
                                <a asp-page="./Manage"
                                   asp-route-Query="@Model.Query"
                                   class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>

                        @if (Model.Input.Id.HasValue)
                        {
                            <hr class="my-4" />

                            <section aria-label="Patent attachments">
                                <header class="mb-3">
                                    <h2 class="h6 mb-1">Attachments</h2>
                                    <p class="text-muted mb-0">Upload supporting documents or remove outdated files.</p>
                                </header>

                                <div class="mb-4">
                                    @if (Model.Attachments.Count == 0)
                                    {
                                        <p class="text-muted mb-0">No attachments yet.</p>
                                    }
                                    else
                                    {
                                        <ul class="list-group">
                                            @foreach (var attachment in Model.Attachments)
                                            {
                                                <li class="list-group-item d-flex flex-column flex-md-row align-items-md-center gap-2">
                                                    <div class="flex-fill">
                                                        <div class="fw-semibold">
                                                            <a asp-page="Download"
                                                               asp-route-iprRecordId="@Model.Input.Id"
                                                               asp-route-attachmentId="@attachment.Id"
                                                               target="_blank"
                                                               rel="noopener noreferrer">
                                                                @attachment.FileName
                                                            </a>
                                                        </div>
                                                        <div class="text-muted small">
                                                            @Model.FormatFileSize(attachment.FileSize)
                                                            &middot; Uploaded by @attachment.UploadedBy on @Model.FormatAttachmentTimestamp(attachment.UploadedAtUtc)
                                                        </div>
                                                    </div>
                                                    <form method="post" asp-page-handler="RemoveAttachment" class="d-flex">
                                                        <input type="hidden" name="RemoveAttachment.AttachmentId" value="@attachment.Id" />
                                                        <input type="hidden" name="RemoveAttachment.RecordId" value="@Model.Input.Id" />
                                                        <input type="hidden" name="RemoveAttachment.RowVersion" value="@attachment.RowVersion" />
                                                        <input type="hidden" name="Query" value="@Model.Query" />
                                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                                            <i class="bi bi-trash" aria-hidden="true"></i>
                                                            <span class="visually-hidden">Remove attachment</span>
                                                        </button>
                                                    </form>
                                                </li>
                                            }
                                        </ul>
                                    }
                                </div>

                                <form method="post"
                                      asp-page-handler="Attach"
                                      enctype="multipart/form-data"
                                      class="row g-3 align-items-end"
                                      id="iprAttachmentForm">
                                    <input type="hidden" asp-for="UploadInput.RecordId" />
                                    <input type="hidden" name="Query" value="@Model.Query" />
                                    <div class="col-12 col-md-8">
                                        <label asp-for="UploadInput.File" class="form-label">Add attachment</label>
                                        <input asp-for="UploadInput.File" class="form-control" type="file" />
                                        <span asp-validation-for="UploadInput.File" class="text-danger"></span>
                                    </div>
                                    <div class="col-12 col-md-4">
                                        <button type="submit" class="btn btn-outline-primary w-100">Upload</button>
                                    </div>
                                </form>
                            </section>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/project-office-reports/ipr/manage.js" asp-append-version="true"></script>
}
