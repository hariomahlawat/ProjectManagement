@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Ipr.ManageModel
@{
    ViewData["Title"] = "Manage IPR";
    var toastMessage = TempData["ToastMessage"] as string;
    var toastError = TempData["ToastError"] as string;
}

<div class="container-fluid py-3">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-2 mb-3">
        <div>
            <p class="text-uppercase text-muted small mb-1">Project office reports</p>
            <h1 class="h4 mb-0">Manage IPR</h1>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-page="./Index">Back to tracker</a>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(toastMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @toastMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(toastError))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @toastError
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-3">
        <div class="col-12 col-lg-7">
            <div class="card h-100">
                <div class="card-header d-flex flex-column flex-md-row gap-2 justify-content-between align-items-md-center">
                    <span class="fw-semibold">IPR records</span>
                    <form method="get" class="d-flex flex-column flex-sm-row gap-2 align-items-stretch align-items-sm-center">
                        <input asp-for="Query"
                               class="form-control form-control-sm"
                               type="search"
                               placeholder="Search filing number or title" />
                        <div class="d-flex gap-2">
                            <button class="btn btn-sm btn-outline-primary" type="submit">Search</button>
                            <a class="btn btn-sm btn-outline-secondary" asp-page="./Manage">Clear</a>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead>
                            <tr>
                                <th style="width: 140px;">Filing no.</th>
                                <th>Title</th>
                                <th style="width: 140px;">Type</th>
                                <th style="width: 160px;">Status</th>
                                <th style="width: 160px;">Project</th>
                                <th style="width: 140px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model.Records.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">No records found.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var record in Model.Records)
                            {
                                <tr class="@(Model.EditId == record.Id ? "table-primary" : string.Empty)">
                                    <td class="font-monospace">@record.FilingNumber</td>
                                    <td>@(string.IsNullOrWhiteSpace(record.Title) ? "—" : record.Title)</td>
                                    <td>@record.TypeLabel</td>
                                    <td>@record.StatusLabel</td>
                                    <td>@(string.IsNullOrWhiteSpace(record.ProjectName) ? "—" : record.ProjectName)</td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary"
                                           asp-page="./Manage"
                                           asp-route-editId="@record.Id"
                                           asp-route-Query="@Model.Query">
                                            Edit
                                        </a>
                                        <form method="post" asp-page-handler="Delete" class="d-inline">
                                            <input type="hidden" name="id" value="@record.Id" />
                                            <input type="hidden" name="rowVersion" value="@record.RowVersion" />
                                            <input type="hidden" name="Query" value="@Model.Query" />
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                                    data-manage-ipr-delete="true"
                                                    data-record-title="@record.Title">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-5">
            <div class="card h-100">
                <div class="card-header">
                    <span class="fw-semibold">@(Model.EditId.HasValue ? "Edit IPR" : "Add IPR")</span>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    @if (!Model.EditId.HasValue)
                    {
                        <form method="post" asp-page-handler="Create" id="iprCreateForm" class="row g-3">
                            <input type="hidden" name="Query" value="@Model.Query" />
                            @await Html.PartialAsync("_IprFormFields", Model)
                            <div class="col-12 d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Create</button>
                                <a asp-page="./Manage" class="btn btn-outline-secondary">Reset</a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="Update" id="iprEditForm" class="row g-3">
                            <input type="hidden" asp-for="Input.Id" />
                            <input type="hidden" asp-for="Input.RowVersion" />
                            <input type="hidden" name="Query" value="@Model.Query" />
                            @await Html.PartialAsync("_IprFormFields", Model)
                            <div class="col-12 d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Save changes</button>
                                <a asp-page="./Manage"
                                   asp-route-Query="@Model.Query"
                                   class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/project-office-reports/ipr/manage.js" asp-append-version="true"></script>
}
