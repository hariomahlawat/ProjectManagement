@page "{id:guid}"
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Visits.EditModel
@{
    ViewData["Title"] = "Edit Visit";
}

@if (!Model.CanManage)
{
    <div class="alert alert-danger">You do not have permission to edit visits.</div>
}
else if (Model.PhotoGallery is null)
{
    <div class="alert alert-danger">Visit not found.</div>
}
else
{
    <div class="row g-4">
        <div class="col-xl-5">
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="h4 mb-3">Visit Details</h1>
                    <form method="post" novalidate>
                        <input type="hidden" asp-for="RowVersion" />
                        <div class="mb-3">
                            <label asp-for="Input.VisitTypeId" class="form-label"></label>
                            <select asp-for="Input.VisitTypeId" asp-items="Model.VisitTypeOptions" class="form-select"></select>
                            <span asp-validation-for="Input.VisitTypeId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.VisitorName" class="form-label"></label>
                            <input asp-for="Input.VisitorName" class="form-control" />
                            <span asp-validation-for="Input.VisitorName" class="text-danger"></span>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Input.DateOfVisit" class="form-label"></label>
                                <input asp-for="Input.DateOfVisit" class="form-control" type="date" />
                                <span asp-validation-for="Input.DateOfVisit" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.Strength" class="form-label"></label>
                                <input asp-for="Input.Strength" class="form-control" type="number" min="1" step="1" />
                                <span asp-validation-for="Input.Strength" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mt-3 mb-4">
                            <label asp-for="Input.Remarks" class="form-label"></label>
                            <textarea asp-for="Input.Remarks" class="form-control" rows="4" placeholder="Optional remarks"></textarea>
                            <span asp-validation-for="Input.Remarks" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-outline-secondary">Back to list</a>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h2 class="h5 mb-3">Upload Photo</h2>
                    <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
                        <input type="hidden" name="id" value="@Model.PhotoGallery.VisitId" />
                        <div class="mb-3">
                            <label class="form-label" for="visit-photo">Photo</label>
                            <input id="visit-photo" class="form-control" type="file" asp-for="Upload" accept="image/*" />
                            <span asp-validation-for="Upload" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UploadCaption" class="form-label">Caption (optional)</label>
                            <input asp-for="UploadCaption" class="form-control" />
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-outline-primary">Upload</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-xl-7">
            <partial name="_PhotosPartial" model="Model.PhotoGallery" />
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
