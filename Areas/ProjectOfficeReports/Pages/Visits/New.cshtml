@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Visits.NewModel
@{
    ViewData["Title"] = "New Visit";
}

@if (!Model.CanManage)
{
    <div class="visit-tracker">
        <div class="pm-card">
            <div class="pm-card-body">
                <div class="visit-empty text-center py-5">
                    <div class="visit-empty__icon" aria-hidden="true"><i class="bi bi-shield-lock"></i></div>
                    <h2 class="visit-empty__title">Access restricted</h2>
                    <p class="visit-empty__subtitle">You do not have permission to create visits.</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="visit-tracker">
        <div class="row g-4 align-items-start">
            <div class="col-xxl-5">
                <form method="post" enctype="multipart/form-data" novalidate class="visit-form">
                    <div class="pm-card h-100">
                        <div class="pm-card-header">
                            <div class="pm-card-heading">
                                <span class="pm-card-icon" aria-hidden="true"><i class="bi bi-clipboard-plus"></i></span>
                                <div>
                                    <h1 class="pm-card-title">Record a visit</h1>
                                    <p class="pm-card-subtitle mb-0">Capture the key details from your field engagement.</p>
                                </div>
                            </div>
                            <div class="pm-card-actions">
                                <a asp-page="Index" class="btn btn-outline-secondary">Back to visits</a>
                            </div>
                        </div>
                        <div class="pm-card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label asp-for="Input.VisitTypeId" class="form-label"></label>
                                    <select asp-for="Input.VisitTypeId" asp-items="Model.VisitTypeOptions" class="form-select"></select>
                                    <span asp-validation-for="Input.VisitTypeId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.DateOfVisit" class="form-label"></label>
                                    <input asp-for="Input.DateOfVisit" class="form-control" type="date" />
                                    <span asp-validation-for="Input.DateOfVisit" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.VisitorName" class="form-label"></label>
                                    <input asp-for="Input.VisitorName" class="form-control" placeholder="Name of visitor" />
                                    <span asp-validation-for="Input.VisitorName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.Strength" class="form-label"></label>
                                    <input asp-for="Input.Strength" class="form-control" type="number" min="1" step="1" placeholder="Team size" />
                                    <span asp-validation-for="Input.Strength" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Input.Remarks" class="form-label"></label>
                                    <textarea asp-for="Input.Remarks" class="form-control" rows="4" placeholder="Optional remarks or key observations"></textarea>
                                    <span asp-validation-for="Input.Remarks" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="pm-card mt-4">
                        <div class="pm-card-header">
                            <div class="pm-card-heading">
                                <span class="pm-card-icon" aria-hidden="true"><i class="bi bi-cloud-upload"></i></span>
                                <div>
                                    <h2 class="pm-card-title h5 mb-0">Upload photo</h2>
                                    <p class="pm-card-subtitle mb-0">Add visual evidence for this visit.</p>
                                </div>
                            </div>
                        </div>
                        <div class="pm-card-body">
                            <p class="text-muted small">Optional. The photo will be uploaded when you create the visit.</p>
                            <div class="mb-3">
                                <label class="form-label" for="visit-photo">Photo</label>
                                <input id="visit-photo" class="form-control" type="file" asp-for="Upload" accept="image/*" />
                                <span asp-validation-for="Upload" class="text-danger"></span>
                                <div class="form-text">JPEG, PNG or WebP up to 5 MB.</div>
                            </div>
                            <div class="mb-0">
                                <label asp-for="UploadCaption" class="form-label">Caption (optional)</label>
                                <input asp-for="UploadCaption" class="form-control" placeholder="What does this photo show?" />
                                <span asp-validation-for="UploadCaption" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="visit-form__footer mt-4">
                        <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Create visit</button>
                    </div>
                </form>
            </div>
            <div class="col-xxl-7">
                <div class="pm-card h-100">
                    <div class="pm-card-header">
                        <div class="pm-card-heading">
                            <span class="pm-card-icon" aria-hidden="true"><i class="bi bi-images"></i></span>
                            <div>
                                <h2 class="pm-card-title h4 mb-0">Photo gallery</h2>
                                <p class="pm-card-subtitle mb-0">Guidance for the images associated with this visit.</p>
                            </div>
                        </div>
                    </div>
                    <div class="pm-card-body">
                        <partial name="_PhotosPartial" model="Model.EmptyPhotoGallery" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
