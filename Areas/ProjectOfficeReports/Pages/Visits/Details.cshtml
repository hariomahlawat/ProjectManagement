@page "{id:guid}"
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Visits.DetailsModel
@{ 
    ViewData["Title"] = "Visit Details";
    var toastMessages = new List<VisitToastMessage>();
    if (TempData.TryGetValue("ToastMessage", out var toastMessageValue) && toastMessageValue is string toastMessage && !string.IsNullOrWhiteSpace(toastMessage))
    {
        toastMessages.Add(new VisitToastMessage(toastMessage, "success"));
    }

    if (TempData.TryGetValue("ToastError", out var toastErrorValue) && toastErrorValue is string toastError && !string.IsNullOrWhiteSpace(toastError))
    {
        toastMessages.Add(new VisitToastMessage(toastError, "danger"));
    }
}

<partial name="_ToastMessages" model="toastMessages" />

@if (Model.Visit is null)
{
    <div class="visit-tracker">
        <div class="pm-card">
            <div class="pm-card-body">
                <div class="visit-empty text-center py-5">
                    <div class="visit-empty__icon" aria-hidden="true"><i class="bi bi-emoji-frown"></i></div>
                    <h2 class="visit-empty__title">Visit not found</h2>
                    <p class="visit-empty__subtitle">It may have been removed or you might not have access to it anymore.</p>
                </div>
            </div>
        </div>
    </div>
}

else
{
    var visit = Model.Visit.Visit;
    var photoCount = Model.PhotoGallery?.Photos.Count ?? 0;
    <div class="visit-tracker">
        <div class="pm-card mb-4">
            <div class="pm-card-header">
                <div class="pm-card-heading">
                    <span class="pm-card-icon" aria-hidden="true"><i class="bi bi-geo-alt"></i></span>
                    <div>
                        <h1 class="pm-card-title">Visit details</h1>
                        <p class="pm-card-subtitle mb-0">Recorded on @visit.DateOfVisit.ToString("dddd, dd MMMM yyyy")</p>
                    </div>
                </div>
                <div class="pm-card-actions">
                    <a asp-page="Index" class="btn btn-outline-secondary">Back to visits</a>
                    @if (Model.CanManage)
                    {
                        <a asp-page="Edit" asp-route-id="@visit.Id" class="btn btn-outline-primary">Edit</a>
                        <form method="post" asp-page-handler="Delete" class="visit-row-actions__form" data-visits-disable-on-submit>
                            <input type="hidden" name="rowVersion" value="@Model.RowVersion" />
                            <button type="submit" class="btn btn-outline-danger" data-confirm="Delete this visit?" data-visits-busy-label="Deletingâ€¦">Delete</button>
                        </form>
                    }
                </div>
            </div>
            <div class="pm-card-body">
                <div class="visit-summary-grid">
                    <div class="visit-summary-grid__item">
                        <span class="visit-summary__label">Visit type</span>
                        <span class="visit-summary__value">@Model.Visit.VisitType.Name</span>
                    </div>
                    <div class="visit-summary-grid__item">
                        <span class="visit-summary__label">Visitor</span>
                        <span class="visit-summary__value">@visit.VisitorName</span>
                    </div>
                    <div class="visit-summary-grid__item">
                        <span class="visit-summary__label">Date of visit</span>
                        <span class="visit-summary__value">@visit.DateOfVisit.ToString("dd MMM yyyy") (@visit.DateOfVisit.ToString("dddd"))</span>
                    </div>
                    <div class="visit-summary-grid__item">
                        <span class="visit-summary__label">Report created on</span>
                        <span class="visit-summary__value">@visit.CreatedAtUtc.ToLocalTime().ToString("dd MMM yyyy, HH:mm")</span>
                    </div>
                </div>
                <div class="visit-summary-metrics">
                    <div class="visit-metric">
                        <span class="visit-metric__value">@visit.Strength</span>
                        <span class="visit-metric__label">People present</span>
                    </div>
                    <div class="visit-metric visit-metric--subtle">
                        <span class="visit-metric__value">@photoCount</span>
                        <span class="visit-metric__label">Photos captured</span>
                    </div>
                </div>
                <div class="visit-remarks mt-4">
                    <span class="visit-summary__label text-uppercase">Remarks</span>
                    @if (string.IsNullOrWhiteSpace(visit.Remarks))
                    {
                        <div class="visit-remarks__body visit-remarks__body--empty">No remarks recorded.</div>
                    }
                    else
                    {
                        <div class="visit-remarks__body">@visit.Remarks</div>
                    }
                </div>
            </div>
        </div>

        <div class="pm-card">
            <div class="pm-card-header">
                <div class="pm-card-heading">
                    <span class="pm-card-icon" aria-hidden="true"><i class="bi bi-images"></i></span>
                    <div>
                        <h2 class="pm-card-title h4 mb-0">Photo gallery</h2>
                        <p class="pm-card-subtitle mb-0">Field evidence captured during the visit.</p>
                    </div>
                </div>
            </div>
            <div class="pm-card-body">
                <partial name="_PhotosPartial" model="Model.PhotoGallery" />
            </div>
        </div>
    </div>
}

@section Scripts {
    <script type="module" src="~/js/pages/project-office-reports/visits.js" asp-append-version="true"></script>
}
