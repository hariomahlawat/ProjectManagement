@page "{id:guid}"
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.Visits.DetailsModel
@{
    ViewData["Title"] = "Visit Details";
}

@if (Model.Visit is null)
{
    <div class="alert alert-danger">Visit not found.</div>
}
else
{
    var visit = Model.Visit.Visit;
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Visit Details</h1>
            <div class="text-muted">Recorded on @visit.DateOfVisit.ToString("dd MMM yyyy")</div>
        </div>
        <div class="d-flex gap-2">
            @if (Model.CanManage)
            {
                <a asp-page="Edit" asp-route-id="@visit.Id" class="btn btn-outline-primary">Edit</a>
                <form method="post" asp-page-handler="Delete" class="d-inline">
                    <input type="hidden" name="rowVersion" value="@Model.RowVersion" />
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
            }
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="mb-3">
                        <div class="text-muted text-uppercase small">Visit type</div>
                        <div class="fw-semibold">@Model.Visit.VisitType.Name</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted text-uppercase small">Date</div>
                        <div>@visit.DateOfVisit.ToString("dddd, dd MMMM yyyy")</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted text-uppercase small">Visitor</div>
                        <div>@visit.VisitorName</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted text-uppercase small">Strength</div>
                        <div>@visit.Strength</div>
                    </div>
                    <div>
                        <div class="text-muted text-uppercase small">Remarks</div>
                        @if (string.IsNullOrWhiteSpace(visit.Remarks))
                        {
                            <div class="text-muted">No remarks recorded.</div>
                        }
                        else
                        {
                            <div>@visit.Remarks</div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <partial name="_PhotosPartial" model="Model.PhotoGallery" />
        </div>
    </div>
}
