@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.VisitTypes.NewModel
@{
    ViewData["Title"] = "New Visit Type";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
        <h1 class="h3 mb-3">New Visit Type</h1>
        <form method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Input.Name" class="form-label"></label>
                <input asp-for="Input.Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Description" class="form-label"></label>
                <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
