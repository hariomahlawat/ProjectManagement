@page
@model ProjectManagement.Areas.ProjectOfficeReports.Pages.MiscActivities.ActivityTypes.IndexModel
@{
    ViewData["Title"] = "Activity types";
}

<div class="d-flex flex-column flex-md-row align-items-md-center justify-content-md-between gap-3 mb-4">
    <div>
        <h1 class="h3 mb-1">Activity types</h1>
        <p class="text-muted mb-0">Available tags when recording misc activities.</p>
    </div>
</div>

@if (Model.Items.Count == 0)
{
    <div class="alert alert-info">
        No activity types have been published yet.
    </div>
}
else
{
    <div class="list-group shadow-sm">
        @foreach (var item in Model.Items)
        {
            <div class="list-group-item d-flex justify-content-between align-items-start">
                <div class="me-3">
                    <div class="fw-semibold">@item.Name</div>
                    @if (!string.IsNullOrWhiteSpace(item.Description))
                    {
                        <div class="text-muted small">@item.Description</div>
                    }
                    else
                    {
                        <div class="text-muted small">No description provided.</div>
                    }
                </div>
                @if (item.IsActive)
                {
                    <span class="badge text-bg-success align-self-center">Active</span>
                }
                else
                {
                    <span class="badge text-bg-secondary align-self-center">Inactive</span>
                }
            </div>
        }
    </div>
}
