{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=ProjectManagement;Username=postgres;Password=postgres;Include Error Detail=true"
  },
  "Storage": {
    "DataRoot": "D:/ProjectManagementData"
  },
  "DetailedErrors": false,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Todo": {
    "RetentionDays": 7,
    "MaxOpenTasks": 500
  },
  "Notifications": {
    "Retention": {
      "SweepInterval": "00:05:00",
      "MaxAge": "14.00:00:00",
      "MaxPerUser": 100
    }
  },
  "IprAttachments": {
    "MaxFileSizeBytes": 20971520,
    "AllowedContentTypes": [
      "application/pdf"
    ],
    "StorageFolderName": "ipr-attachments"
  },
  "FfcAttachments": {
    "MaxFileSizeBytes": 20971520
  },
  "ProjectPhotos": {
    "StorageRoot": "D:/ProjectManagementData/uploads",
    "MaxFileSizeBytes": 5242880,
    "MinWidth": 720,
    "MinHeight": 540,
    "AllowedContentTypes": [
      "image/jpeg",
      "image/png",
      "image/webp"
    ],
    "Derivatives": {
      "xl": { "Width": 1600, "Height": 1200, "Quality": 90 },
      "md": { "Width": 1200, "Height": 900, "Quality": 85 },
      "sm": { "Width": 800, "Height": 600, "Quality": 80 },
      "xs": { "Width": 400, "Height": 300, "Quality": 75 }
    },
    "MaxProcessingConcurrency": 2,
    "MaxEncodingConcurrency": 2
  },
  "ProjectDocuments": {
    "ProjectsSubpath": "projects",
    "PhotosSubpath": "",
    "StorageSubPath": "docs",
    "CommentsSubpath": "comments",
    "TempSubPath": "temp",
    "MaxSizeMb": 25,
    "AllowedMimeTypes": [
      "application/pdf",
      "application/msword",
      "application/vnd.ms-powerpoint",
      "application/vnd.ms-excel",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
      "application/vnd.openxmlformats-officedocument.presentationml.presentation",
      "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
    ],
    "EnableVirusScan": false,
    "Ocr": {
      "WorkRoot": "D:/ProjectManagementData/project-ocr",
      "InputSubpath": "input",
      "OutputSubpath": "output",
      "LogsSubpath": "logs",
      "OcrExecutablePath": "C:/Python311/Scripts/ocrmypdf.exe",
      "EnableWorker": true
    }
  },
  "ProjectVideos": {
    "MaxFileSizeBytes": 209715200,
    "AllowedContentTypes": [
      "video/mp4",
      "video/webm",
      "video/ogg"
    ],
    "PosterFileExtension": ".jpg"
  },
  "ProjectOfficeReports": {
    "VisitPhotos": {
      "MaxFileSizeBytes": 5242880,
      "MinWidth": 720,
      "MinHeight": 540,
      "AllowedContentTypes": [
        "image/jpeg",
        "image/png",
        "image/webp"
      ],
      "Derivatives": {
        "xl": { "Width": 1920, "Height": 1080, "Quality": 85 },
        "lg": { "Width": 1280, "Height": 720, "Quality": 85 },
        "md": { "Width": 800, "Height": 600, "Quality": 80 },
        "sm": { "Width": 640, "Height": 480, "Quality": 80 },
        "xs": { "Width": 400, "Height": 300, "Quality": 75 }
      },
      "StoragePrefix": "project-office-reports/visits"
    },
    "SocialMediaPhotos": {
      "MaxFileSizeBytes": 5242880,
      "AllowedContentTypes": [
        "image/jpeg",
        "image/png",
        "image/webp"
      ],
      "Derivatives": {
        "story": { "Width": 1080, "Height": 1920, "Quality": 85 },
        "feed": { "Width": 1200, "Height": 1200, "Quality": 85 },
        "thumb": { "Width": 600, "Height": 600, "Quality": 80 }
      },
      "StoragePrefix": "org/social/{eventId}"
    },
    "TrainingTracker": {
      "Enabled": true
    }
  },
  "DocRepo": {
    "EnableListViewUxUpgrade": true,
    "RootPath": "D:/ProjectManagementData/DocRepo",
    "EnableIngestion": true,
    "IngestionOfficeCategoryId": 1,
    "IngestionDocumentCategoryId": 1,
    "IngestionUserId": "system",
    "OcrWorkRoot": "ocr-work",
    "OcrInput": "input",
    "OcrOutput": "output",
    "OcrLogs": "logs",
    "EnableOcrWorker": true,
    "OcrExecutablePath": "C:/Python311/Scripts/ocrmypdf.exe",
    "MaxFileSizeBytes": 52428800
  },
  "SecurityHeaders": {
    "ContentSecurityPolicy": {
      "ConnectSources": []
    }
  }
}
